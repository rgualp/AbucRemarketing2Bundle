{% extends dashboard ? 'MyCpCasaModuleBundle:Default:dashboard.html.twig': 'MyCpCasaModuleBundle::layout.html.twig'%}

{% block content %}
<div class="row row-eq-height">
    <div class="col-md-9 white-bg">
        <div class="row">
            <div class="col-sm-1 col-xs-1">
                <img src="{{ asset('bundles/mycpcasamodule/img/Facilidades.png') }}" class="img-title-step m-t-25">
            </div>
            <div class="col-sm-11 col-xs-9">
        {% if dashboard is defined and dashboard %}
            <h2 class="font-blue">Facilidades</h2>
            <h3 class="font-blue">Seleccione las comodidades que posee su alojamiento</h3>
        {% else %}
                <h2 class="font-blue">Paso 4</h2>
                <h3 class="font-blue">Seleccione las comodidades para su oferta</h3>
            {% endif %}
            </div>
        </div>
        <div class="bg-gray m-t-20 col-md-11 font-black">
            <div class="facilities" id="facilities-div" data-url="{{ path("save_facilities") }}">
                <div class="row">
                    <div class="col-md-5">
                        <img src="{{ asset('bundles/mycpcasamodule/img/desayuno.png') }}" class="img-step4" >
                    <label class="control-label">Desayuno incluido</label>
                    </div>
                    <div class="col-md-1">
                    <input type="checkbox" class="js-switch" name="breakfast" id="breakfast" {% if ownership.ownFacilitiesBreakfast %}checked{% else %}data-cmpenabled=".facilitiesBreakfastWithPrice"{% endif %}/>
                    <input type="hidden" name="hasBreakfast" id="hasBreakfast" value="{{ ownership.ownFacilitiesBreakfast }}"/>
                    </div>

                    <div class="col-md-5 facilitiesBreakfastWithPrice {% if not ownership.ownFacilitiesBreakfastPrice %}hide{% endif %}">
                        <span class="font-blue step-span">{{ ownership.ownFacilitiesBreakfastPrice }} </span>
                        <label class="control-label"> CUC</label>
                    </div>
                    <div class="col-md-1 p-0 facilitiesBreakfastWithPrice  {% if not ownership.ownFacilitiesBreakfastPrice %}hide{% endif %}">
                            <a id="btn-change-breakfast" class="btn btn-primary changeBtn" data-cmpdisabled=".facilitiesBreakfastWithPrice" data-cmpenabled=".facilitiesBreakfastPrice">Cambiar</a>
                    </div>
                        <div class="col-md-6 facilitiesBreakfastPrice hide">
                            <label class="control-label">Precio</label>
                            <input type="number" min="0" name="facilitiesBreakfast" id="facilitiesBreakfast" class="form-control inline" value="{{ ownership.ownFacilitiesBreakfastPrice }}"/>
                        </div>
                </div>
                <div class="row m-t-10">
                    <div class="col-md-5">
                    <i class="glyphicons cutlery step-form-icon"></i>
                    <label class="control-label">Cena</label>
                    </div>
                    <div class="col-md-1">
                    <input type="checkbox" class="js-switch" name="dinner" id="dinner" {% if ownership.ownFacilitiesDinner %}checked{% else %}data-cmpenabled=".facilitiesDinnerWithPrice"{% endif %}/>
                    <input type="hidden" name="hasDinner" id="hasDinner" value="{{ ownership.ownFacilitiesDinner }}"/>
                    </div>

                    <div class="col-md-5 facilitiesDinnerWithPrice {% if not ownership.ownFacilitiesDinner %}hide{% endif %}">
                        <label class="control-label">Desde</label>
                        <span class="font-blue step-span">{{ ownership.ownFacilitiesDinnerPriceFrom }} </span>
                        <label class="control-label"> CUC</label>
                        <label class="control-label">Hasta</label>
                        <span class="font-blue step-span">{{ ownership.ownFacilitiesDinnerPriceTo }} </span>
                        <label class="control-label"> CUC</label>
                    </div>
                    <div class="col-md-1 p-0 facilitiesDinnerWithPrice {% if not ownership.ownFacilitiesDinner %}hide{% endif %}">
                        <a id="btn-change-dinner" class="btn btn-primary changeBtn" data-cmpdisabled=".facilitiesDinnerWithPrice" data-cmpenabled=".facilitiesDinnerPrice">Cambiar</a>
                    </div>
                    <div class="col-md-6 facilitiesDinnerPrice hide">
                        <label class="control-label">Precio</label>
                        <label class="control-label">Desde</label>
                        <input type="number" min="0" name="facilitiesDinnerFrom" id="facilitiesDinnerFrom" class="form-control inline" value="{{ ownership.ownFacilitiesDinnerPriceFrom }}"/>
                        <label class="control-label">Hasta</label>
                        <input type="number" min="0" name="facilitiesDinnerTo" id="facilitiesDinnerTo" class="form-control inline" value="{{ ownership.ownFacilitiesDinnerPriceTo }}"/>
                    </div>
                </div>
                <div class="row m-t-10">
                    <div class="col-md-5">
                    <i class="glyphicons car step-form-icon"></i>
                    <label class="control-label">Parqueo incluido</label>
                    </div>
                    <div class="col-md-1">
                    <input type="checkbox" class="js-switch" name="parking" id="parking" {% if ownership.ownFacilitiesParking %}checked{% else %}data-cmpenabled=".facilitiesParkingWithPrice"{% endif %}/>
                        <input type="hidden" name="hasParking" id="hasParking" value="{{ ownership.ownFacilitiesParking }}"/>
                    </div>
                    <div class="col-md-5 facilitiesParkingWithPrice {% if not ownership.ownFacilitiesParkingPrice %}hide{% endif %}">
                            <label class="control-label">Desde</label>
                            <span class="font-blue step-span">{{ ownership.ownFacilitiesParkingPrice }} </span>
                            <label class="control-label">CUC</label>
                    </div>
                    <div class="col-md-1 p-0 facilitiesParkingWithPrice {% if not ownership.ownFacilitiesParkingPrice %}hide{% endif %}">
                            <a id="btn-change-parking" class="btn btn-primary changeBtn" data-cmpdisabled=".facilitiesParkingWithPrice" data-cmpenabled=".facilitiesParkingPrice">Cambiar</a>
                    </div>
                        <div class="col-md-6 facilitiesParkingPrice hide">
                            <label class="control-label">Precio</label>
                            <input type="number" min="0" name="facilitiesParking" id="facilitiesParking" class="form-control inline" value="{{ ownership.ownFacilitiesParkingPrice }}"/>
                        </div>
                </div>
                <div class="row m-t-10">
                    <div class="col-md-5">
                        <img src="{{ asset('bundles/mycpcasamodule/img/jacuzze.png') }}" class="img-step4" >
                    <label class="control-label">Jacuzzi</label>
                    </div>
                    <div class="col-md-7">
                    <input type="checkbox" class="js-switch" name="jacuzzy" id="jacuzzy" {% if ownership.ownWaterJacuzee %}checked{% endif %}/>
                    </div>
                </div>

                <div class="row m-t-10">
                    <div class="col-md-5">
                        <img src="{{ asset('bundles/mycpcasamodule/img/sauna.png') }}" class="img-step4" >
                    <label class="control-label">Sauna</label>
                    </div>
                    <div class="col-md-7">
                    <input type="checkbox" class="js-switch" name="sauna" id="sauna" {% if ownership.ownWaterSauna %}checked{% endif %}/>
                    </div>
                </div>

                <div class="row m-t-10">
                    <div class="col-md-5">
                    <i class="glyphicons pool step-form-icon"></i>
                    <label class="control-label">Piscina</label>
                    </div>
                    <div class="col-md-7">
                    <input type="checkbox" class="js-switch" name="pool" id="pool" {% if ownership.ownWaterPiscina %}checked{% endif %}/>
                    </div>
                </div>
                <div class="row m-t-10">
                    <div class="col-md-5">
                    <i class="glyphicons bicycle step-form-icon"></i>
                    <label class="control-label">Parqueo de ciclos</label>
                    </div>
                    <div class="col-md-7">
                    <input type="checkbox" class="js-switch" name="parking_bike" id="parking_bike" {% if ownership.ownDescriptionBicycleParking %}checked{% endif %}/>
                    </div>
                </div>
                <div class="row m-t-10">
                    <div class="col-md-5">
                    <i class="glyphicons dog step-form-icon"></i>
                    <label class="control-label">Mascotas</label>
                    </div>
                    <div class="col-md-7">
                    <input type="checkbox" class="js-switch" name="pet" id="pet" {% if ownership.ownDescriptionPets %}checked{% endif %}/>
                    </div>
                </div>
                <div class="row m-t-10">
                    <div class="col-md-5">
                    <i class="glyphicons coat_hanger step-form-icon"></i>
                    <label class="control-label">Lavander√≠a</label>
                    </div>
                    <div class="col-md-7">
                    <input type="checkbox" class="js-switch" name="laundry" id="laundry" {% if ownership.ownDescriptionLaundry %}checked{% endif %}/>
                    </div>
                </div>
                <div class="row m-t-10">
                    <div class="col-md-5">
                    <i class="glyphicons envelope step-form-icon"></i>
                    <label class="control-label">Email (Internet)</label>
                    </div>
                    <div class="col-md-7">
                    <input type="checkbox" class="js-switch" name="email" id="email" {% if ownership.ownDescriptionInternet %}checked{% endif %}/>
                    </div>
                </div>


            </div>
        </div>

    </div>
    <div class="col-md-3 oneblue-bg col-content">

    </div>
</div>

    {% if dashboard is defined and dashboard %}
        <div class="row">
            <div class="col-md-8 text-center m-t-10">
                <button id="saveStepFacilities" class="btn btn-primary dim" type="button">Guardar</button>
                <span id="loading" class="hide">Procesando...</span>
            </div>
        </div>
    {% endif %}
{% endblock %}