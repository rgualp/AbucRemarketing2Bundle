<div class="row" style="padding-bottom: 10px;">
    <div class="col-xs-12 field-filter pull-right">
        {#
        <div class="btn-group m-t-n-xs pull-right" style="margin-left: 5px"><a class="btn btn-sm btn-search"> {{ 'btn.search' | trans }} </a></div>
        <div class="btn-group m-t-n-xs pull-right"><a class="btn btn-sm btn-search"> {{ 'btn.clear' | trans }} </a></div>
        #}

        {% if (status==constant('\\MyCp\\mycpBundle\\Entity\\generalReservation::STATUS_PENDING') or status==constant('\\MyCp\\mycpBundle\\Entity\\generalReservation::STATUS_AVAILABLE')) %}
            <div class="btn-group m-t-n-xs pull-right" style="margin-left: 5px"><a class="btn btn-sm btn-search" data-id-res="{{ id_res }}" onClick="executeCancel(this)"> {{ 'dashboard.btn.booking.cancel' | trans }} </a></div>
        {%endif%}
        {% if status==constant('\\MyCp\\mycpBundle\\Entity\\generalReservation::STATUS_AVAILABLE') %}
            <div class="btn-group m-t-n-xs pull-right" style="margin-left: 5px"><a class="btn btn-sm btn-search" onClick="paidBookingAction(this)"> {{ 'dashboard.btn.booking.paid' | trans }} </a></div>
        {%endif%}
    </div>
</div>
<script type="text/javascript">
    function paidBookingAction() {
        data['ids[0]'] = "{{ id_res }}";
        gotoUrl("{{ path("partner_dashboard_cart") }}", data, "POST");
    }
</script>



