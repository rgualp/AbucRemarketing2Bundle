{% set formFilter = form_search_booking_canceled.createView() %}
<div class="ibox card">
    <div class="ibox-title card">
        <span class="title-card">{{ "dashboard.booking.canceled" | trans }}</span>

        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>

    <div class="ibox-content card">
        <form id="form-booking-canceled" class="filter-form">
            <div class="row">
                <div class="col-lg-1 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon fa-letter">CAS</span>
                            {{ form_widget(formFilter.cas, { 'attr': {'placeholder': 'booking.placeholder.cas'|trans, 'title':'booking.placeholder.cas'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-1 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-qrcode"></i></span>
                            {{ form_widget(formFilter.code, { 'attr': {'placeholder': 'booking.placeholder.code'|trans, 'title':'booking.placeholder.code'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-home"></i></span>
                            {{ form_widget(formFilter.own_name, { 'attr': {'placeholder': 'booking.placeholder.own_name'|trans, 'title':'booking.placeholder.own_name'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-male"></i></span>
                            {{ form_widget(formFilter.client_dates, { 'attr': {'placeholder': 'dashboard.booking.client_dates'|trans, 'title':'dashboard.booking.client_dates'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-4"></div>
                <div class="col-xs-4"></div>
                <div class="col-xs-4 field-filter">
                    <div class="btn-group pull-right m-t-n-xs"><a class="btn btn-sm btn-search" onClick="filterCanceledAction(this)"> {{ 'btn.search' | trans }} </a></div>
                    <div class="btn-group pull-right m-t-n-xs" style="margin-right: 4px"><a class="btn btn-sm btn-search" onClick="clearCanceledAction(this)"> {{ 'btn.clear' | trans }} </a></div>
                </div>
            </div>
        </form>

        <div class="row" style="margin-top: 10px">
            <div class="col-sm-12" style="padding-left: 4px; padding-right: 4px;">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table id="table-booking-canceled" class="table table-striped table-bordered table-hover  dataTable " role="grid" aria-describedby="editable_info">
                                <thead>
                                <tr role="row">
                                    <th>{{ 'booking.title.name' | trans }}</th>
                                </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var oTableCanceled = '';

    $(document).ready(function () {
        oTableCanceled = $('#table-booking-canceled').DataTable({
            "bServerSide": true,
            "bFilter": false,
            "bLengthChange": false,
            "scrollX": false,
            "ajax": {
                "url": "{{ path('partner_dashboard_booking_list_canceled') }}",
                data: function (params) {
                    var inputs = $("#form-booking-canceled input,select");
                    inputs.each(function () {
                        var input = $(this);
                        var val = input.val();
                        var name = input.attr('name');
                        if (val && val != '' && name && name != '') {
                            params[input.attr('name')] = val;
                        }
                    });
                }
            },
            "aoColumnDefs": [
                {
                    "orderable": false,
                    "mData": null,
                    "aTargets": [0],
                    "mRender": function (data, type, full) {
                        var rooms = '';
                         /*var clientDates = '';
                        var booking_code = '';
                        for(var i = 0; i < data.rooms.length; i++){
                            var room = data.rooms[i];
                            booking_code = room.booking.code;
                            clientDates = room.booking.client_name;
                        }
                        rooms += '<em class="rt">CÃ³digo booking:</em> <span class="rst">' + booking_code + '</span> ';*/

                        var html = '<div class="row"> ' +
                                '<div class="col-xs-12"> ' +
                                '<em class="rt">{{"dashboard.booking.cas" | trans}}:</em> <span class="rst">' + data.cas + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.date" | trans}}:</em> <span class="rst">' + data.date + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.code" | trans}}:</em> <span class="rst">' + data.own_mcp_code + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.home" | trans}}:</em> <span class="rst">' + data.own_name + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.destination" | trans}}:</em> <span class="rst">' + data.destination + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.from" | trans}}:</em> <span class="rst">' + data.from + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.to" | trans}}:</em> <span class="rst">' + data.to + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.client_dates" | trans}}:</em> <span class="rst">' + data.client_dates + '</span> ' +
                                rooms
                        '</div> ' +
                        '</div>';
                        return html;
                    }
                }
            ],
            "columns": [
                {"data": 'data'}
            ],
            fnDrawCallback: function() {
                $("#table-booking-canceled thead").remove();
            }
        });
    });

    function filterCanceledAction() {
        oTableCanceled.ajax.reload();
    }

    function clearCanceledAction() {
        var inputs = $("#form-booking-canceled input,select");
        inputs.each(function () {
            var input = $(this);
            var val = input.val();
            var name = input.attr('name');
            if (val && val != '' && name && name != '') {
                input.val('');
                if (input.hasClass('chosen-select-deselect')) {
                    input.chosen().trigger("chosen:updated");
                }
            }
        });

        oTableCanceled.ajax.reload();
    }
</script>