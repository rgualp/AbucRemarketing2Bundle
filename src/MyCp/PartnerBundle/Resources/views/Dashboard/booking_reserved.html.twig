{% set formFilter = form_search_booking_reserved.createView() %}
<div class="ibox card">
    <div class="ibox-title card">
        <span class="title-card">{{ "dashboard.booking.reserved" | trans }}</span>

        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content card">
        <form id="form-booking-reserved" class="filter-form">
            <div class="row">
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-qrcode"></i></span>
                            {{ form_widget(formFilter.booking_code, { 'attr': {'placeholder': 'booking.placeholder.booking_code'|trans, 'title':'booking.placeholder.booking_code'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group date">
                            {{ form_widget(formFilter.booking_date, { 'attr': {'placeholder': 'booking.placeholder.booking_date'|trans, 'title':'booking.placeholder.booking_date'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-1 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-qrcode"></i></span>
                            {{ form_widget(formFilter.code, { 'attr': {'placeholder': 'booking.placeholder.code'|trans, 'title':'booking.placeholder.code'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group date">
                            {{ form_widget(formFilter.from, { 'attr': {'placeholder': 'booking.placeholder.from'|trans, 'title':'booking.placeholder.from'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group date">
                            {{ form_widget(formFilter.to, { 'attr': {'placeholder': 'booking.placeholder.to'|trans, 'title':'booking.placeholder.to'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        {{ form_widget(formFilter.destination, { 'attr': {'data-placeholder': 'booking.placeholder.destination'|trans, 'title':'booking.placeholder.destination'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control chosen-select-deselect' }}) }}
                    </div>
                </div>
                <div class="col-lg-1 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-male"></i></span>
                            {{ form_widget(formFilter.client_dates, { 'attr': {'placeholder': 'dashboard.booking.client_dates'|trans, 'title':'dashboard.booking.client_dates'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 field-filter pull-right">
                    <div class="btn-group m-t-n-xs pull-right" style="margin-left: 5px"><a class="btn btn-sm btn-search" onClick="filterReservedAction(this)"> {{ 'btn.search' | trans }} </a></div>
                    <div class="btn-group m-t-n-xs pull-right"><a class="btn btn-sm btn-search" onClick="clearReservedAction(this)"> {{ 'btn.clear' | trans }} </a></div>
                </div>
            </div>
        </form>

        <div class="row" style="margin-top: 10px">
            <div class="col-sm-12" style="padding-left: 4px; padding-right: 4px;">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table id="table-booking-reserved" class="table table-striped table-bordered table-hover  dataTable " role="grid" aria-describedby="editable_info">
                                <thead>
                                <tr role="row" class="hide">
                                    <th>{{ 'booking.title.name' | trans }}</th>
                                </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var oTableReserved = '';

    $(document).ready(function () {
        oTableReserved = $('#table-booking-reserved').DataTable({
            "language": {
                "url": "{{ asset('bundles/layout/js/plugins/dataTables/locale/') }}{{ app.request.locale }}.json"
            },
            "bServerSide": true,
            "bFilter": false,
            "bLengthChange": false,
            "scrollX": false,
            "ajax": {
                "url": "{{ path('partner_dashboard_booking_list_reserved') }}",
                data: function (params) {
                    var inputs = $("#form-booking-reserved input,select");
                    inputs.each(function () {
                        var input = $(this);
                        var val = input.val();
                        var name = input.attr('name');
                        if (val && val != '' && name && name != '') {
                            params[input.attr('name')] = val;
                        }
                    });
                }
            },
            "aoColumnDefs": [
                {
                    "orderable": false,
                    "mData": null,
                    "aTargets": [0],
                    "mRender": function (data, type, full) {
                        var adults = 0;
                        var childrens = 0;
                        var totalPrice = 0;
                        var curr_code;
                        var booking_code ='';
                        var date = '';
                        var room_types = [];
                        for(var i = 0; i < data.rooms.length; i++){
                            var room = data.rooms[i];
                            adults += room.adults;
                            childrens += room.childrens;
                            totalPrice += room.totalPrice;
                            curr_code = room.curr_code;
                            booking_code = room.booking.code;
                            date= room.booking.date;

                            if (room_types.hasOwnProperty(room.type)){
                                room_types[room.type]++;
                            }
                            else {
                                room_types[room.type] = 1;
                            }
                        }

                        var s_room_types = '';
                        for (var key in room_types) {
                            if (room_types.hasOwnProperty(key)) {
                                if(s_room_types == ''){
                                    s_room_types += " " + key + "(" + room_types[key] + ")";
                                }
                                else {
                                    s_room_types += " ," + key + "(" + room_types[key] + ")";
                                }
                            }
                        }
                        var rooms = '<em class="rt">{{"dashboard.booking.room_types" | trans}}:</em> <span class="rst">' + s_room_types + '</span> ' +
                                    /*'<em class="rt">{{"dashboard.booking.rooms" | trans}}:</em> <span class="rst">' + data.rooms.length + '</span> ' +*/
                                '<em class="rt">{{"dashboard.booking.adults" | trans}}:</em> <span class="rst">' + adults + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.childrens" | trans}}:</em> <span class="rst">' + childrens + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.totalprice" | trans}}:</em> <span class="rst">' + totalPrice + curr_code + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.bookingcode" | trans}}:</em> <span class="rst">' + booking_code + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.bookingdate" | trans}}:</em> <span class="rst">' + date + '</span> ';

                        var today = new Date();
                        var html = '<div class="row"> ' +
                                '<div class="col-xs-12"> ' +
                                '<em class="rt">{{"dashboard.booking.cas" | trans}}:</em> <span class="rst">' + data.cas + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.code" | trans}}:</em> <span class="rst">' + data.own_mcp_code + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.home" | trans}}:</em> <span class="rst">' + data.own_name + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.destination" | trans}}:</em> <span class="rst">' + data.destination + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.from" | trans}}:</em> <span class="rst">' + data.from + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.to" | trans}}:</em> <span class="rst">' + data.to + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.client_dates" | trans}}:</em> <span class="rst">' + data.client_dates + '</span> ' +
                                rooms + '<br>';
                                if (data.canBeCanceled)
                                    html += '<a class="cancelReservationFromDashboard" onClick="onCancelReservation(this)" ' +
                                    'data-cancelbutton="{{ "cart.alert.cancel_button" | trans }}" ' +
                                    'data-confirmbutton="{{ "cart.alert.confirm_button" | trans }}" ' +
                                    'data-alerttitle="{{ "cart.alert.title" | trans }}" ' +
                                    'data-alertcontent="{{ "cart.alert.content" | trans }}" ' +
                                    'data-url="{{ "cart.alert.content" | trans }}" ' +
                                    'data-id="'+data.id+'"> <span class="rt" style="float: right; margin-left: 20px;"> {{ 'label.cancel' | trans }} </span> </a>';

                        html += '<a data-href="{{ path("partner_dashboard_booking_detail") }}/' + data.id + '" onClick="executeAjaxEle(this)"> <span class="rt" style="float: right;"> {{ 'dashboard.booking.detail' | trans }} </span> </a>' +
                                '<a href="{{ path("partner_download_voucher") }}/' + booking_code + '"> <span class="rt" style="float: right; margin-right: 20px;"> {{ "partner.download.voucher" | trans }} </span> </a>' +
                        '</div> ' +
                        '</div>';
                        return html;
                    }
                }
            ],
            "columns": [
                {"data": 'data'}
            ],
            fnDrawCallback: function() {
                $("#table-booking-reserved thead").remove();
            }
        });
    });

    function filterReservedAction() {
        oTableReserved.ajax.reload();
    }

    function clearReservedAction() {
        var inputs = $("#form-booking-reserved input,select");
        inputs.each(function () {
            var input = $(this);
            var val = input.val();
            var name = input.attr('name');
            if (val && val != '' && name && name != '') {
                input.val('');
                if (input.hasClass('chosen-select-deselect')) {
                    input.chosen().trigger("chosen:updated");
                }
            }
        });

        oTableReserved.ajax.reload();
    }

    function onCancelReservation(that) {
        swal({
            title: that.data("alerttitle"),
            text: that.data("alertcontent"),
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: that.data("confirmbutton"),
            cancelButtonText: that.data("cancelbutton"),
            closeOnConfirm: false
        }, function () {
            var result = $('#cartBody');
            var id = that.data("id");
            var _url = that.data("url");

            //$("#loading_" + id).removeClass('hide');

            $.post(_url, {
                'reservationId': id
            }, function (response) {
                if (response.success) {

                }
            });
        });
    }
</script>