{% set formFilter = form_search_booking_availability.createView() %}
<div class="ibox card">
    <div class="ibox-title card">
        <span class="title-card">{{ "dashboard.booking.availability" | trans }}</span>

        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content card">
        <form id="form-booking-availability" class="filter-form">
            <div class="row">
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-qrcode"></i></span>
                            {{ form_widget(formFilter.code, { 'attr': {'placeholder': 'booking.placeholder.code'|trans, 'title':'booking.placeholder.code'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-home"></i></span>
                            {{ form_widget(formFilter.own_name, { 'attr': {'placeholder': 'booking.placeholder.own_name'|trans, 'title':'booking.placeholder.own_name'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group date">
                            {{ form_widget(formFilter.from, { 'attr': {'placeholder': 'booking.placeholder.from'|trans, 'title':'booking.placeholder.from'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group date">
                            {{ form_widget(formFilter.to, { 'attr': {'placeholder': 'booking.placeholder.to'|trans, 'title':'booking.placeholder.to'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        {{ form_widget(formFilter.destination, { 'attr': {'data-placeholder': 'booking.placeholder.destination'|trans, 'title':'booking.placeholder.destination'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control chosen-select-deselect' }}) }}
                    </div>
                </div>
                <div class="col-lg-1 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-male"></i></span>
                            {{ form_widget(formFilter.client_dates, { 'attr': {'placeholder': 'dashboard.booking.client_dates'|trans, 'title':'dashboard.booking.client_dates'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-1 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-tags"></i></span>
                            {{ form_widget(formFilter.room_number, { 'attr': {'placeholder': 'booking.placeholder.room_number'|trans, 'title':'booking.placeholder.room_number'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 field-filter pull-right">
                    <div class="btn-group m-t-n-xs pull-right" style="margin-left: 5px"><a class="btn btn-sm btn-search" onClick="filterAvailabilityAction(this)"> {{ 'btn.search' | trans }} </a></div>
                    <div class="btn-group m-t-n-xs pull-right"><a class="btn btn-sm btn-search" onClick="clearAvailabilityAction(this)"> {{ 'btn.clear' | trans }} </a></div>
                </div>
            </div>
        </form>

        <form id="form-cart-availability" class="hide" method="POST" action="{{ path("partner_dashboard_cart") }}" novalidate="true"></form>

        <div class="row" style="margin-top: 10px">
            <div class="col-sm-12" style="padding-left: 4px; padding-right: 4px;">
                <div class="ibox">
                    <div class="ibox-content">
                        <div id="select-all-availability" class="row">
                            <div class="col-xs-12" style="margin-top: 15px">
                                <label class="pull-left" style="margin-left: 10px;"> <input type="checkbox" class="i-checks"> {{ 'booking.title.selectall' | trans }} </label>

                                <div class="btn-group m-t-n-xs pull-left" style="margin-left: 10px;"><a class="btn btn-sm btn-search" onClick="paidAllBookingAction(this)"> {{ 'btn.paid_all_reservation' | trans }} </a></div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="table-booking-availability" class="table table-striped table-bordered table-hover  dataTable " role="grid" aria-describedby="editable_info">
                                <thead>
                                <tr role="row" class="hide">
                                    <th>{{ 'booking.title.select' | trans }}</th>
                                    <th>{{ 'booking.title.name' | trans }}</th>
                                </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var oTableAvailability = '';

    $(document).ready(function () {
        oTableAvailability = $('#table-booking-availability').DataTable({
            "language": {
                "url": "{{ asset('bundles/layout/js/plugins/dataTables/locale/') }}{{ app.request.locale }}.json"
            },
            "bServerSide": true,
            "bFilter": false,//true: Para sustituirlo por el add user
            "bLengthChange": false,
            "scrollX": false,
            "ajax": {
                "url": "{{ path('partner_dashboard_booking_list_availability') }}",
                data: function (params) {
                    var inputs = $("#form-booking-availability input,select");
                    inputs.each(function () {
                        var input = $(this);
                        var val = input.val();
                        var name = input.attr('name');
                        if (val && val != '' && name && name != '') {
                            params[input.attr('name')] = val;
                        }
                    });
                }
            },
            "aoColumnDefs": [
                {
                    "orderable": false,
                    "mData": null,
                    "aTargets": [0, 1],
                    "mRender": function (data, type, full) {
                        var html = '';

                        if (typeof data != 'number') {
                            var adults = 0;
                            var childrens = 0;
                            var totalPrice = 0;
                            var curr_code;
                            var room_types = [];
                            for (var i = 0; i < data.rooms.length; i++) {
                                var room = data.rooms[i];
                                adults += room.adults;
                                childrens += room.childrens;
                                totalPrice += room.totalPrice;
                                curr_code = room.curr_code;

                                if (room_types.hasOwnProperty(room.type)) {
                                    room_types[room.type]++;
                                }
                                else {
                                    room_types[room.type] = 1;
                                }
                            }

                            var s_room_types = '';
                            for (var key in room_types) {
                                if (room_types.hasOwnProperty(key)) {
                                    if (s_room_types == '') {
                                        s_room_types += " " + key + "(" + room_types[key] + ")";
                                    }
                                    else {
                                        s_room_types += " ," + key + "(" + room_types[key] + ")";
                                    }
                                }
                            }

                            var rooms = '<em class="rt">{{"dashboard.booking.room_types" | trans}}:</em> <span class="rst">' + s_room_types + '</span> ' +
                                    '<em class="rt">{{"dashboard.booking.adults" | trans}}:</em> <span class="rst">' + adults + '</span> ' +
                                    '<em class="rt">{{"dashboard.booking.childrens" | trans}}:</em> <span class="rst">' + childrens + '</span> ' +
                                    '<em class="rt">{{"dashboard.booking.totalprice" | trans}}:</em> <span class="rst">' + totalPrice + curr_code + '</span> ';

                            html = '<div class="row"> ' +
                                    '<div class="col-xs-12"> ' +
                                    '<em class="rt">{{"dashboard.booking.cas" | trans}}:</em> <span class="rst">' + data.cas + '</span> ' +
                                    '<em class="rt">{{"dashboard.booking.date" | trans}}:</em> <span class="rst">' + data.date + '</span> ' +
                                    '<em class="rt">{{"dashboard.booking.code" | trans}}:</em> <span class="rst">' + data.own_mcp_code + '</span> ' +
                                    '<em class="rt">{{"dashboard.booking.home" | trans}}:</em> <span class="rst">' + data.own_name + '</span> ' +
                                    '<em class="rt">{{"dashboard.booking.destination" | trans}}:</em> <span class="rst">' + data.destination + '</span> ' +
                                    '<em class="rt">{{"dashboard.booking.from" | trans}}:</em> <span class="rst">' + data.from + '</span> ' +
                                    '<em class="rt">{{"dashboard.booking.to" | trans}}:</em> <span class="rst">' + data.to + '</span> ' +
                                    '<em class="rt">{{"dashboard.booking.client_dates" | trans}}:</em> <span class="rst">' + data.client_dates + '</span> ' +
                                    rooms +
                                    '<a data-href="{{ path("partner_dashboard_booking_detail") }}/' + data.id + '" onClick="executeAjaxEle(this)"> <span class="rt" style="float: right;"> {{ 'dashboard.booking.detail' | trans }} </span> </a>' +
                                    '</div> ' +
                                    '</div>';
                        }
                        else {
                            html = '<input data-id="' + data + '" type="checkbox" class="i-checks">';
                        }

                        return html;
                    }
                }
            ],
            "columns": [
                {"data": 'id'},
                {"data": 'data'}
            ],
            fnDrawCallback: function () {
                $("#table-booking-availability thead").remove();

                $('#table-booking-availability .i-checks').iCheck({
                    checkboxClass: 'icheckbox_square-green',
                    radioClass: 'iradio_square-green',
                });
                $('#select-all-availability .i-checks').each(function () {
                    var input = $(this);
                    var v = false;
                    input.prop('checked', v);
                    input.iCheck('update');
                });
            }
        });

        var checks_all = $('#select-all-availability .i-checks').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
        });
        checks_all.on('ifChecked', function () {
            $('#table-booking-availability .i-checks').each(function () {
                var input = $(this);
                var v = true;
                input.prop('checked', v);
                input.iCheck('update');
            });
        });
        checks_all.on('ifUnchecked', function () {
            $('#table-booking-availability .i-checks').each(function () {
                var input = $(this);
                var v = false;
                input.prop('checked', v);
                input.iCheck('update');
            });
        });
    });

    function filterAvailabilityAction() {
        oTableAvailability.ajax.reload();
    }

    function clearAvailabilityAction() {
        var inputs = $("#form-booking-availability input,select");
        inputs.each(function () {
            var input = $(this);
            var val = input.val();
            var name = input.attr('name');
            if (val && val != '' && name && name != '') {
                input.val('');
                if (input.hasClass('chosen-select-deselect')) {
                    input.chosen().trigger("chosen:updated");
                }
            }
        });

        oTableAvailability.ajax.reload();
    }

    function paidAllBookingAction(link) {
        var ids = [];

        var cont = 0;
        var data = {};
        $('#table-booking-availability .i-checks').each(function () {
            var input = $(this);
            if (input.prop('checked')) {
                data['ids[' + cont + ']'] = input.data('id');
                cont++;
            }
        });

        if (cont <= 0) {
            return;
        }

        gotoUrl("{{ path("partner_dashboard_cart") }}", data, "POST");
    }
</script>