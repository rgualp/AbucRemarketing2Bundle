{% set formFilter = form_search_booking_checkin.createView() %}
<div class="ibox card">
    <div class="ibox-title card">
        <span class="title-card">{{ "dashboard.booking.checkin" | trans }}</span>

        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
            <a class="close-link">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="ibox-content card">
        <form id="form-booking-checkin" class="filter-form">
            <div class="row">
                {#<div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon fa-letter">CAS</span>
                            {{ form_widget(formFilter.cas, { 'attr': {'placeholder': 'booking.placeholder.cas'|trans, 'title':'booking.placeholder.cas'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>#}
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-qrcode"></i></span>
                            {{ form_widget(formFilter.booking_code, { 'attr': {'placeholder': 'booking.placeholder.booking_code'|trans, 'title':'booking.placeholder.booking_code'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-qrcode"></i></span>
                            {{ form_widget(formFilter.code, { 'attr': {'placeholder': 'booking.placeholder.code'|trans, 'title':'booking.placeholder.code'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group date">
                            {{ form_widget(formFilter.from, { 'attr': {'placeholder': 'booking.placeholder.from'|trans, 'title':'booking.placeholder.from'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group date">
                            {{ form_widget(formFilter.to, { 'attr': {'placeholder': 'booking.placeholder.to'|trans, 'title':'booking.placeholder.to'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        {{ form_widget(formFilter.destination, { 'attr': {'data-placeholder': 'booking.placeholder.destination'|trans, 'title':'booking.placeholder.destination'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control chosen-select-deselect' }}) }}
                    </div>
                </div>
                <div class="col-lg-2 field-filter">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-male"></i></span>
                            {{ form_widget(formFilter.client_dates, { 'attr': {'placeholder': 'dashboard.booking.client_dates'|trans, 'title':'dashboard.booking.client_dates'|trans, 'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 field-filter pull-right">
                    <div class="btn-group m-t-n-xs pull-right" style="margin-left: 5px"><a class="btn btn-sm btn-search" onClick="filterCheckinAction(this)"> {{ 'btn.search' | trans }} </a></div>
                    <div class="btn-group m-t-n-xs pull-right"><a class="btn btn-sm btn-search" onClick="clearCheckinAction(this)"> {{ 'btn.clear' | trans }} </a></div>
                </div>
            </div>
        </form>

        <div class="row" style="margin-top: 10px">
            <div class="col-sm-12" style="padding-left: 4px; padding-right: 4px;">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-xs-12" style="margin-top: 15px">
                                <div class="btn-group m-t-n-xs pull-left"><a class="btn btn-sm btn-search"> {{ 'btn.export.checkin.reservation' | trans }} </a></div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="table-booking-checkin" class="table table-striped table-bordered table-hover  dataTable " role="grid" aria-describedby="editable_info">
                                <thead>
                                <tr role="row" class="hide">
                                    <th>{{ 'booking.title.name' | trans }}</th>
                                </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var oTableCheckin = '';

    $(document).ready(function () {
        oTableCheckin = $('#table-booking-checkin').DataTable({
            "language": {
                "url": "{{ asset('bundles/layout/js/plugins/dataTables/locale/') }}{{ app.request.locale }}.json"
            },
            "bServerSide": true,
            "bFilter": false,
            "bLengthChange": false,
            "scrollX": false,
            "ajax": {
                "url": "{{ path('partner_dashboard_booking_list_checkin') }}",
                data: function (params) {
                    var inputs = $("#form-booking-checkin input,select");
                    inputs.each(function () {
                        var input = $(this);
                        var val = input.val();
                        var name = input.attr('name');
                        if (val && val != '' && name && name != '') {
                            params[input.attr('name')] = val;
                        }
                    });
                }
            },
            "aoColumnDefs": [
                {
                    "orderable": false,
                    "mData": null,
                    "aTargets": [0],
                    "mRender": function (data, type, full) {
                        var totalPrice = 0;
                        var totalPriceInHome = 0;
                        var totalPriceInHomeX = 0;
                        var curr_code;
                        var booking_code ='';
                        var date = '';
                        var adults = 0;
                        var childrens = 0;
                        for(var i = 0; i < data.rooms.length; i++){
                            var room = data.rooms[i];
                            adults += room.adults;
                            childrens += room.childrens;
                            totalPrice += room.totalPrice;
                            totalPriceInHome += room.totalPriceInHome;
                            totalPriceInHomeX += room.totalPriceInHomeX;
                            curr_code = room.curr_code;
                            booking_code = room.booking.code;
                            date= room.booking.date;
                        }

                        var tp = '<em class="rt">{{"dashboard.booking.totalprice_inhome" | trans}}:</em> <span class="rst">' + totalPriceInHomeX + 'CUC(' + totalPriceInHome + curr_code + ')</span> ';
                        if(curr_code == "CUC"){
                            tp = '<em class="rt">{{"dashboard.booking.totalprice_inhome" | trans}}:</em> <span class="rst">' + totalPriceInHome + curr_code + '</span> ';
                        }

                        var html = '<div class="row"> ' +
                                '<div class="col-xs-12"> ' +
                                '<em class="rt">{{"dashboard.booking.booking_code" | trans}}:</em> <span class="rst">' + booking_code + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.code" | trans}}:</em> <span class="rst">' + data.own_mcp_code + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.home" | trans}}:</em> <span class="rst">' + data.own_name + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.destination" | trans}}:</em> <span class="rst">' + data.destination + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.from" | trans}}:</em> <span class="rst">' + data.from + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.to" | trans}}:</em> <span class="rst">' + data.to + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.client_dates" | trans}}:</em> <span class="rst">' + data.client_dates + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.rooms" | trans}}:</em> <span class="rst">' + data.rooms.length + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.adults" | trans}}:</em> <span class="rst">' + adults + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.childrens" | trans}}:</em> <span class="rst">' + childrens + '</span> ' +
                                '<em class="rt">{{"dashboard.booking.totalprice" | trans}}:</em> <span class="rst">' + totalPrice + curr_code + '</span> ' +
                                tp + '<br>' +
                                '<a data-href="{{ path("partner_dashboard_booking_detail") }}/' + data.id + '" onClick="executeAjaxEle(this)"> <span class="rt" style="float: right;"> {{ 'dashboard.booking.detail' | trans }} </span> </a>' +
                        '</div> ' +
                        '</div>';
                        return html;
                    }
                }
            ],
            "columns": [
                {"data": 'data'}
            ],
            fnDrawCallback: function() {
                $("#table-booking-checkin thead").remove();
            }
        });
    });

    function filterCheckinAction() {
        oTableCheckin.ajax.reload();
    }

    function clearCheckinAction() {
        var inputs = $("#form-booking-checkin input,select");
        inputs.each(function () {
            var input = $(this);
            var val = input.val();
            var name = input.attr('name');
            if (val && val != '' && name && name != '') {
                input.val('');
                if (input.hasClass('chosen-select-deselect')) {
                    input.chosen().trigger("chosen:updated");
                }
            }
        });

        oTableCheckin.ajax.reload();
    }
</script>