<div class="modal inmodal fade form-agency" id="myModalReservation" tabindex="-1" role="dialog"  aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header modal-header-agency" style="background-color: #25323b !important;">
                <button data-dismiss="modal" class="close" type="button"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
            </div>
            <div class="modal-body modal-reservation pb-0">
                <form class="form-horizontal form-agency agency" action="{{ path('frontend_partner_registeragency') }}" method="post" id="form-agency">
                    <div class="col-md-8">
                        <h3>{{ "pa.modal.reservation.title" | trans }}</h3>
                        <div class="row m-0">
                            <div class="row reservation-details">
                                <div class="row m-0">
                                    <div class="col-sm-6 p-0">
                                        {{ "pa.modal.reservation.reserve" | trans | upper }} 1
                                        <div class="smaller">23/09/2016</div>
                                    </div>
                                    <div class="col-sm-4 pr-0"><a>{{ "pa.modal.reservation.end_reservation" | trans }}</a></div>
                                    <div class="col-sm-2 pr-0 text-right"><a>{{ "pa.modal.reservation.add" | trans }}</a></div>
                                </div>
                                <div class="row m-0">
                                    <div class="col-md-5 p-0">
                                        <div class="input-group">
                                            <span class="input-group-addon borderless"><i class="glyphicons user"></i></span>
                                            <div class="smaller">Yanet Morales</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-right smaller green pr-0">
                                        {{ "pa.modal.reservation.guest_total" | trans }} <b class="bigger">12</b>
                                    </div>
                                    <div class="col-md-3 smaller green text-right pr-0">{{ "pa.modal.reservation.guest_with_reservation" | trans }} <b class="bigger">12</b></div>
                                </div>
                            </div>
                        </div>
                    </div>
                <div class="col-md-4">
                    <div class="row">
                    <h3 class="text-right">{{ "pa.modal.reservation.new_reservation" | trans }}</h3>
                    </div>
                        <div class="row">
                                <div class="input-group m-b">
                                    <span class="input-group-addon"><i class="glyphicons user"></i></span>
                                    {{ form_widget(form.name, { 'attr': {'placeholder': 'label.name.client'|trans,'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                                </div>
                         </div>
                    <div class="row">
                    <div class="col-md-6" style="padding-left: 0">
                                <div class="input-group m-b">
                                    <span class="input-group-addon"><i class="glyphicons user"></i></span>
                                    {{ form_widget(form.adults, { 'attr': {'placeholder': 'label.reservation.adults'|trans,'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                                </div>
                    </div>
                    <div class="col-md-6 pull-right" style="padding-right: 0">
                                <div class="input-group m-b">
                                    <span class="input-group-addon"><i class="glyphicons user"></i></span>
                                    {{ form_widget(form.children, { 'attr': {'placeholder': 'label.reservation.children'|trans,'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control' }}) }}
                                </div>
                            </div>
                        </div>
                    <div class="row text-right">
                        <a>{{ "pa.modal.reservation.add" | trans }}</a>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>