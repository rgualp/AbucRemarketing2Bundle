<div class="paSearcher row">
    <span class="color-white MyriadProBoldCond" style="font-size: 24px">{{ "pa_searcher_title" | trans }}</span>
    <div class="row">
        <div class="filters-container">
            <form enctype="multipart/form-data" method="post" id="form-filter-ownership">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="col-sm-2">
                            {{ form_widget(formFilterOwnerShip.destination, { 'attr': {'data-placeholder': 'label.name.destination'|trans,'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control chosen-select-deselect' }}) }}
                        </div>
                        <div class="col-sm-2"><div rel="tooltip" title="{{'ARRIVAL_WATERMARK' | trans}}" class="input-group" style="padding: 0">
                                {{ form_widget(formFilterOwnerShip.arrival, { 'attr': {'placeholder': 'label.filter.arrival'|trans,'data-toggle':'tooltip', 'data-container':'body'}}) }}
                                <span class="input-group-addon"><i class="glyphicons calendar"></i></span>
                            </div></div>
                        <div class="col-sm-2">
                            <div rel="tooltip" title="{{'DEPARTURE_WATERMARK' | trans}}" class="input-group" style="padding: 0">
                                {{ form_widget(formFilterOwnerShip.exit, { 'attr': {'placeholder': 'label.filter.exit'|trans,'data-toggle':'tooltip', 'data-container':'body'}}) }}
                                <span class="input-group-addon"><i class="glyphicons calendar"></i></span>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            {{ form_widget(formFilterOwnerShip.huesp, { 'attr': {'data-placeholder': 'pa_hues'|trans,'data-toggle':'tooltip', 'data-container':'body','class':'form-control chosen-select-deselect'}}) }}
                        </div>
                        <div class="col-sm-2">
                            {{ form_widget(formFilterOwnerShip.child, { 'attr': {'data-placeholder': 'pa_children'|trans,'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control chosen-select-deselect' }}) }}
                        </div>
                        <div class="col-sm-2">
                            {{ form_widget(formFilterOwnerShip.age, { 'attr': {'data-placeholder': 'pa_age'|trans,'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control chosen-select-deselect' }}) }}
                        </div>
                    </div>
                </div>
                <div class="row m-t-lg">
                    <div class="col-sm-12">
                        <div class="col-sm-3">
                            {{ form_widget(formFilterOwnerShip.room, { 'attr': {'data-placeholder': 'pa_hab'|trans,'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control chosen-select-deselect' }}) }}
                        </div>
                        <div class="col-sm-7 m-t-xs">
                            {% set count=owns_prices|length-1 %}
                            <input id="priceFilter" type="text" class="span2" style="width: 400px;" value="" data-slider-min="0" data-slider-max="{{ owns_prices[count][1] }}" data-slider-step="1" data-slider-value="[{{ owns_prices[0][0] }},40]"/>
                        </div>
                        <div class="col-sm-2">
                            <button id="btn_search" class="btn btn-search-ownership" >{{"SEARCH" | trans}}</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12" style="margin-top: -23px">
                        <div class="col-sm-3">
                        </div>
                        <div class="col-sm-3">
                            <b class="color-white" style="margin-right: 7px;">{{ owns_prices[0][0] }} cuc</b>
                        </div>
                        <div class="col-sm-3 color-white">
                            <span>{{ 'label.range-price' | trans }}</span>
                        </div>
                        <div class="col-sm-3 color-white">
                            <b style="margin-left: 7px;">{{ owns_prices[count][1] }} cuc</b>
                        </div>
                    </div>
                </div>
                <div class="row m-t-md color-white" id="more-filter">
                    <div class="col-md-12">
                        <div class="col-md-2">
                            {{ form_widget(formFilterOwnerShip.category, { 'attr': {'data-placeholder': 'pa_cate'|trans,'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control chosen-select-deselect' }}) }}
                        </div>
                        <div class="col-md-2">
                            {{ form_widget(formFilterOwnerShip.property, { 'attr': {'data-placeholder': 'pa_property'|trans,'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control chosen-select-deselect' }}) }}
                        </div>
                        <div class="col-md-2">
                            {{ form_widget(formFilterOwnerShip.bed, { 'attr': {'data-placeholder': 'pa_bed'|trans,'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control chosen-select-deselect' }}) }}
                        </div>
                        <div class="col-md-2">
                            {{ form_widget(formFilterOwnerShip.room_type, { 'attr': {'data-placeholder': 'pa_room_type'|trans,'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control chosen-select-deselect' }}) }}
                        </div>
                        <div class="col-md-2">
                            {{ form_widget(formFilterOwnerShip.bath_room, { 'attr': {'data-placeholder': 'pa_bath_room'|trans,'data-toggle':'tooltip', 'data-container':'body', 'class':'form-control chosen-select-deselect' }}) }}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="col-md-6"></div>
                        <div class="col-md-2">
                            <div class="checkbox">
                                <input type="checkbox" id="checkbox1">
                                <label for="checkbox1">
                                    Premios Best Casa
                                </label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="checkbox">
                                <input type="checkbox" id="checkbox1">
                                <label for="checkbox1">
                                    Reserva RÃ¡pida
                                </label>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row text-center m-t-md color-white">
                    <span>{{ 'label.more' | trans }}</span></br>
                    <img class="" src="{{ asset('bundles/partner/img/icon/back.png')}}" style="cursor: pointer" id="icon-back"/>
                    <img class="hide" src="{{ asset('bundles/partner/img/icon/top.png')}}" style="cursor: pointer" id="icon-top"/>
                </div>
            </form>
        </div>
    </div>
    <div class="row hide" style="height: 250px;background: #fff;margin-left: -25px" id="search-result"></div>
</div>

