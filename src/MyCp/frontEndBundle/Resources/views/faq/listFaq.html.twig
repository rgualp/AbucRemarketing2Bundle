{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}
{{"FAQ_PAGE_TITLE" | trans}}
{% endblock %}

{% set main_tab = 4 %}
{% block content_nav_top_body %}
{{"FAQ_PAGE_CONTENT" | trans}}
{% endblock %}

{% block body %}
<ul class="breadcrumb">
    <li><a href="{{ path('frontend_welcome') }}" title="{{"GO_HOME_TITLE" | trans}}">{{"HOME_MAIN_MENU" | trans}}</a> <span class="divider">»</span></li>
    <li><a href="#" title="{{"INFO_MAIN_MENU" | trans}}">{{"INFO_MAIN_MENU" | trans}}</a> <span class="divider">»</span></li>
    <li class="active">{{"FAQ" | trans}}</li>
</ul>
<div class="row-fluid filter_1">
    <div class="span1 offset9">
        <select  id="select_faqCategory" data-url-filter="{{ path('frontend_filter_faq') }}">
            <option value="-1">{{"ALL_ITEMS" | trans}}</option>
        {%for category in categories%}
            <option value="{{category.faqcatidcat.faqcatid}}">{{category.faqcatdescription}}</option>
        {%endfor%}
        </select>
    </div>
</div>
<div id="loading" class="alert alert-info hidden"> <img src="{{ asset('bundles/frontend/images/loading.gif') }}"/> {{"LOADING_MESSAGE" | trans}}</div>
<div class="row-fluid result_list" id="div_result">
    {{ include('frontEndBundle:faq:itemListFaq.html.twig', 
               {'faq_list': faq_list}) }}  
 </div>
{% block include_javascripts %}
    <script src="{{ asset('bundles/frontend/js/faq.js') }}"></script>
{% endblock %}
{% endblock %}