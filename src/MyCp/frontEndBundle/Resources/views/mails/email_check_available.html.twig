{% extends 'frontEndBundle:layout:baseMailTemplate.html.twig' %}

{% block content %}
        <h4>{{"GOOD_MORNING"|trans}} {{user.getUserUserName|capitalize}} {{user.getUserLastName|capitalize}}</h4>
        <p class="note"> {{"THANKS_CHECK_AVAILABLE"|trans}} <br/> {{"REQUEST_IN_PROCESS_24_HOURS"|trans}}
        <br/>
        <p class="thanks">{{"THANKS_RESERVATION_TEAM"|trans}}</p>
        </p>
        {% for reservation in reservations %}
        <div class="well">
            <div class="row-fluid">
            <div class="span4">
                {% if photos[loop.index0][0].getPhoName is defined %}
                <a href="{{ url('frontend_details_ownership',{'owner_id':reservation['ownership_id']}) }}"><img class="span12 img-polaroid" src="{{ asset('uploads/ownershipImages/'~photos[loop.index0][0].getPhoName)}}"></a>
                {% else %}
                <a href="{{ url('frontend_details_ownership',{'owner_id':reservation['ownership_id']}) }}"><img class="span12 img-polaroid" src="{{ asset('uploads/ownershipImages/no_photo_square.gif')}}"></a>
                {% endif %}
            </div>
            <div class="span8" style="margin-left: 10px">
                <table style="width: 100%">
                    <tr>
                        <td>
                            <h4 class="title_1">{{reservation['ownership_name']}}</h4>
                            <p class="note">
                                {{reservation['ownership_prov']}}
                                - {{reservation['ownership_mun']}}
                                <br/><b>{{reservation['room_type']|trans}}</b>
                                <br/><b>{{reservation['guests']}}</b> {{"ADULTS"|trans}}
                                <br/><b>{{reservation['kids']}}</b> {{"KIDS"|trans}}
                                <br/><b>{{"ARRIVAL_RESERVATION"|trans}}:</b> {{reservation['date_format_from'] | date('d/m/Y')}}
                                <br/><b>{{"NIGHTS"|trans}}:</b> {{reservation['nights']}}
                            </p>
                        </td>
                        <td>
                            <p class="note"><b>ID {{"RESERVATION_RESERVE"|trans}}:</b> CAS.{{ids[loop.index0]}}
                            <br/>
                            <br/>
                            <span class="badge">{{"PENDING"|trans}}</span>
                            <h4>TOTAL: {{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{prices[loop.index0] * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}}</h4>
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <a href="{{ path('frontend_details_ownership',{'owner_id':reservation['ownership_id']}) }}" class="btn mycp_btn_green">{{"VIEW_DETAILS"|trans}}</a>
                        </td>
                    </tr>
                </table>
            </div>
            </div>
        </div>
        {% endfor %}
        
{% endblock %}