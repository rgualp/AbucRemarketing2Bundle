{% extends 'frontEndBundle:layout:baseMailTemplate.html.twig' %}

{% block content %}
        <h4>{{"GOOD_MORNING"|trans}} {{user.getUserUserName|capitalize}} {{user.getUserLastName|capitalize}}</h4>
        <p class="note"> {{"THANKS_CHECK_AVAILABLE"|trans}} <br/> {{"REQUEST_IN_PROCESS_24_HOURS"|trans}}
        <br/>
        <p class="thanks">{{"THANKS_RESERVATION_TEAM"|trans}}</p>
        </p>
        {% for reservation in reservations %}
        <div class="well">
            <table width="100%">
                <tr>
                    <td width="33%" style="vertical-align: top;">
                        {% if photos[loop.index0] is defined %}
                        <a href="{{ url('frontend_details_ownership',{'owner_id':reservation.getOwnResGenResId.getGenResOwnId.getOwnId}) }}"><img style="width: 90%" class="img-polaroid" src="{{url('mycp_main')}}../uploads/ownershipImages/thumbnails/{{photos[loop.index0]}}"></a>
                        {% else %}
                        <a href="{{ url('frontend_details_ownership',{'owner_id':reservation.getOwnResGenResId.getGenResOwnId.getOwnId}) }}"><img style="width: 90%" class="img-polaroid" src="{{ asset('uploads/ownershipImages/no_photo_square.gif')}}"></a>
                        {% endif %}
                    </td>
                    <td width="50%">
                        <h4 class="title_1">{{reservation.getOwnResGenResId.getGenResOwnId.getOwnName}}</h4>
                        <p class="note">
                            {{reservation.getOwnResGenResId.getGenResOwnId.getOwnAddressProvince.getProvName}}
                            - {{reservation.getOwnResGenResId.getGenResOwnId.getOwnAddressMunicipality.getMunName}}
                            <br/><b>{{reservation.getOwnResRoomType|trans}}</b>
                            <br/><b>{{reservation.getOwnResCountAdults}}</b> {{"ADULTS"|trans}}
                            <br/><b>{{reservation.getOwnResCountChildrens}}</b> {{"KIDS"|trans}}
                            <br/><b>{{"ARRIVAL_RESERVATION"|trans}}:</b> {{reservation.getOwnResReservationFromDate | date('d/m/Y')}}
                            <br/><b>{{"NIGHTS"|trans}}:</b> {{nigths[loop.index0]}}
                        </p>
                    </td>
                    <td>
                        <p class="note" style="margin-top: 0"><b>ID {{"RESERVATION_RESERVE"|trans}}:</b> CAS.{{ids[loop.index0]}}
                            <br/>
                            <br/>
                            <span class="badge">{{"PENDING"|trans}}</span>
                        <h4>TOTAL: {{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{prices[loop.index0] * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}}</h4>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td colspan="3" style="text-align: right">
                        <a href="{{ url('frontend_details_ownership',{'owner_id':reservation.getOwnResGenResId.getGenResOwnId.getOwnId}) }}" class="btn mycp_btn_green">{{"VIEW_DETAILS"|trans}}</a>
                    </td>
                </tr>
            </table>
        </div>
        {% endfor %}
        
{% endblock %}