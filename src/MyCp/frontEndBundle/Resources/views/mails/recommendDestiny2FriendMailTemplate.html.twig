{% extends 'frontEndBundle:layout:baseMailTemplate.html.twig' %}

{% block content %}
    <b>Hola, {{from}} desea recomendarte un destino en MyCasaParticular.com</b>
<br>
<hr>
<div class="well">
    <div style="float: left"><img class="img-polaroid" style="width: 177px; height: 177px" src="{{url('mycp_main')}}../uploads/destinationImages/thumbnails/{{photo}}"></div>
    <div style="float: left; margin-left: 5px">
        <table>
            <tr>
                <td style="text-align: left">
                    <div class="title_1">{{destiny.getDesName}}</div>
                    <p class="note">
                        {{'DES_POBLATION' | trans}} <b>{{destiny.getDesPoblation}}</b>
                        <br/>
                        {{'DES_REF_PLACE' | trans}} <b>{{destiny.getDesRefPlace}}</b>
                    </p>
                </td>
            </tr>
        </table>
    </div> 
    <div style="float: right; text-align: right">
        <div style="margin-top: 10px">
            <a href="{{ url('frontend_details_destination',{'destination_id':destiny.getDesId}) }}">
                <input type="button" class="btn_orange" value="{{'SEEMORE_LINK_TEXT' | trans}}" />
            </a>            
        </div>
    </div>
    <div style="clear:both"></div>
</div>
<hr>
{% endblock %}