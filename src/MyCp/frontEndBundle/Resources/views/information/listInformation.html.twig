{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}
{{information_type | upper | trans}}
{% endblock %}

{% set main_tab = 4 %}
{% block content_nav_top_body %}
{{((information_type | upper) ~ "_CONTENT") | trans}}
{% endblock %}

{% block body %}
<ul class="breadcrumb">
    <li><a href="{{ path('frontend_welcome') }}" title="{{"GO_HOME_TITLE" | trans}}">{{"HOME_MAIN_MENU" | trans}}</a> <span class="divider">»</span></li>
    <li class="active">{{"INFO_MAIN_MENU" | trans}}<span class="divider">»</span></li>
    <li class="active">{{information_type | upper | trans}}</li>
</ul>
<div class="row-fluid filter_1">
</div>
<div id="loading" class="alert alert-info hidden"> <img src="{{ asset('bundles/frontend/images/loading.gif') }}"/> {{"LOADING_MESSAGE" | trans}}</div>
<div class="row-fluid result_list" id="div_result">
     {%for information in information_list%}
<div class="item">
    <div class="row-fluid">
        <h3>{{information.infolangname |striptags}}</h3>
        <p>{{information.infolangcontent |striptags}}</p>
    </div>
    </div>
{%else%}
<div class="alert a alert-info">{{"EMPTY_LIST" | trans}}</div>
{%endfor%}
</div>

{%if information_list | length and total_items > items_per_page%}
    <div class="paginator-cont top_margin">
    {{ simple_paginator_render('frontend_list_information',null,{
    'container_class': 'paginator',
    'previousPageText': '«',
    'nextPageText': '»',
    'currentClass': 'current',
    'firstPageText': 'FIRST_PAGE' | trans,
    'lastPageText': 'LAST_PAGE' | trans,
    'route_params': {'information_type':information_type}
}) }}
</div>
{%endif%}
{% block include_javascripts %}
    
{% endblock %}
{% endblock %}