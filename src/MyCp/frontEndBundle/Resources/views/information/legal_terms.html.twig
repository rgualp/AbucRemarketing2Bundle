{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}
{{"LEGAL_TERMS" | trans}}
{% endblock %}

{% block breadcrumbs %}
<a href="{{ path('frontend_welcome') }}" title="{{"GO_HOME_TITLE" | trans}}">{{"HOME_MAIN_MENU" | trans}}</a>
<span>››</span>
<a href="#" class="active" title="{{"LEGAL_TERMS" | trans}}">{{"LEGAL_TERMS" | trans}}</a>
