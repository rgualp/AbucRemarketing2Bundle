        {%for info in list%}
<div class="item">
    <div class="row-fluid">
    <div class="row-fluid">
        <h4>{{info.infolangname | raw}}</h4>
    </div>
    <div class="row-fluid">        
        <p>{{info.infolangcontent | raw}}</p>
