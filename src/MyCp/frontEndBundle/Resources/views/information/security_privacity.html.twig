{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}
{{"SECURITY_PRIVACITY" | trans}}
{% endblock %}

{% block breadcrumbs %}
<a href="{{ path('frontend_welcome') }}" title="{{"GO_HOME_TITLE" | trans}}">{{"HOME_MAIN_MENU" | trans}}</a>
<span>››</span>
<a href="#" class="active" title="{{"SECURITY_PRIVACITY" | trans}}">{{"SECURITY_PRIVACITY" | trans}}</a>
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="caecilia-roman h-green">{{ "SECURITY_PRIVACITY"|trans }}</h1>
    <hr class="hr-grey" style="margin-bottom: 30px"/>
    <div class="row">        
        {%for info in list%}
<div class="item">
    <div class="row-fluid">
    <div class="row-fluid">
        <h4>{{info.infolangname | raw}}</h4>
    </div>
    <div class="row-fluid">        
        <p>{{info.infolangcontent | raw}}</p>
    </div>
    </div>
</div>
{%else%}
<div class="alert a alert-info">{{"EMPTY_LIST" | trans}}</div>
{%endfor%}

{%if list | length  and total_items > items_per_page%}
<div class="text-center">
    {{ simple_paginator_render('frontend_security_privacity',null,{
    'container_class': 'pagination',
    'previousPageText': '«',
    'nextPageText': '»',
    'currentClass': 'current',
    'firstPageText': 'FIRST_PAGE' | trans,
    'lastPageText': 'LAST_PAGE' | trans,
    'route_params': null
}) }}
    </div>
{%endif%}
    </div>
</div>
{% endblock %}