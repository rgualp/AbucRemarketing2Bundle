{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}
{{"ABOUT_US" | trans}}
{% endblock %}

{% set main_tab = 4 %}
{% block content_nav_top_body %}
{{(("ABOUT_US" | upper) ~ "_CONTENT") | trans}}
{% endblock %}

{% block body %}
<ul class="breadcrumb">
    <li><a href="{{ path('frontend_welcome') }}" title="{{"GO_HOME_TITLE" | trans}}">{{"HOME_MAIN_MENU" | trans}}</a> <span class="divider">»</span></li>
    <li class="active">{{"INFO_MAIN_MENU" | trans}}<span class="divider">»</span></li>
    <li class="active">{{"ABOUT_US" | trans}}</li>
</ul>

<div class="row-fluid information">
    <div class="span4">
        <div class="head_1 " style="margin-top: 10px;font-size: 30px; font-weight: bold;">{{"ABOUT_US" | trans}}</div>
        <div class="item_info" style="padding-top: 15px;">
            <table>
                <tr>
                    <td><img src="{{ asset('bundles/frontend/images/information.gif') }}"/></td>
                    <td>{{"INFORMATION_PRO_TRAVELLER" | trans}} &nbsp;&nbsp;<img src="{{ asset('bundles/frontend/images/arrow_3.gif') }}"/></td>
                </tr>
            </table>
        </div>
        <div class="item_info">
            <table>
                <tr>
                    <td><img src="{{ asset('bundles/frontend/images/publicity.gif') }}"/></td>
                    <td>{{"INFORMATION_PUBLICITY_HOUSES" | trans}} &nbsp;&nbsp;<img src="{{ asset('bundles/frontend/images/arrow_3.gif') }}"/></td>
                </tr>
            </table>
        </div>
        <div class="item_info">
            <table>
                <tr>
                    <td><img src="{{ asset('bundles/frontend/images/reserve_mail.gif') }}"/></td>
                    <td>{{"POSSIBILITY_RESERVE_ONLINE" | trans}} &nbsp;&nbsp;<img src="{{ asset('bundles/frontend/images/arrow_3.gif') }}"/></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="span8">
        <div style="position:relative; z-index: 1"><img src="{{ asset('bundles/frontend/images/map_mcp.jpg') }}"/></div>
        <div class="thumbnail pull-right" style="margin-top: -160px; z-index: 2; position: relative; background-color: #ffffff">
            <div style="padding: 6px 20px 0 20px; text-align: left" class="cont bg_blue_sky">
                <div class="head_1" style="margin: 5px 0 10px">{{"SOME_NUMBERS" | trans}}</div>
                <p style="font-weight: normal; font-size: 12px; padding-left: 15px">
                    {{ "FOUNDED_APRIL_2010" | trans }}<br/>
                    {{ numbers['acc'] }} {{ "ACCOMMODATION"|trans }}<br/>
                    {{ numbers['rooms'] }} {{ "ROOMS"|trans }}<br/>
                    {{ "ACCOMMODATIONS_ALL_PROVINCES" |trans}}<br/>
                    {{ numbers['langs'] }} {{ "LANGUAGE"|trans }}s
                </p>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span4" style="margin-top: 20px">
            <ul class="nav nav-tabs nav-stacked">
                {% for info in information %}
                    <li {% if loop.index == 1%}class="active"{% endif %}><a data-toggle="tab" href="#id_{{ info.getInfoLangId }}">{{ info.getInfoLangName }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="span8" style="margin-top: 20px">
            <div class="thumbnail tab-content" style="padding: 20px">
                {% for info in information %}
                <div id="id_{{ info.getInfoLangId }}" class="tab-pane fade {% if loop.index == 1%}active in{% endif %}">
                    <div class="head_1" style="font-weight: bold;">{{ info.getInfoLangName }}</div>
                    {{ info.getInfoLangContent | raw }}
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <div class="row-fluid hiw_items_list">
        <div class="separator" style="margin: 10px 0">&nbsp;</div>
    </div>
    <div class="row-fluid" style="background-color: #F4F2F3; padding: 15px">
        <div class="span4" style="color: #8E8C8D;">
            <h5 style="margin: 0">{{'OUR_OFFICE' | trans}}</h5>
            ABUC media network GmbH
        </div>
        <div class="span8"></div>
    </div>
</div>
{% block include_javascripts %}
    
{% endblock %}
{% endblock %}