{% block big_banner_info %}
<div id="banner_search">
    <div class="row-fluid">
        <div class="perc_35 where"><input type="text" id="input_text" placeholder="{{"PLACE_WATERMARK" | trans}}" autocomplete="off" data-highlighter="null" class="input-block-level" data-items="5" data- data-provide="typeahead" data-source='{{autocomplete_text_list}}'/></div>
        <div class="perc_13"><input type="text" id="input_arrival_date" placeholder="{{"ARRIVAL_WATERMARK" | trans}}" class="input-block-level start" data-localization='{{locale}}'/></div>
        <div class="perc_13"><input type="text" id="input_departure_date" placeholder="{{"DEPARTURE_WATERMARK" | trans}}" class="input-block-level end" data-localization='{{locale}}'/></div>
        <div class="perc_13"><input type="text" id="input_guests" placeholder="{{"GUEST_WATERMARK" | trans}}" class="input-block-level guest numeric" /></div>
        <div class="perc_13"><input type="text" id="input_room" placeholder="{{"ROOM_WATERMARK" | trans}}" class="input-block-level room numeric" /></div>
        <div class="perc_13">
            <button type="submit" id="btn_search" class="btn btn-block mycp_btn_green mycp_btn" data-url="{{ path('frontend_search_ownership',{'text':'_text', 'arrival':'_arrival','departure':'_departure','guests':'_guests','rooms':'_rooms'})}}">
                <!--i class="icon-search icon-white"></i--> {{"SEARCH" | trans}}
            </button></div>
    </div>
</div>
<div class="info_message banner">
    {{"SLOGAN_1" | trans}}<br/>{{"SLOGAN_2" | trans}}
        <div class="message"><b>MyCasaParticular.com</b>, {{"SLOGAN_3" | trans}}</div>
    </div>
{% endblock %}
