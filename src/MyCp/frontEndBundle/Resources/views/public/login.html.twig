{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}{{"LOG_IN" | trans }}{% endblock %}

{% block body %}
<ul class="breadcrumb">
    <li><a title="Ir a la portada" href="{{ path('frontend_welcome') }}">Inicio</a> <span
            class="divider">Â»</span></li>
    <li class="active">{{"LOG_IN" | trans }}</li>
</ul>
<div class="row-fluid ">
    <div class="span6 offset3">
        <div class="thumbnail">
            <div class="cont bg_blue_sky" style="padding: 6px 20px 0 20px">
                <h2 class="form big_price" style="font-size: 30px;">{{"LOG_IN" | trans }}</h2>
                <hr/>
                {% if error %}
                <div class="alert alert-error">{{ error.message }}</div>
                {% endif %}
                {% for message in app.session.flashbag.get('message_error_local') %}
                    <div class="alert alert-error">{{ message |trans}}</div>
                {% endfor %}
                <form action="{{ path("frontend_ckeck") }}" method="post">
                    <label class="control-label" for="inputUsername">{{"FORMS_EMAIL" | trans}}</label>
                    <input type="text" class="mycp_text_box mycp_text_box_margin input-block-level" id="inputUsername" name="_username"
                           value="{{ last_username }}"/>
                    <label class="control-label" for="inputPassword">{{"FORMS_PASSWORD" | trans}}</label>
                    <input type="password" class="mycp_text_box mycp_text_box_margin input-block-level" id="inputPassword" name="_password"/>
                    <label class="checkbox">
                        <input type="checkbox" name="_remember_me"> {{"FORMS_REMEMBER_ME" | trans}}
                    </label>
                    <br/>
                    <button type="submit" class="btn btn-block btn-large">{{"FORMS_IDENTIFY" | trans}}</button>
                    <br/>

                    <div class="row-fluid" style="text-align: center; text-decoration: underline">
                        <div class="span6"><a href="{{ path('frontend_restore_password_user') }}" style="text-decoration: underline" href="">{{"FORMS_FORGOT_PASSWORD_QUESTION" | trans}}</a></div>
                        <div class="span6"><a href="{{ path('frontend_register_confirmation_user') }}" style="text-decoration: underline" href="">{{"FORMS_CONFIRMATION_QUESTION" | trans}}</a></div>
                    </div>
                </form>
            </div>
        </div>
        <a href="{{ path('frontend_register_user') }}" class="btn btn-block mycp_btn_orange mycp_btn btn-large">{{"FORMS_CREATE_ACCOUNT_QUESTION" | trans}}</a>
    </div>
</div>
{% endblock %}
