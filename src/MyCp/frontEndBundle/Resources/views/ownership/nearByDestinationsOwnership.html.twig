{%if destinations | length%}
<div class="carousel slide carousel-mini" id="destinationCarousel">
                <h4 class="carousel-title">{{"VISIT_ANOTHER_DESTINATIONS" | trans}}</h4>
                <div class="carousel-inner">
                    {%set counter = 0%}
                    {%for dest in destinations%}
                    <div class="item {%if counter == 0%}active{%endif%}">
                        <div class="row">
                            <div class="col-xs-6"><img src="" class="thumbnail full-width"></div>
                            <div class="col-xs-6"><b>
                            <a href="{{ path('frontend_details_destination',{'destination_name':dest['des_name']|lower|replace(' ','_')}) }}">
                            {{dest['des_name']}}
                            </a></b><br/>$20 por noche<br/>
                            Anim pariatur cliche reprehenderit, enim eiusmod high.</div>
                        </div>
                    </div>
                        {%set counter = counter + 1%}
                    {%endfor%}
                </div>
                <a data-slide="prev" href="#destinationCarousel" class="left carousel-control">‹</a>
                <a data-slide="next" href="#destinationCarousel" class="right carousel-control">›</a>
            </div>
{%endif%}
