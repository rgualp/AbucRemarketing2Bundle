{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}
{{ownership.ownname}}
{% endblock %}

{% block include_javascripts_and_css %}
{% endblock %}

{% set main_tab = 2 %}
{% block content_nav_top_body %}
<h4>
    {{ownership.ownType  | trans}} {{"IN" | trans}} {{ownership.ownAddressProvince}}: {{ownership.ownName}}.
    {%if rooms is defined and rooms | length%}
    {{rooms | length}} {%if rooms | length == 1%} {{"ROOM_SINGULAR" | trans}} {%else%} {{"ROOM_PLURAL" | trans}} {%endif%}.
    {%endif%}
    {{"FROM_PRICES" | trans}} {{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}} {{ownership.ownminimumprice * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}} {{"NIGHT_PER_ROOM" | trans}}
</h4>
<label class="place">
    {{ownership.ownType}}
    {%if (ownership.ownAddressStreet != null and ownership.ownAddressStreet != '') or (ownership.ownAddressNumber != null and ownership.ownAddressNumber != '') %}
    / {{ownership.ownAddressStreet}} {{ownership.ownAddressNumber}}
    {%endif%}
    / {{ownership.ownAddressProvince}}
</label>
{% endblock %}

{% block body %}
<ul class="breadcrumb">
    <li><a href="{{ path('frontend_welcome') }}" title="{{"GO_HOME_TITLE" | trans}}">{{"HOME_MAIN_MENU" | trans}}</a>
        <span class="divider">Â»</span></li>
    <li class="active">{{"DESTINATIONS_MAIN_MENU" | trans}}</li>
</ul>

<div class="row-fluid">
<div class="span8">
<div class="third_tab secondary_tab row-fluid">
    <div class="nav-tabs_cont">
        <ul class="nav nav-tabs" id="ownTabs">
            {%if gallery_photos | length%}
            <li class="active"><a data-toggle="tab" href="#photos">{{"PHOTO_TAB_DETAILS" | trans}}</a></li>
            {%endif%}
            <li {%if not gallery_photos | length%} class="active" {%endif%}><a data-toggle="tab"
                                                                               href="#map">{{"MAPS_TAB_DETAILS" | trans}}</a>
            </li>

        </ul>
    </div>
    <div class="tab-content">
        {%if gallery_photos | length%}
        <div id="photos" class="tab-pane fade in active">
            <div id="gallery-1" class="royalSlider rsDefault">
                {% for photo in  gallery_photos%}
                <a class="rsImg" data-rsbigimg="{{asset('uploads/ownershipImages/'~photo.getPhoName)}}"
                   href="{{asset('uploads/ownershipImages/'~photo.getPhoName)}}"><img class="rsTmb"
                                                                                      src="{{asset('uploads/ownershipImages/'~photo.getPhoName)}}"
                                                                                      width="60"></a>
                {% endfor %}
            </div>
        </div>
        {% endif %}
        <div id="map" class="tab-pane fade {%if not gallery_photos | length%} in active {% endif %}">
            <div class="flexible-container" id="mapContent">
                <iframe width="425" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                        src="{{ path('frontend_map_details_ownership',{'ownGeolocateX':ownership.OwnGeolocateX,'ownGeolocateY':ownership.OwnGeolocateY,'ownName':ownership.ownName,'description': "FROM_PRICES" | trans ~ " &euro;" ~ ownership.OwnMinimumPrice ~ " " ~ "BYNIGHTS_PRICES" | trans | lower,'image':gallery_photos[0].getPhoName})}}">
