{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}{{ownership.ownname}}{% endblock %}
{% set main_tab = 5 %}
{% block breadcrumbs %}
    <a href="{{ path('frontend_welcome') }}" title="{{"HOMEPAGE_TITLE" | trans}}">{{"HOME_MAIN_MENU" | trans}}</a>
    <span>››</span>
    <a href="{{ path('frontend_search_ownership') }}" title="{{"OWNERSHIPS" | trans}}">{{"OWNERSHIPS" | trans}}</a>
    <span>››</span>
    <a href="#" class="active"  title="{{ ownership.ownname }}">{{ ownership.ownname }}</a>
{% endblock %}
{% block body %}
    <div class="bg-solid-ligth-blue" style="margin-top: -16px">
        <div class="container">
            <h1 class="caecilia-roman h-size-3">
                {{ownership.owntype  | trans}} {{"IN" | trans}} {{ownership.ownAddressProvince}}: {{ownership.ownname}} ({{ ownership.mycpcode }}).
                {%if rooms is defined and rooms | length%}
                    {{rooms | length}} {%if rooms | length == 1%} {{"ROOM_SINGULAR" | trans}} {%else%} {{"ROOM_PLURAL" | trans}} {%endif%}.
                {%endif%}
                {{"FROM_PRICES" | trans}} {{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{ownership.ownminimumprice * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}} {{"NIGHT_PER_ROOM" | trans}}
            </h1>
            <!--label class="place">
    {{ownership.owntype}}
    {%if (ownership.ownAddressStreet != null and ownership.ownAddressStreet != '') or (ownership.ownAddressNumber != null and ownership.ownAddressNumber != '') %}
    / {{ownership.ownAddressStreet}} {{ownership.ownAddressNumber}}
    {%endif%}
    / {{ownership.ownAddressProvince}}
</label-->
        </div>
    </div>
    <br/>
    <div class="container">
    <div class="row">
    <div class="col-sm-8">
    <div class="tabbable">
        <ul class="nav nav-tabs">
            {%if gallery_photos | length%}
                <li onclick="javascript:hide_calendar()" class="active li-tabs"><a data-toggle="tab" href="#tab-photos">{{"PHOTO_TAB_DETAILS" | trans}}</a></li>
            {%endif%}
            {%if ownership.OwnGeolocateX != "" and ownership.OwnGeolocateY != ""%}
                <li onclick="javascript:hide_calendar()" {%if not gallery_photos | length%} class="active li-tabs" {%endif%}><a id="mapTab" data-toggle="tab" href="#tab-map">{{"MAPS_TAB_DETAILS" | trans}}</a></li>
            {%endif%}

            <li id="li-reservations" class="li-tabs {%if gallery_photos | length == 0 and ownership.OwnGeolocateX == "" and ownership.OwnGeolocateY == ""%}active{%endif%}"><a data-toggle="tab" href="#tab-reservations">{{'RESERVATION_TITLE' | trans}}</a></li>
        </ul>
        <div class="tab-content">
            {%if gallery_photos | length%}
                <div id="tab-photos" class="tab-pane active">
                    <div id="full-width-slider" class="royalSlider rsDefault">

                    </div>
                </div>
            {%endif%}
            {%if ownership.OwnGeolocateX != "" and ownership.OwnGeolocateY != ""%}
                {%set image = ((gallery_photos[0] is defined) ? gallery_photos[0].photo_name : "no_photo.png")%}
                <div id="tab-map" class="tab-pane {%if gallery_photos | length == 0%}active{%endif%}">
                    <div id="big_map_details" class="flexible-container google-maps"
                         data-x="{{ownership.OwnGeolocateX}}"
                         data-y="{{ownership.OwnGeolocateY}}"
                         data-name="{{ownership.ownname}}"
                         data-description="{{"FROM_PRICES" | trans}} {{app.session.get('curr_symbol') != null ? app.session.get('curr_symbol'): '$'}}{{ownership.ownminimumprice * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}} {{"BYNIGHTS_PRICES" | trans}}"
                         data-image="{{asset('uploads/ownershipImages/thumbnails/'~image)}}"
                         data-icon="{{ app.request.getSchemeAndHttpHost() ~ asset('bundles/frontend/img/map_marker.png') }}">
                    </div>
                </div>
            {%endif%}
            <div id="tab-reservations" class="tab-pane {%if gallery_photos | length == 0 and ownership.OwnGeolocateX == "" and ownership.OwnGeolocateY == ""%}active{%endif%}">
                <ul class="price calendar-cont">
                    <li class="lead-2">
                        <div class="row">
                            <form id="calendar_form" method="POST" action="{{ path('frontend_details_ownership',{'own_name':ownership.ownname  | lower | replace(' ','-')}) }}" novalidate>
                                <div class="col-sm-6">
                                    <div rel="tooltip" title="{{'DEPARTURE_WATERMARK' | trans}}" class="input-group" style="padding: 0">
                                        <input value="{{start_date}}"  type="text" id="filter_date_from" class="form-control" placeholder="{{"ARRIVAL_RESERVATION" | trans}}" data-localization='{{locale}}'>
                                        <span class="input-group-addon show_calendar"><span class="icon-calendar"></span></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div rel="tooltip" title="{{'DEPARTURE_WATERMARK' | trans}}" class="input-group" style="padding: 0">
                                        <input value="{{ end_date }}" type="text" id="filter_date_to" class="form-control" placeholder="{{"DEPARTURE_RESERVATION" | trans}}" data-localization='{{locale}}'>
                                        <span class="input-group-addon show_calendar"><span class="icon-calendar"></span></span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </li>
                    <li class="lead-2">
                        <div id="body_calendar" style="overflow-x: auto;">
                            {{ include('frontEndBundle:ownership:ownershipReservationCalendar.html.twig')}}
                        </div>
                    </li>
                </ul>
                <ul class="price calendar-cont calendar-results">
                    <li class="lead-2">
                        <table id="rooms_selected" class="table" style="margin-bottom: 0px; display: none;">
                            <thead>
                            <tr>
                                <th>{{'RESERVATION_SELECTED_ROOM' | trans}}</th>
                                <th>{{'RESERVATION_TYPE' | trans}}</th>
                                <th>{{'RESERVATION_ROOM_NUMBER' | trans}}</th>
                                <th>{{'ADULTS' | trans}}</th>
                                <th>{{'KIDS' | trans}}</th>
                                <th>{{'RESERVATION_PRICE' | trans}}</th>
                            </tr>
                            </thead>
                            <tbody>

                            </tbody>
                        </table>
                    </li>
                    <li class="lead">
                        <div class="row all-prices-numbers">
                            <div class="col-sm-4">
                                {{'RESERVATION_TOTAL_PRICE' | trans}} {{app.session.get('curr_symbol') != null ? app.session.get('curr_symbol'): '$'}} <span id="total_price"></span>
                            </div>
                            <div class="col-sm-4">
                                {{'INITIAL_DEPOSIT' | trans}} ({{ownership.OwnCommissionPercent}}%): {{app.session.get('curr_symbol') != null ? app.session.get('curr_symbol'): '$'}}<span id="initial_deposit"></span>
                            </div>
                            <div class="col-sm-4">
                                {{'SERVICE_RECHARGE' | trans}}: {{app.session.get('curr_symbol') != null ? app.session.get('curr_symbol'): '$'}}<span id="service_recharge">{{10 * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}}</span>
                            </div>
                        </div>
                        <div class="text-center" style="font-size: 20px; margin-top: 10px">
                            {{'TOTAL_PREPAYMENT'|trans}}: {{app.session.get('curr_symbol') != null ? app.session.get('curr_symbol'): '$'}}<span id="total_prepayment"></span>
                        </div>
                    </li>
                    <li class="lead-2">
                        {% if post['reservation_filter_date_from'] is defined %}
                            {% set date_from = post['reservation_filter_date_from']|replace("/","&") %}
                        {% else %}
                            {% set date_from = "now"|date("d&m&Y") %}
                        {% endif %}

                        {% if post['reservation_filter_date_to'] is defined%}
                            {% set date_to = post['reservation_filter_date_to']|replace("/","&") %}
                        {% else %}
                            {% set date_to = "+6 day"|date("d&m&Y") %}
                        {% endif %}
                        <form action="{{ path('frontend_add_to_cart_reservation',{'id_ownership':ownership.own_id}) }}" method="POST">
                            <div class="row">
                                <div class="col-sm-4"></div>
                                <div class="col-sm-4 text-center">
                                    <button style="padding: 5px 10px" type="submit" class="btn btn-primary"><i class="icon-shopping-cart"></i> {{'ADD_TO_CART' | trans}}</button>
                                    <div class="col-sm-4">
                                        <input from_date="{{ start_date | replace('/','&') }}" to_date="{{ end_date | replace('/','&') }}" type="text" style="visibility: hidden; margin-bottom: -50px" name="data_reservation" id="data_reservation"/>
                                    </div>
                                </div>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <br/>
    <div class="tabbable">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#tab-desc">{{"DESCRIPTION_TAB_DETAILS" | trans}}</a></li>
        <li><a data-toggle="tab" href="#tab-serv">{{"SERVICES_TAB_DETAILS" | trans}}</a></li>
        <li><a data-toggle="tab" href="#tab-rooms">{{"ROOMS_TAB_DETAILS" | trans}}</a></li>
    </ul>
    <div class="tab-content">
    <div id="tab-desc" class="tab-pane active">
        <div class="row">
            <div class="col-sm-7">
                <h1 class="h-size-4" style="margin-top: 0">{{ownership.ownname}}</h1>
                <p>
                    {{description| raw }}
                </p>
            </div>
            <div class="col-sm-5">
                <ul class="span4 price">
                    <li>{{"TYPE_TAB_DESCRIPTION" | trans}}: <b>{{ownership.owntype | trans}}</b></li>
                    <li>{{"CATEGORY_TAB_DESCRIPTION" | trans}}: <b>{{ownership.category | trans}}</b></li>
                    <li>{{"LANG_TAB_DESCRIPTION" | trans}}: <b>{{languages}}</b></li>
                    <li>{{"BEDROOMS_TAB_DESCRIPTION" | trans}}: <b>{{rooms|length}}</b></li>
                    <li>{{"CAPACITY_TAB_DESCRIPTION" | trans}}: <b>{{ownership.ownmaximumnumberguests}}</b></li>
                    <li>{{"CITY_TAB_DESCRIPTION" | trans}}: <b>{{ownership.ownaddressmunicipality}}</b></li>
                    <li>{{"PROVINCE_TAB_DESCRIPTION" | trans}}: <b>{{ownership.ownAddressProvince}}</b></li>
                </ul>
            </div>
        </div>

    </div>
    <div id="tab-serv" class="tab-pane">
        <div class="row">
            <div class="col-sm-12 services">
                <ul class="price">
                    {%if ownership.ownFacilitiesBreakfast %}
                        <li class="lead-2">
                            <div class="row">
                                <div class="col-xs-8"><img src="{{asset('bundles/frontend/img/icons/pixel.gif')}}" class="icon-services cofee-icon"> {{"BREAKFAST_TAB_DESCRIPTION" | trans}}</div>
