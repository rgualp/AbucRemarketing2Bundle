                    {%if ownership.ownDescriptionPets%}
                        <li class="lead-2">
                            <div class="row">
                                <div class="col-xs-8"><img src="{{asset('bundles/frontend/img/icons/pixel.gif')}}" class="icon-services pet-icon"> {{"PETS_TAB_DESCRIPTION" | trans}}</div>
