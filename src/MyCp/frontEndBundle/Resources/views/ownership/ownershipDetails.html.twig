                            <td class="span6">{{"INTERNET_TAB_DESCRIPTION" | trans}}:</td>
                            <td class="span6 align_right">
                                <b>
                                    {{"YES" | trans}}
                                </b>
                            </td>
                        </tr>
                        {%endif%}
                        {%if ownership.ownWaterJacuzee %}
                        <tr>
                            <td class="span6">{{"JACUZEE_TAB_DESCRIPTION" | trans}}:</td>
                            <td class="span6 align_right">
                                <b>
                                    {{"YES" | trans}}
                                </b>
                            </td>
                        </tr>
                        {%endif%}
                        {%if ownership.ownWaterSauna %}
                        <tr>
                            <td class="span6">{{"SAUNA_TAB_DESCRIPTION" | trans}}:</td>
                            <td class="span6 align_right">
                                <b>
                                    {{"YES" | trans}}
                                </b>
                            </td>
