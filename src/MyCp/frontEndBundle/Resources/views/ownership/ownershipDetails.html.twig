                    {%if ownership.ownDescriptionBicycleParking %}
                        <li class="lead-2">
                            <div class="row">
                                <div class="col-xs-8"><img src="{{asset('bundles/frontend/img/icons/pixel.gif')}}" class="icon-services bicicle-icon"> {{"BIKE_PARKING_TAB_DESCRIPTION" | trans}}</div>
                                <div class="col-xs-4 text-right"><b>{{"YES" | trans}}</b></div>
                            </div>
                        </li>
