<div class="row result_list ownerships_mosaic">
{% if list | length%}
<div class="row">
    {%set cont=0%}
    {%for ownership in list%}
    {% if cont <3 %}
    <div class="col-sm-4">    
        <div class="thumbnail has-ribbon has-ribbon-right" data-text="&nbsp;&nbsp;&nbsp;{%if ownership.owncommentstotal > 0%}+{%endif%}{{ownership.owncommentstotal}}&nbsp;&nbsp;&nbsp;">
            <a href="{{ path('frontend_details_ownership',{'own_name':ownership.ownname  | lower | replace(' ','_')}) }}">
                <img src="{{ asset("uploads/ownershipImages/thumbnails/" ~ photos[ownership.ownid])}}">
            </a>
        </div>
        <a href="{{ path('frontend_details_ownership',{'own_name':ownership.ownname  | lower | replace(' ','_')}) }}">
        <h1 class="h-blue">{{ownership.ownname | title | slice(0, 27)}}{%if ownership.ownname | length > 27%}...{%endif%} 
            <small>({{ownership.ownaddressprovince}})</small></h1>
        </a>
        <h5>
            <table>
                <tr>
                    <td>
                        {%if ownership.ownRating > 0%}
                           {%for i in 1..ownership.ownRating%}
                                <img class="icon icon-2 tiny-star-icon" src="{{ asset('bundles/frontend/img/icons/pixel.gif') }}">
                            {%endfor%}
                            {%endif%}

                            {%if ownership.ownRating < 5%}
                            {%for i in 1..(5-ownership.ownRating)%}
                                   <img class="icon icon-2 tiny-star-off-icon" src="{{ asset('bundles/frontend/img/icons/pixel.gif') }}">
                            {%endfor%}
                            {%endif%}
                    </td>
                    <td>
                        {%if ownership.owncategory == "Premium"%}
                        <img rel="tooltip" title="{{ownership.owncategory | trans}}" class="icon icon-3 tiny-premium-icon" src="{{ asset('bundles/frontend/img/icons/pixel.gif') }}">
                        {%else%}
                            {%if ownership.owncategory == "Rango Medio"%}
                            <img rel="tooltip" title="{{ownership.owncategory | trans}}" class="icon icon-3 tiny-middle-icon" src="{{ asset('bundles/frontend/img/icons/pixel.gif') }}">
                            {%else%}
                                <img rel="tooltip" title="{{ownership.owncategory | trans}}" class="icon icon-3 tiny-economic-icon" src="{{ asset('bundles/frontend/img/icons/pixel.gif') }}">
                            {%endif%}
                        {%endif%}
                        {{ include('frontEndBundle:favorite:itemFavorite.html.twig', 
                        {'is_in_favorite': is_in_favorities[ownership.ownid],
                         'favorite_type': 'ownership',
                         'element_id':ownership.ownid,
                         'list_preffix' : list_preffix,
                         'include_text': false
                         }) }} 
                    </td>
                </tr>
            </table>
            <h6 class="h-blue h-blue-2">
                 {{"FROM_PRICES" | trans | lower}} {{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{ownership.ownMinimumPrice * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate')) }}
            </h6>
        </h5>
</div>
{% set cont=cont+1 %}
{% else %}
{% set cont=1 %}
</div>
