<div class="top_rated_items row-fluid">
    {%set cont=0%}
    {%for ownership in own_top20_list%}
    {% if cont <4 %}
    <div class="item span3">
        <a href="{{ path('frontend_details_ownership',{'own_name':ownership['own_name']  | lower | replace(' ','_')}) }}" title="{{"MORE_INFO_PREFFIX" | trans}} {{ownership['own_name']}}">
           <div class="image" style="background-image: url('{{ asset("uploads/ownershipImages/thumbnails/" ~ ownership['photo'])}}')">
             <div class="rating">{%if ownership['comments_total'] > 0%}+{%endif%}{{ownership['comments_total']}}</div></div>
            <div class="title">{{ ownership['own_name']| title }}
                <div class="place">({{ownership['prov_name']}})</div>
            </div>
            <div class="description">                
                {%if ownership['description'] != null%}
                    <p>{{ownership['description'] | striptags | slice(0,120) }} (...{{"RESERVATION_CONFIRM_DESTINATION_MORE" | trans | capitalize}})</p>
                {%endif%}

            </div>
        </a>
    </div>
    {% set cont=cont+1 %}
    {% else %}
    {% set cont=1 %}
</div>
