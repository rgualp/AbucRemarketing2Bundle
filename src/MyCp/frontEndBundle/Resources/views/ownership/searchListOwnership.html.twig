<div class="row-fluid search_result_list ownerships_list">
{%for own in list%}
<div class="item elementList" data-id="{{own.ownid}}">
    
    <div class="row-fluid">
    <a title="{{"MORE_INFO_PREFFIX" | trans}} {{own.ownname}}" href="{{ path('frontend_details_ownership',{'owner_id':own.ownid}) }}"><div class="span3 own_photo" style="background-image: url('{{ asset("uploads/ownershipImages/" ~ (photos[own.ownid] == "no_photo.png" ? "no_photo_square.gif" : photos[own.ownid]))}}')">
      
    </div></a>
    <div>
        <table width="74%" class="item_content">
            <tr>
                <td width="75%"  valign="top">
                    <span class="category">{#{own.ownCategory | trans}#}</span>
                    <a title="{{"MORE_INFO_PREFFIX" | trans}} {{own.ownname}}" href="{{ path('frontend_details_ownership',{'owner_id':own.ownid}) }}">{{own.ownname}}</a>
                    <div class="row-fluid location">
                        {{own.ownAddressProvince}}, {{own.ownAddressMunicipality}}
                    </div>
                    <div class="row-fluid rating_text">
                        {{counts[own.ownid][0]["reservations"]}} {{"RESERVATIONS" | trans | lower}}
                      {#  {{own.ownCategory | trans}} / 
                    {{own.ownType  | trans}} 
                        {%if (rooms[own.ownid] != 0) %}
                        / {{rooms[own.ownid]}} {% if rooms[own.ownid] == 1%} {{"ROOM_SINGULAR" | trans}} {%else%} {{"ROOM_PLURAL" | trans}} {%endif%}
                        {%endif%}#}
                    </div>   
                    <table class="search_comment_area">
                        <tr>
                            <td>
                                <div class="rating no_photo">
                                    {%if own.owncommentstotal > 0%}+{%endif%}{{own.owncommentstotal}}
                                </div> 
                            </td>
                            <td class="rating_text" > <br/>&nbsp;{{"RECOMENDS_RATINGS" | trans}}</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                {%if own.ownRating > 0%}
                        {%for i in 1..own.ownRating%}
                            <img src="{{ asset('bundles/frontend/images/star_on.png')}}" align="absmiddle"/>
                        {%endfor%}
                        {%endif%}

                        {%if own.ownRating < 5%}
                        {%for i in 1..(5-own.ownRating)%}
                            <img src="{{ asset('bundles/frontend/images/star_off.png')}}" align="absmiddle"/>
                        {%endfor%}
                    {%endif%}
                    {{counts[own.ownid][0]["comments"]}} {{"FORMS_COMMENTS" | trans | lower}}
                    {#{%if type is defined and type == "map"%}#}
                        <!--br/>
                        <a id="own_{#{own.ownid}#}" href="javascript:void(0);">Ubicar en el mapa</a-->
                    {#{%endif%}#}
                            </td>
                        </tr>
                    </table>
                </td>
                <td align="right" valign="top" class="right_column">
                    <div class="row-fluid own_prices">
                        <label class="per_night">{{"FROM_PRICES" | trans}}</label>
                        <label class="big_price big_price_2">{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{own.ownMinimumPrice * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}} </label>
                        <label class="per_night">{{"BYNIGHTS_PRICES" | trans | lower}}</label>
                    </div>
                    
                    <div class="row-fluid favorities favorite">
                        {{ include('frontEndBundle:favorite:itemFavorite.html.twig', 
                        {'is_in_favorite': is_in_favorities[own.ownid],
                         'favorite_type': 'ownership',
                         'element_id':own.ownid,
                         'list_preffix' : list_preffix
                         }) }}  
                    </div>
                </td>
            </tr>
        </table>


    </div>
    </div>
</div>
{%else%}
   <div class="alert a alert-info">{{"EMPTY_LIST" | trans}}</div>
{%endfor%}
{%if list | length and total_items > items_per_page%}
    <div class="paginator-cont top_margin">
    {{ simple_paginator_render('frontend_search_ownership',null,{
    'container_class': 'paginator',
    'previousPageText': '«',
    'nextPageText': '»',
    'currentClass': 'current',
    'firstPageText': 'FIRST_PAGE' | trans,
    'lastPageText': 'LAST_PAGE' | trans,
    'route_params': {'text': app.session.get('search_text'), 
                     'arrival':app.session.get('search_arrival_date'), 
                     'departure': app.session.get('search_departure_date'), 
                     'guests': app.session.get('search_guests'),
                     'rooms': app.session.get('search_rooms')}
}) }}
</div>
{%endif%}
</div>
