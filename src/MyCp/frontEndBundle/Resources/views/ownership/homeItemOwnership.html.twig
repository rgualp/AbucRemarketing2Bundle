<div class="span3 last_added_items">
    <div class="item">
        <a href="{{ path('frontend_details_ownership',{'owner_id':own_id}) }}" title="{{"MORE_INFO_PREFFIX" | trans}} {{own_name}}">
            <div class="image" style="background-image: url('{{ asset("uploads/ownershipImages/" ~ photo)}}');">
                <div class="rating">{%if own_comments > 0%}+{%endif%}{{own_comments}}</div></div>
            <div class="row-fluid title_row">
                <div class="title span9"> {{own_name | title | slice(0, 27)}}
                                                                        {%if own_name | length > 27%}
                        ...
                                                                        {%endif%}</div>
                    <div class="favorite span2">
                        {{ include('frontEndBundle:favorite:itemFavorite.html.twig', 
                        {'is_in_favorite': is_in_favorite,
                         'favorite_type': 'ownership',
                         'element_id':own_id,
                         'list_preffix' : list_preffix
                         }) }}    
                    </div>            
                </div>
                <div class="row-fluid place">{{own_province}}</div>
                <div class="row-fluid">
                    <div class="span5 rating_stars">
                        <table>
                            <tr>
                                                                            {%if own_rating > 0%}
                                                                            {%for i in 1..own_rating%}
                                    <td><img src="{{ asset('bundles/frontend/images/star_on.png')}}" align="absmiddle" class="rating_star"/></td>
                                                                            {%endfor%}
                                                                            {%endif%}

                                                                            {%if own_rating < 5%}
                                                                            {%for i in 1..(5-own_rating)%}
                                        <td><img src="{{ asset('bundles/frontend/images/star_off.png')}}" align="absmiddle" class="rating_star"/></td>
                                                                            {%endfor%}
                                                                            {%endif%}
                                        </tr>
                                    </table>
                                </div>
                                <div class="span7" style="text-align: right">
                                    <div class="price"> 
                                        {#%if ownership.ownMinimumPrice != ownership.ownMaximumPrice%#}
                                        {{"FROM_PRICES" | trans | lower}} {{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{own_minimum_price * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate')) }}{#/{{ownership.ownMaximumPrice * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate')) }}#}
                                                    {#%else%}
                                                    {{ownership.ownMinimumPrice * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate')) }}
                                                    {%endif%#}
                                        </div>
                                    </div>
                                </div>
                {%if show_consult_button is defined and show_consult_button%}
                <div class="row-fluid" style="padding: 5px; width: 96%;">
                <a class="btn btn-block mycp_btn_blue mycp_btn" href="{{ path('frontend_details_ownership',{'owner_id':own_id}) }}">{{"RESERVATION_CHECK_AVAILABILITY"|trans}}</a>
                </div>
                {%endif%}
                            </a>
                        </div>
                    </div>




