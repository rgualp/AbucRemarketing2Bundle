{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}
{{"SEARCH_RESULTS_PAGE_TITLE" | trans}}
{% endblock %}
{% set main_tab = 5 %}
{% block content_nav_top_body %}
{{"SEARCH_DESCRIPTION_MAIN_MENU" | trans}}
{% endblock %}

{% block body %}
<ul class="breadcrumb">
    <li><a href="{{ path('frontend_welcome') }}" title="{{"GO_HOME_TITLE" | trans}}">{{"HOME_MAIN_MENU" | trans}}</a> <span class="divider">Â»</span></li>
    <li class="active">{{"ACCOMMODATION" | trans}}</li>
</ul>
<div class="row-fluid filter_1">

</div>
<div id="loading" class="alert alert-info hidden"> <img src="{{ asset('bundles/frontend/images/loading.gif') }}"/> {{"LOADING_MESSAGE" | trans}}</div>
<div class="green_bar msg_green_brand">
    <div class="row-fluid">
        <div class="span2 offset3" style="text-align: right;padding-top: 5px;">{{"SEARCH_RESULT_ORDER_BY" | trans}}:</div>
        <div class="span2" style="margin-left: 5px;">
            <div class="btn-group mycp_combo">
                <a href="#" id="select_change_order" class="combo_label btn dropdown-toggle" style="width:150px;" data-url="{{ path('frontend_order_search_results_ownership') }}" data-toggle="dropdown" data-value="{{order}}">{{(order ~ "_ORDER_BY") | trans}}</a>
                        <ul class="dropdown-menu">
                            <li><a class="option" data="select_change_order" data-value="PRICE_LOW_HIGH">{{"PRICE_LOW_HIGH_ORDER_BY" | trans}}</a></li>
                            <li><a class="option" data="select_change_order" data-value="PRICE_HIGH_LOW">{{"PRICE_HIGH_LOW_ORDER_BY" | trans}}</a></li>
                            <li><a class="option" data="select_change_order" data-value="BEST_VALUED">{{"BEST_VALUED_ORDER_BY" | trans}}</a></li>
                            <li><a class="option" data="select_change_order" data-value="WORST_VALUED">{{"WORST_VALUED_ORDER_BY" | trans}}</a></li>
                            <li><a class="option" data="select_change_order" data-value="A_Z">{{"A_Z_ORDER_BY" | trans}}</a></li>
                            <li><a class="option" data="select_change_order" data-value="Z_A">{{"Z_A_ORDER_BY" | trans}}</a></li>
                        </ul>
                    </div>  
        </div>
        <div class="span2 offset3" style="padding-top: 5px;">
            <a id="change_view_to_map" title="{{"MAP_VIEW_RESULTS" | trans}}" class="map link" href="#" data-url="{{ path('frontend_change_view_ownership') }}">&nbsp;</a>
                <a id="change_view_to_photo" title="{{"PHOTO_VIEW_RESULTS" | trans}}" class="photo link" href="#" data-url="{{ path('frontend_change_view_ownership') }}">&nbsp;</a>
                <a id="change_view_to_list" title="{{"LIST_VIEW_RESULTS" | trans}}" class="list link" href="#" data-url="{{ path('frontend_change_view_ownership') }}">&nbsp;</a>
        </div>
    </div>
</div>
<div class="row-fluid menu_left">
    <div class="filters span3">
        {%if view_results != 'MAP'%}
        <div id="map" style="width:100%;height:150px;" class="google-maps"></div>
        {%endif%}
        <div id="json_source" data-url="{{path("frontend_map_markers_ownership")}}" data-icon1="http://www.mycasaparticular.com/maps.png"
             data-icon-small="http://{{app.request.host}}{{asset('/web/bundles/frontend/images/map_small.png')}}" data-icon="http://{{app.request.host}}{{asset('/web/bundles/frontend/images/map.png')}}"></div>
        
        {{ include('frontEndBundle:ownership:verticalSearcherOwnership.html.twig',
            {'is_within_search_results':true, 
             'autocomplete_text_list': autocomplete_text_list,
             'locale': locale})}}
        
        <div class="filter">            
            <div id="filters" data-url-statistics="{{ path('frontend_filter_statistics_ownership') }}" data-url-filter="{{ path('frontend_filter_ownership') }}">
                {%if check_filters is defined%}
                {{ include('frontEndBundle:ownership:filters.html.twig', 
                {'own_statistics': own_statistics,'check_filters': check_filters}) }} 
                {%else%}
                {{ include('frontEndBundle:ownership:filters.html.twig', 
                {'own_statistics': own_statistics}) }} 
                {%endif%}
            </div>
        </div>
    </div>
    <div class="span9 body_right">
        <div id="div_result">
            {%if view_results == 'LIST'%}
            {{ include('frontEndBundle:ownership:searchListOwnership.html.twig', 
            {'list': list,
            'photos':photos, 
            'rooms': rooms,
            'items_per_page': items_per_page,
            'total_items': total_items,
            'current_page': current_page,
            'is_in_favorities': is_in_favorities,
            'list_preffix' : list_preffix,
            'counts' : counts}) }}  
            {%else%}
            {%if view_results == 'PHOTOS'%}
            {{ include('frontEndBundle:ownership:searchMosaicOwnership.html.twig', 
            {'list': list,
            'photos':photos, 
            'rooms': rooms,
            'items_per_page': items_per_page,
            'total_items': total_items,
            'current_page': current_page,
            'is_in_favorities': is_in_favorities,
            'list_preffix' : list_preffix,
            'counts' : counts}) }} 
            {%else %}
            {%if view_results == 'MAP'%}
            {{ include('frontEndBundle:ownership:searchMapOwnership.html.twig', 
            {'list': list,
            'photos':photos, 
            'rooms': rooms,
            'items_per_page': items_per_page,
            'total_items': total_items,
            'current_page': current_page,
            'is_in_favorities': is_in_favorities,
            'list_preffix' : list_preffix,
            'counts' : counts}) }} 
            {%endif%}
            {%endif%}
            {%endif%}
        </div>
    </div>
</div>
{% block include_javascripts %}
<script src="http://maps.googleapis.com/maps/api/js?sensor=false" type="text/javascript"></script> 
<script src="{{ asset('bundles/frontend/js/jquery/jquery.ui.map.js') }}"></script>
<script src="{{ asset('bundles/frontend/js/jquery/jquery.ui.map.infobox.js') }}"></script>
<script src="{{ asset('bundles/frontend/js/jquery/jquery.ui.map.markerclusterer.js') }}"></script>    
<script src="{{ asset('bundles/frontend/js/bootstrap/bootstrap-datepicker.js') }}"></script>
<script src="{{ asset('bundles/frontend/js/bootstrap/bootstrap-datepicker.es.js') }}"></script>
<script src="{{ asset('bundles/frontend/js/search_ownership.js') }}"></script>    
<link href="{{ asset('bundles/frontend/css/customMap.css') }}" rel="stylesheet" media="screen">
{% endblock %}
{% endblock %}