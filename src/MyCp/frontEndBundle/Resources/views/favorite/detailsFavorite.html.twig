{%if is_in_favorite%}
<button class="btn btn-block" id="delete_from_favorites" data-url="{{path('frontend_details_delete_favorite')}}" data-id="{{element_id}}" data-type="{{favorite_type}}">
    <img src="{{ asset('bundles/frontend/images/favorites_full.png') }}"/>
    {{"REMOVE_FAVORITIES_DETAILS" | trans}}</button>
{%else%}
<button class="btn btn-block" id="add_to_favorites" data-url="{{path('frontend_details_insert_favorite')}}" data-id="{{element_id}}" data-type="{{favorite_type}}">
    <img src="{{ asset('bundles/frontend/images/favorites_empty.png') }}"/> 
    {{"ADD_FAVORITIES_DETAILS" | trans}}
</button>
{%endif%}