{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}
{{"FAVORITIES"  | trans }}
{% endblock %}

{% set main_tab = 2 %}
{% block content_nav_top_body %}
{{"FAVORITIES_PAGE_DESCRIPTION" | trans}}
{% endblock %}

{% block body %}
<ul class="breadcrumb">
    <li><a href="{{ path('frontend_welcome') }}" title="{{"GO_HOME_TITLE" | trans}}">{{"HOME_MAIN_MENU" | trans}}</a> <span class="divider">»</span></li>
    <!--li class="active">{{"DESTINATIONS_MAIN_MENU" | trans}}<span class="divider">»</span></li-->
    <li class="active">{{ "FAVORITIES" | trans}}</li>
</ul>
<div id="loading" class="alert alert-info hidden"> <img src="{{ asset('bundles/frontend/images/loading.gif') }}"/> {{"LOADING_MESSAGE" | trans}}</div>
<div class="third_tab secondary_tab row-fluid">
    <div class="nav-tabs_cont">
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#owns_favorities">{{"OWNERSHIPS" | trans}}</a></li>
            <li><a data-toggle="tab" href="#destination_favorities">{{"DESTINATIONS" | trans}}</a></li>
        </ul>
    </div>
    <div class="tab-content">
        <div id="owns_favorities" class="tab-pane fade in active">
            <div class="row-fluid result_list ownerships_list" id="div_result">
                {{ include('frontEndBundle:ownership:ownershipItemList.html.twig', 
                {'list': ownership_favorities,
                'photos': ownership_favorities_photos,
                'rooms' : ownership_favorities_rooms,
                'is_in_favorities' : ownership_favorities_is_in,
                'list_preffix' : 'own_favorities',
                'is_in_favorites_list': true,
                'counts': counts_ownership
                }) }}      
            </div>
        </div>
        <div id="destination_favorities" class="tab-pane in">
            <div class="row-fluid result_list" id="div_result_destinations">
                {{ include('frontEndBundle:destination:itemListDestination.html.twig', 
                {'popular_places': destination_favorities,
                'popular_places_location': destination_favorities_localization,
                'popular_places_description' : destination_favorities_description,
                'popular_places_photos' : destination_favorities_photos,
                'popular_places_statistics' : destination_favorities_statistics,
                'is_in_favorities' : destination_favorities_is_in,
                'list_preffix' : 'own_favorities'
                }) }}      
            </div>
        </div>
    </div>
</div>
{% block include_javascripts %}
<!--script src="{{ asset('bundles/frontend/js/category_ownership.js') }}"></script-->    
{% endblock %}
{% endblock %}
