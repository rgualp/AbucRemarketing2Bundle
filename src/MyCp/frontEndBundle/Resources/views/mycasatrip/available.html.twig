{% set menu = 2 %}
{% extends 'frontEndBundle:mycasatrip:layout.html.twig' %}
{% block body_inner %}
{% set flag_own_res = 0 %}
{% for res in res_available %}
<div class="well mycasatrip_result">
    <div class="row-fluid">
        <div class="span4"><img src="{{ asset('uploads/ownershipImages/'~ res['photo']) }}" class="span12 img-polaroid"></div>
        <div style="margin-left: 10px" class="span8">
            <table style="width: 100%">
                <tbody><tr>
                    <td>
                        <h4 class="title_1">{{ res[0]['gen_res_own_id']['own_name'] }}</h4>
                        <p class="note">
                            {{ res[0]['gen_res_own_id']['own_address_municipality']['mun_name']|title }} - {{ res[0]['gen_res_own_id']['own_address_province']['prov_name']|title }}
                            {% set flag_own_room = 0 %}
                            {% for own_room in own_rooms[flag_own_res] %}
                            <br><b>{% if(own_reservations[flag_own_res][flag_own_room].getOwnResRoomType) %}{{own_reservations[flag_own_res][flag_own_room].getOwnResRoomType|capitalize}}{% else %}{{own_rooms[flag_own_res][flag_own_room].getRoomType}}{% endif %}</b>
                            <br>Adultos: <b>{{own_reservations[flag_own_res][flag_own_room].getOwnResCountAdults}}</b> &nbsp;&nbsp;Ni√±os: <b>{{own_reservations[flag_own_res][flag_own_room].getOwnResCountChildrens}}</b>
                            {% set flag_own_room = flag_own_room + 1 %}
                            {% endfor %}
                            <br/>
                            Desde: {{ res[0]['gen_res_from_date'] |date("d/m/Y") }} Hasta: {{ res[0]['gen_res_to_date'] |date("d/m/Y") }}
                        </p>
                    </td>
                    <td>
                        <p class="note"><b>ID Reserva:</b> CAS.{{res[0]['gen_res_id'] }}
                            <br>
                            <br>
                            <span class="badge badge-warning">Disponible</span>
                            {% set flag_own_room = 0 %}
                            {% set price = 0 %}
                            {% for own_res in own_reservations[flag_own_room] %}
                                {% set price = price + own_res.getOwnResNightPrice %}
                            {% set flag_own_room = flag_own_room + 1 %}
                            {% endfor %}
                        </p><h4>{{app.session.get('curr_symbol')}}{{ (price * count_nights[flag_own_res] ) * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}}</h4>
                        <p></p>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <hr/>
                    </td>
                </tr>
                <tr>
                    <td colspan="2"><a href="{{ path('frontend_mycasatrip_reservation',{'id_reservation':res[0]['gen_res_id']}) }}"><button class="btn mycp_btn mycp_btn_orange">Continuar con reserva</button></td></a>
                </tr>
                </tbody></table>
        </div>
    </div>
</div>
{% set flag_own_res = flag_own_res + 1 %}
{% else %}
<div class="alert a alert-info">{{"EMPTY_LIST" | trans}}</div>
{% endfor %}

{% endblock %}