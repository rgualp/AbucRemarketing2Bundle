{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}MyCasaTrip{% endblock %}
{% set main_tab = 6 %}
{% block content_nav_top_body %}
Mycasa trip
{% endblock %}
{% block body %}
<ul class="breadcrumb">
    <li><a title="Ir a la portada" href="{{ path('frontend_welcome') }}">{{"HOME_MAIN_MENU" | trans}}</a> <span
            class="divider">Â»</span></li>
    <li class="active">MyCasaTrip</li>
</ul>
<div class="green_bar msg_green_brand">
    <div class="row-fluid">
        <div class="span9"></div>
        <div class="span3">
            <form id="order_by_form" method="post" action="" style="margin: 0; text-align: right; padding: 0px 10px">
                <div class="btn-group mycp_combo">
                    <a id="mct_change_order" style="width: 180px" class="combo_label btn dropdown-toggle span2 " data-toggle="dropdown" data-value="{{order_by}}"></a>
                    <ul class="dropdown-menu" onclick="onSort();">
                        <li><a class="option" data="mct_change_order" data-value="0">{{"DATE" | trans}}</a></li>
                        <li><a class="option" data="mct_change_order" data-value="1">ID Reserva</a></li>
                        <li><a class="option" data="mct_change_order" data-value="2">{{"PRICE" | trans}}</a></li>            
                    </ul>
                    <input type="hidden" id="hidden_sort_order" name="mct_change_order" />
                 </div>
             </form>
        </div>
    </div>
</div>
<div class="thumbnail" style="border-radius: 0 0 8px 8px; padding: 10px 10px 12px">
    <div class="row-fluid">
        <div class="span4">
            {% if menu is not defined %}
            {% set menu = 0 %}
            {% endif %}
            {% render 'frontEndBundle:mycasatrip:get_menu_count' with {'menu_selected': menu} %}
        </div>
        <div class="span8">
            {% block body_inner %}
            {% endblock %}
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        $('#mct_change_order').html($('.option').eq({{order_by}}).html());
    });
    function onSort(){
        $('#hidden_sort_order').val($('#mct_change_order').attr('data-value')); 
        $('#order_by_form').submit();
    }
</script>    
{% endblock %}