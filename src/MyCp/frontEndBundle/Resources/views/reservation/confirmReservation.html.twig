{% extends 'frontEndBundle:mycasatrip:layout_blank.html.twig' %}
{% block body_inner %}
<link href="{{ asset('bundles/frontend/css/customReservationProcess.css') }}" rel="stylesheet" media="screen">
<div id="print_zone">
    <div class="paragraph" style="font-size: 13px">
        <div class="no_print pull-right" style="margin-top: -10px;">
            <button class="print_page btn mycp_btn_green"  style="padding: 4px 30px; font-weight: bold; margin-right: 10px">{{"PRINT"|trans}}</button>
            <button class="btn mycp_btn_orange"  style="padding: 4px;  font-weight: bold; font-size: 35px; color: #FFFFFF">+</button>
            <img src="{{ asset('bundles/frontend/images/tiny_tooltip_1_1_M.gif') }}" alt="">
        </div>
        <h4>{{"RESERVATION_CONFIRM"|trans}}</h4>
        <hr/>
        {{"DEAR_MR"|trans}} <b>John Travolta</b>
        <br/>
        <br/>
        {{"THANKS_RESERVATION_MYCP"|trans}} <b><a href="{{ path('frontend_welcome') }}">MyCasaParticular.com</a></b><br/>
        {{"PLEASE_PRINT_CONFIRMATION_OF_SERVICE"|trans}}<br/>
        {{"CAN_FOLLOWING_RESERVATIONS_MYCT"|trans}} <a href="{{ path('frontend_mycasatrip_pending') }}">MyCasaTrip</a>
    </div>
    <div class="row-fluid secondary_tab tab_type_2">
        <div class="nav-tabs_cont">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#popular_destinations" data-toggle="tab">{{"CLIENT_INFORMATION"|trans}}</a></li>
            </ul>
        </div>
        <div class="tab-content" style="">
            <div class="tab-pane fade in active ">
                <table class="table table_type_1">
                    <thead>
                    <tr>
                        <th colspan="2">{{"CLIENT_INFORMATION"|trans}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td width="30%"><b>{{"RESERVATION_NUMBER"|trans}}:</b></td>
                        <td>ID_{{ own_res.getOwnResId }}</td>
                    </tr>
                    <tr>
                        <td width="30%"><b>{{"CLIENT_NAME"|trans}}:</b></td>
                        <td>{{ own_res.getOwnResGenResId.getGenResUserId.getUserUserName }} {{ own_res.getOwnResGenResId.getGenResUserId.getUserLastName }}</td>
                    </tr>
                    <tr>
                        <td width="30%"><b>{{"EMAIL_TO"|trans}}</b></td>
                        <td>{{ own_res.getOwnResGenResId.getGenResUserId.getUserEmail }}</td>
                    </tr>
                    <tr>
                        <td width="30%"><b>{{"NACIONALITY"|trans}}:</b></td>
                        <td>{{ own_res.getOwnResGenResId.getGenResUserId.getUserCountry.getCoName }}</td>
                    </tr>
                    </tbody>
                </table>

                <table class="table table_type_1">
                    <thead>
                    <tr>
                        <th colspan="3">{{"RESERVE_SERVICE"|trans}}: {{"ACCOMMODATION"|trans}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td width="30%"><b>{{"ACCOMMODATION_NAME"|trans}}:</b></td>
                        <td width="40%">{{ own_res.getOwnResOwnId.getOwnName }}</td>
                        <td rowspan="5">
                            <div class="thumbnail" style="padding: 12px">
                                <div id="big_map_details" class="google-maps" style="width:100%;height: 150px;"
                                     data-x="{{own_res.getOwnResOwnId.getOwnGeolocateX}}"
                                     data-y="{{own_res.getOwnResOwnId.getOwnGeolocateY}}"
                                     data-name="{{own_res.getOwnResOwnId.getOwnName}}"
                                     data-description=""
                                     data-image=""
                                     data-icon="http://www.mycasaparticular.com/web/bundles/frontend/images/map.png">
                                </div>
                        </td>
                    </tr>
                    <tr>
                        <td><b>{{"ID_HOME"|trans}}:</b></td>
                        <td>{{ own_res.getOwnResOwnId.getOwnMcpCode }}</td>
                    </tr>
                    <tr>
                        <td><b>{{"OWNERS_NAME"|trans}}:</b></td>
                        <td>{{ own_res.getOwnResOwnId.getOwnHomeowner1 }} {% if own_res.getOwnResOwnId.getOwnHomeowner2 %}y {{ own_res.getOwnResOwnId.getOwnHomeowner2 }}{% endif %}</td>
                    </tr>
                    <tr>
                        <td><b>{{"ADDRESS"|trans}}:</b></td>
                        <td>{{ own_res.getOwnResOwnId.getOwnAddressStreet }}, n√∫mero {{ own_res.getOwnResOwnId.getOwnAddressNumber }}, entre {{ own_res.getOwnResOwnId.getOwnAddressBetweenStreet1 }} y {{ own_res.getOwnResOwnId.getOwnAddressBetweenStreet2 }}.
                            {{ own_res.getOwnResOwnId.getOwnAddressMunicipality.getMunName }}, {{own_res.getOwnResOwnId.getOwnAddressProvince.getProvName }}.
                        </td>
                    </tr>
                    <tr>
                        <td><b>{{"FORMS_PHONE"|trans}}:</b></td>
                        <td>(+53) {{ own_res.getOwnResOwnId.getOwnAddressProvince.getProvPhoneCode }} {{ own_res.getOwnResOwnId.getOwnPhoneNumber }}</td>
                    </tr>
                    </tbody>
                </table>
                <table class="table table_type_1">
                    <thead>
                    <tr>
                        <th colspan="6">{{"RESERVATION_DETAILS"|trans}}: {{"ROOM_PLURAL"|trans}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td colspan="6"><b>{{"RESERVATION_ROOM"|trans}} ({{own_res.getOwnResRoomType|trans}})</b></td>
                    </tr>
                    <tr>
                        <td><b>{{"ARRIVAL_RESERVATION"|trans}}:</b></td>
                        <td>{{ own_res.getOwnResReservationFromDate| date("d/m/Y") }}</td>
                        <td><b>{{"DEPARTURE_RESERVATION"|trans}}:</b></td>
                        <td>{{ own_res.getOwnResReservationToDate| date("d/m/Y") }}</td>
                        <td><b>{{"NIGHTS"|trans}}:</b></td>
                        <td>{{ own_res.getOwnResReservationToDate| date("d/m/Y") - own_res.getOwnResReservationFromDate| date("d/m/Y") }}</td>
                    </tr>
                    <tr>
                        <td><b>{{"SELECT_ROOM_TYPE_OPTION"|trans}}:</b></td>
                        <td>{{ own_res.getOwnResRoomType|trans }}</td>
                        <td><b>{{"ADULTS"|trans}}:</b></td>
                        <td>{{ own_res.getOwnResCountAdults }}</td>
                        <td><b>{{"KIDS"|trans}}:</b></td>
                        <td>{{ own_res.getOwnResCountChildrens }}</td>
                    </tr>
                    <tr>
                        <td><b>{{"SELECT_BATHROOM_TYPE_OPTION"|trans}}:</b></td>
                        <td colspan="5">{{ room.getRoomBathroom|trans }}</td>
                    </tr>
                    </tbody>
                </table>
                <table class="table table_type_1">
                    <thead>
                    <tr>
                        <th>{{"PAYMENT_DETAILS"|trans}}: {{"BILL"|trans}}</th>
                        <th style="text-align: right"><b>{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}</b></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{"PRICE_OF_ACCOMMODATION_SERVICE"|trans}}</td>
                        <td style="text-align: right">{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{ own_res.getOwnResNightPrice * count_nights * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}}</td>
                    </tr>
                    <tr>
                        <td>Total {{"SERVICE_RECHARGE"|trans|lower}}</td>
                        <td style="text-align: right">{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{ 10 * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}}</td>
                    </tr>
                    <tr>
                        <td>{{"OTHER_SERVICES_HEADING_FILTER"|trans}}</td>
                        <td style="text-align: right">0</td>
                    </tr>
                    <tr>
                        <td><b>Total</b></td>
                        <td style="text-align: right"><b>{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{ own_res.getOwnResNightPrice * count_nights * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}}</b></td>
                    </tr>
                    <tr>
                        <td>- {{"TOTAL_PREPAYMENT"|trans}} ({{ own_res.getOwnResOwnId.getOwnCommissionPercent }}%)</td>
                        <td style="text-align: right">{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{ (own_res.getOwnResNightPrice * count_nights * own_res.getOwnResOwnId.getOwnCommissionPercent / 100) * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate')) }}</td>
                    </tr>
                    <tr style="background-color: #F6FDDC">
                        <td><b>{{"TOTAL_TO_PAY_SERVICING"|trans}}</b></td>
                        <td style="text-align: right">{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{((own_res.getOwnResNightPrice * count_nights * own_res.getOwnResOwnId.getOwnCommissionPercent / 100) + 10)*(app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}}</td>
                    </tr>

                    </tbody>
                </table>
                <div class="no_print" style="text-align: right">
                    <button class="print_page btn mycp_btn_green"  style="padding: 4px 30px; font-weight: bold; margin-right: 10px">{{"PRINT"|trans}}</button>
                    <button class="btn mycp_btn_orange"  style="padding: 4px;  font-weight: bold; font-size: 35px; color: #FFFFFF">+</button>
                    <img style="width: 56px; height: 32px" src="{{ asset('bundles/frontend/images/tiny_tooltip_1_1_M.gif') }}" alt="">
                </div>
            </div>
        </div>
    </div>
    <br/>
    <br/>
</div>
<script src="{{ asset('bundles/frontend/js/jquery/jquery.PrintArea.js') }}"></script>
<script type="text/javascript">
    $(".print_page").click(function (){
        $("div#print_zone").printArea();
    })
</script>
<script src="http://maps.googleapis.com/maps/api/js?v=3&sensor=false" type="text/javascript"></script>
<script src="{{ asset('bundles/frontend/js/jquery/jquery.ui.map.js') }}"></script>
<script src="{{ asset('bundles/frontend/js/jquery/jquery.ui.map.infobox.js') }}"></script>
<script src="{{ asset('bundles/frontend/js/ownership_details.js') }}"></script>
{% endblock %}