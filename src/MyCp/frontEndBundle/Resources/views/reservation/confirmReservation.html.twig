{% extends 'frontEndBundle:mycasatrip:layout_blank.html.twig' %}
{% block body_inner %}
<link href="{{ asset('bundles/frontend/css/customReservationProcess.css') }}" rel="stylesheet" media="screen">
<div id="print_zone">
    <div class="paragraph" style="font-size: 13px">
        <div class="no_print pull-right" style="margin-top: -10px;">
            <button class="print_page btn mycp_btn_green"  style="padding: 4px 30px; font-weight: bold; margin-right: 10px">{{"PRINT"|trans}}</button>
        </div>
        <h4>{{"RESERVATION_CONFIRM"|trans}}</h4>
        <hr/>
        {{"DEAR_MR"|trans}} <b>{{ user.getUserUserName }} {{ user.getUserLastName }}</b>
        <br/>
        <br/>
        {{"THANKS_RESERVATION_MYCP"|trans}} <b><a href="{{ path('frontend_welcome') }}">MyCasaParticular.com</a></b><br/>
        {{"PLEASE_PRINT_CONFIRMATION_OF_SERVICE"|trans}}<br/>
        {{"CAN_FOLLOWING_RESERVATIONS_MYCT"|trans}} <a href="{{ path('frontend_mycasatrip_pending') }}">MyCasaTrip</a>
    </div>
    <div class="row-fluid secondary_tab tab_type_2">
        <div class="nav-tabs_cont">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#popular_destinations" data-toggle="tab">{{"CLIENT_INFORMATION"|trans}}</a></li>
            </ul>
        </div>
        <div class="tab-content" style="">
            <div class="tab-pane fade in active ">
                <table class="table table_type_1">
                    <thead>
                    <tr>
                        <th colspan="2">{{"CLIENT_INFORMATION"|trans}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td width="30%"><b>{{"RESERVATION_NUMBER"|trans}}:</b></td>
                        <td>ID_{{ booking.getBookingId }}</td>
                    </tr>
                    <tr>
                        <td width="30%"><b>{{"CLIENT_NAME"|trans}}:</b></td>
                        <td>{{ user.getUserUserName }} {{ user.getUserLastName }}</td>
                    </tr>
                    <tr>
                        <td width="30%"><b>{{"EMAIL_TO"|trans}}</b></td>
                        <td>{{ user.getUserEmail }}</td>
                    </tr>
                    <tr>
                        <td width="30%"><b>{{"NACIONALITY"|trans}}:</b></td>
                        <td>{{ user.getUserCountry.getCoName }}</td>
                    </tr>
                    </tbody>
                </table>
                {% for own in own_res %}
                <table class="table table_type_1">
                    <thead>
                    <tr>
                        <th colspan="3">{{"RESERVE_SERVICE"|trans}}: {{"ACCOMMODATION"|trans}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td width="30%"><b>{{"ACCOMMODATION_NAME"|trans}}:</b></td>
                        <td width="40%">{{ own.getOwnResGenResId.getGenResOwnId.getOwnName }}</td>
                        <td rowspan="5">
                            <div class="thumbnail" style="padding: 12px">
                                <div id="big_map_details" class="google-maps" style="width:100%;height: 150px;"
                                     data-x="{{own.getOwnResGenResId.getGenResOwnId.getOwnGeolocateX}}"
                                     data-y="{{own.getOwnResGenResId.getGenResOwnId.getOwnGeolocateY}}"
                                     data-name="{{own.getOwnResGenResId.getGenResOwnId.getOwnName}}"
                                     data-description=""
                                     data-image=""
                                     data-icon="{{ app.request.getSchemeAndHttpHost() ~ asset('bundles/frontend/images/map_marker.png') }}">
                                </div>
                        </td>
                    </tr>
                    <tr>
                        <td><b>{{"ID_HOME"|trans}}:</b></td>
                        <td>{{ own.getOwnResGenResId.getGenResOwnId.getOwnMcpCode }}</td>
                    </tr>
                    <tr>
                        <td><b>{{"OWNERS_NAME"|trans}}:</b></td>
                        <td>{{ own.getOwnResGenResId.getGenResOwnId.getOwnHomeowner1 }} {% if own.getOwnResGenResId.getGenResOwnId.getOwnHomeowner2 %}y {{ own.getOwnResGenResId.getGenResOwnId.getOwnHomeowner2 }}{% endif %}</td>
                    </tr>
                    <tr>
                        <td><b>{{"ADDRESS"|trans}}:</b></td>
                        <td>{{ own.getOwnResGenResId.getGenResOwnId.getOwnAddressStreet }}, n√∫mero {{ own.getOwnResGenResId.getGenResOwnId.getOwnAddressNumber }}, entre {{ own.getOwnResGenResId.getGenResOwnId.getOwnAddressBetweenStreet1 }} y {{ own.getOwnResGenResId.getGenResOwnId.getOwnAddressBetweenStreet2 }}.
                            {{ own.getOwnResGenResId.getGenResOwnId.getOwnAddressMunicipality.getMunName }}, {{own.getOwnResGenResId.getGenResOwnId.getOwnAddressProvince.getProvName }}.
                        </td>
                    </tr>
                    <tr>
                        <td><b>{{"FORMS_PHONE"|trans}}:</b></td>
                        <td>(+53) {{ own.getOwnResGenResId.getGenResOwnId.getOwnAddressProvince.getProvPhoneCode }} {{ own.getOwnResGenResId.getGenResOwnId.getOwnPhoneNumber }}</td>
                    </tr>
                    </tbody>
                </table>
                <table class="table table_type_1">
                    <thead>
                    <tr>
                        <th colspan="6">{{"RESERVATION_DETAILS"|trans}}: {{"ROOM_PLURAL"|trans}}</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td colspan="6"><b>{{"RESERVATION_ROOM"|trans}} ({{own.getOwnResRoomType|trans}})</b></td>
                    </tr>
                    <tr>
                        <td><b>{{"ARRIVAL_RESERVATION"|trans}}:</b></td>
                        <td>{{ own.getOwnResReservationFromDate| date("d/m/Y") }}</td>
                        <td><b>{{"DEPARTURE_RESERVATION"|trans}}:</b></td>
                        <td>{{ own.getOwnResReservationToDate| date("d/m/Y") }}</td>
                        <td><b>{{"NIGHTS"|trans}}:</b></td>
                        <td>{{ nights[loop.index0] }}</td>
                    </tr>
                    <tr>
                        <td><b>{{"SELECT_ROOM_TYPE_OPTION"|trans}}:</b></td>
                        <td>{{ own.getOwnResRoomType|trans }}</td>
                        <td><b>{{"ADULTS"|trans}}:</b></td>
                        <td>{{ own.getOwnResCountAdults }}</td>
                        <td><b>{{"KIDS"|trans}}:</b></td>
                        <td>{{ own.getOwnResCountChildrens }}</td>
                    </tr>
                    <tr>
                        <td><b>{{"SELECT_BATHROOM_TYPE_OPTION"|trans}}:</b></td>
                        <td colspan="5">{{ rooms[loop.index0].getRoomBathroom|trans }}</td>
                    </tr>
                    </tbody>
                </table>
                {% endfor %}
                <table class="table table_type_1">
                    <thead>
                    <tr>
                        <th>{{"PAYMENT_DETAILS"|trans}}: {{"BILL"|trans}}</th>
                        <th style="text-align: right"><b>{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}</b></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{"PRICE_OF_ACCOMMODATION_SERVICE"|trans}}</td>
                        <td style="text-align: right">{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{ total_price * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}}</td>
                    </tr>
                    <tr>
                        <td>{{"RESERVATION_TOTAL" | trans}} {{"SERVICE_RECHARGE"|trans|lower}}</td>
                        <td style="text-align: right">{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{ 10 * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}}</td>
                    </tr>
                    <tr>
                        <td>{{"OTHER_SERVICES_HEADING_FILTER"|trans}}</td>
                        <td style="text-align: right">0</td>
                    </tr>
                    <tr>
                        <td><b>{{"RESERVATION_TOTAL" | trans}}</b></td>
                        <td style="text-align: right"><b>{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{ total_price * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}}</b></td>
                    </tr>
                    <tr>
                        <td>- {{"TOTAL_PREPAYMENT"|trans}} ({% for comm in commissions %}{{comm}}%{% if not loop.last %}, {% endif %}{% endfor %})</td>
                        <td style="text-align: right">{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{ (total_percent_price) * (app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate')) }}</td>
                    </tr>
                    <tr style="background-color: #F6FDDC">
                        <td><b>{{"TOTAL_TO_PAY_SERVICING"|trans}}</b></td>
                        <td style="text-align: right">{{app.session.get('curr_symbol') == null ? "$" : app.session.get('curr_symbol')}}{{((total_percent_price) + 10)*(app.session.get('curr_rate') == null ? 1 : app.session.get('curr_rate'))}}</td>
                    </tr>

                    </tbody>
                </table>
                <div class="no_print" style="text-align: right">
                    <button class="print_page btn mycp_btn_green"  style="padding: 4px 30px; font-weight: bold; margin-right: 10px">{{"PRINT"|trans}}</button>
                </div>
            </div>
        </div>
    </div>
    <br/>
    <br/>
</div>
<script src="{{ asset('bundles/frontend/js/jquery/jquery.PrintArea.js') }}"></script>
<script type="text/javascript">
    $(".print_page").click(function (){
        $("div#print_zone").printArea();
    })
</script>
<script src="{{ global_google_maps_api_url_with_key }}" type="text/javascript"></script>
<script src="{{ asset('bundles/frontend/js/jquery/jquery.ui.map.js') }}"></script>
<script src="{{ asset('bundles/frontend/js/jquery/jquery.ui.map.infobox.js') }}"></script>
<script src="{{ asset('bundles/frontend/js/ownership_details.js') }}"></script>
{% endblock %}