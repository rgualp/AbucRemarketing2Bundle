{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}
{{"RESERVATION_CONFIRM" | trans}}
{% endblock %}

{% set main_tab = 5 %}
{% block content_nav_top_body %}
destinos
{% endblock %}

{% block body %}
<ul class="breadcrumb">
    <li><a href="{{ path('frontend_welcome') }}" title="{{"GO_HOME_TITLE" | trans}}">{{"HOME_MAIN_MENU" | trans}}</a> <span class="divider">Â»</span></li>
    <li class="active">{{"RESERVATION_CONFIRM" | trans}}</li>
</ul>

<div class="row-fluid landing_page">
    <div class="thumbnail">
        <div class="cont" style="padding: 6px 20px 10px 20px">
            <h3>{{"RESERVATION_CONFIRM_TITLE"|trans}}</h3>
            <h5>{{"RESERVATION_CONFIRM_SUBTITLE"|trans}}</h5>
            <img src="{{asset("bundles/frontend/images/ok_confirm.png")}}"/>
        </div>
    </div>
    {%if owns_in_destination | length%}
    <div class="msg_green_brand">{{"RESERVATION_CONFIRM_GREENBAR_TEXT"|trans}}</div>
    <h6>{{"RESERVATION_CONFIRM_GREENBAR_SUBTEXT"|trans}}</h6>
    <div class="row-fluid">
        {%for own in owns_in_destination%}
        <div class="span3">
            {{ include('frontEndBundle:ownership:homeItemOwnership.html.twig',{'ownership': own,
                           'is_in_favorite': owns_in_destination_favorities[own.ownid],
                           'photo': owns_in_destination_photos[own.ownid],
                           'list_preffix': 'owns_in_destination',
                           'show_consult_button': true }) }}
            <!--/li-->
        </div>
        {%endfor%}
    </div>
    <div class="row-fluid gray_bar">
        <div class="span8">{{owns_in_destination_total}} {{"RESERVATION_CONFIRM_GRAYBAR_SUBTEXT"|trans}}</div>
        <div class="span4 social_webs">{{ include('frontEndBundle:utils:netSocials.html.twig',{"gray_theme":true}) }}</div>
    </div>
    {%endif%}

    {% if other_destinations | length%}
    <div class="row-fluid" style="margin-top: 20px">
        <h4>{{"RESERVATION_CONFIRM_DESTINATION_AREA_TITLE"|trans}}</h4>
    </div>
    <div class="row-fluid" style="margin-top: 10px">
        {%for destination in other_destinations%}
        <div class="span6 destination_item">
            <div class="row-fluid title">
                <a title="{{"MORE_INFO_PREFFIX" | trans}} {{destination.desName}}" href="{{ path('frontend_details_destination',{'destination_id':destination.desid}) }}">
                    {{destination.desname}}
                </a>
            </div>
            <div class="row-fluid" style="margin-top:8px">
                <div class="span7">
                    <a title="{{"MORE_INFO_PREFFIX" | trans}} {{destination.desName}}" href="{{ path('frontend_details_destination',{'destination_id':destination.desid}) }}">
                        <img class="img-polaroid" style="height: 200px;" src="{{asset("uploads/destinationImages/"~other_destinations_photos[destination.desid])}}">
                    </a>
                </div>
                <div class="span5 owns_total">
                    {{other_destinations_count[destination.desid]["total"]}}
                    <label>{{"RESERVATION_CONFIRM_DESTINATION_OWNS_AVAILABLE"|trans}}</label>
                </div>
            </div>
            <div class="row-fluid description">
                {{destination.getFirstDestDesc.getDesLangBrief | slice(0,280) | striptags}}...
            </div>
            <div class="row-fluid">
                <div class="favorite span2">
                    {{ include('frontEndBundle:favorite:itemFavorite.html.twig',
                        {'is_in_favorite': other_destinations_favorities[destination.desid],
                         'favorite_type': 'destination',
                         'element_id':destination.desid,
                         'list_preffix' : 'landing_page'
                         }) }}
                </div>
                <div class="span10 link" style="text-align: right;">
                    <a title="{{"MORE_INFO_PREFFIX" | trans}} {{destination.desName}}" href="{{ path('frontend_details_destination',{'destination_id':destination.desid}) }}">{{"RESERVATION_CONFIRM_DESTINATION_MORE"|trans}} <img src="{{asset("bundles/frontend/images/more_icon.gif")}}"/></a>
                </div>
            </div>
        </div>
        {%endfor%}
    </div>
    {%endif%}

    <div class="row-fluid" style="margin-top: 20px">
        {%render "frontEndBundle:user:info_tab_user"%}
    </div>

</div>
{% endblock %}