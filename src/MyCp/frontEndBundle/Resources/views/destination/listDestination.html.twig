{% extends 'frontEndBundle:layout:base.html.twig' %}
{% block title %}
{{"POPULAR_DESTINATIONS_PAGE_TITLE" | trans}}
{% endblock %}

{% block include_javascripts_and_css %}
<link href="{{ asset('bundles/frontend/css/royal_slider/royalslider.css') }}" rel="stylesheet" >
<link href="{{ asset('bundles/frontend/css/royal_slider/rs-default.css') }}" rel="stylesheet" >
<script src="{{ asset('bundles/frontend/js/royal_slider/jquery.royalslider.min.js') }}"></script>
<script src="{{ asset('bundles/frontend/js/destinations.js') }}"></script>
{% endblock %}

{% set main_tab = 2 %}
{% block content_nav_top_body %}
destinos
{% endblock %}

{% block body %}
<ul class="breadcrumb" style="margin-bottom: 10px">
    <li><a href="{{ path('frontend_welcome') }}" title="{{"GO_HOME_TITLE" | trans}}">{{"HOME_MAIN_MENU" | trans}}</a> <span class="divider">Â»</span></li>
    <li class="active">{{"DESTINATIONS_MAIN_MENU" | trans}}</li>
</ul>

<div id="loading" class="alert alert-info hidden"> <img src="{{ asset('bundles/frontend/images/loading.gif') }}"/> {{"LOADING_MESSAGE" | trans}}</div>

<div style="border: 1px solid gray; padding: 3px">
    <div id="destinations-slider" class="royalSlider rsDefault" style="margin-top: 0px">
        <img class="rsImg" src="{{ asset('bundles/frontend/images/destiny_slide_imgs/1.jpg') }}" alt="">
        <img class="rsImg" src="{{ asset('bundles/frontend/images/destiny_slide_imgs/2.jpg') }}" alt="">
        <img class="rsImg" src="{{ asset('bundles/frontend/images/destiny_slide_imgs/3.jpg') }}" alt="">
        <img class="rsImg" src="{{ asset('bundles/frontend/images/destiny_slide_imgs/4.jpg') }}" alt="">
        <img class="rsImg" src="{{ asset('bundles/frontend/images/destiny_slide_imgs/5.jpg') }}" alt="">
        <img class="rsImg" src="{{ asset('bundles/frontend/images/destiny_slide_imgs/6.jpg') }}" alt="">
    </div>
</div>

<div style="margin: 5px 0 15px 0; color: gray; font-size: 21px; font-weight: bold">Conocer Cuba, vivir Cuba!</div>
<div style="background-color: #9C3; color: white; margin-bottom: 5px; padding: 7px; font-size: 21px">Principales destinos de Cuba</div>

<div class="row-fluid result_list">
    {%for destination in destinations%}
        <div class="span4 item" style="margin: 5px">
            <a title="{{"MORE_INFO_PREFFIX" | trans}} {{destination.desName}}" style="font-size: 18px; font-weight: bold" href="{{ path('frontend_details_destination',{'destination_id':destination.desid}) }}">
                <div style="margin: 3px">{{destination.desName}}</div>
                <img class="span7" class="img-polaroid" src="{{ asset("uploads/destinationImages/" ~ destination.getFirstDestinationPhotoName)}}" style="height: 100px" />
            </a>    
                <div class="span12" style="margin: 5px 5px 0 0">
                    {{destination.getFirstDestDesc.getDesLangBrief}}
                </div>    
        </div>
        
    {%else%}
        <div class="noData">{{"EMPTY_LIST" | trans}}</div>
    {%endfor%}
</div>

{% endblock %}