<form novalidate class="form-horizontal" action="{{ path("frontend_partner_restore_password_user") }}" method="post">
    {{ form_widget(form._token) }}
    <div class="row">
        <div class="col-sm-3 text-right to-left">
            {{ form_label(form.user_email) }}:
        </div>
        <div class="col-sm-7">
            {{ form_widget(form.user_email) }}
            <button class="btn btn-primary btn-block" type="submit"
                    style="margin: 20px 0">{{ "FORGOT_PASSWORD_BUTTON" | trans }}</button>
        </div>
    </div>
</form>
