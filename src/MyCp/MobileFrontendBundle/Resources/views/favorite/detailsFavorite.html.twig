<div class="favorites_details">
{%if is_in_favorite%}
<button class="btn btn-default btn-block f-s-12 p-y-1" id="delete_from_favorites" data-url="{{path('frontend_details_delete_favorite_callback')}}" data-id="{{element_id}}" data-type="{{favorite_type}}">
    <i class="glyphicons heart red_mycp f-s-20 m-r-5"></i>
    {{"FAVORITIES" | trans}}
</button>

{%else%}
<button class="btn btn-default btn-block f-s-12 p-y-1" id="add_to_favorites" data-url="{{path('frontend_details_insert_favorite_callback')}}" data-id="{{element_id}}" data-type="{{favorite_type}}">
    <i class="glyphicons heart f-s-20 m-r-5"></i>
    {{"FAVORITIES" | trans}}
</button>
{%endif%}
    </div>

