{% extends 'MyCpMobileFrontendBundle::base.html.twig'%}
{%set section = constant('\\MyCp\\mycpBundle\\Entity\\metaTag::SECTION_CONTACT_US')%}
{% block title %}{{"OFFERS_SERVICE_TRANSFER" | trans}} Cuba{% endblock %}

{% block metas %}
    {{ get_metas('Transfer', app.session.get('app_lang_code')|lower )|raw }}
{% endblock metas %}
{% block include_css %}
    <style>
        .form-control{
            color:black;
        }

    </style>
{% endblock %}

{% block content %}

    <div class="container wow fadeIn" style="visibility: visible; animation-name: fadeIn;">

        <!-- Heading -->

        <h1 class="my-5 h2 text-center">{{"OFFERS_SERVICE_TRANSFER" | trans}}</h1>
        <h5 class="my-5 h5 text-center">{{ 'TRANSFER_TITTLE'|trans|raw }}</h5>

        <!--Grid row-->
        <div class="row">

            <!--Grid column-->
            <div class="col-md-8 mb-4">

                <!--Card-->
                <div class="card">

                    <!--Card content-->
                    <form class="card-body" id="transfer_form"  action="{{ path('frontend_submit_transfer') }}" >

                        <!--Grid row-->
                        <div class="row">

                            <!--Grid column-->
                            <div class="col-md-6 mb-2">

                                <!--firstName-->
                                <div class="md-form ">

                                    <label for="firstName" class="">{{ 'FORMS_NAME'|trans }}</label>
                                    <input type="text" id="firstName" required="" name="name" class="form-control" {% if app.user.getUserUserName is defined%}value="{{ app.user.getUserUserName }}"{% endif %}>

                                </div>

                            </div>
                            <!--Grid column-->

                            <!--Grid column-->
                            <div class="col-md-6 mb-2">

                                <!--lastName-->
                                <div class="md-form">
                                    <label for="lastName" class="">{{ 'FORMS_LASTNAME'|trans }}</label>
                                    <input type="text" id="lastName" required="" name="lastname" class="form-control"{% if app.user.getUserUserName is defined%}value="{{ app.user.getUserLastName }}"{% endif %}>

                                </div>

                            </div>
                            <!--Grid column-->

                        </div>
                        <!--Grid row-->



                        <!--email-->
                        <div class="md-form mb-5">
                            <label for="email" class="active">{{ 'FORMS_EMAIL'|trans }}</label>
                            <input type="text" id="email" class="form-control" required="" name="email" placeholder="youremail@example.com"{% if app.user.getUserUserName is defined%}value="{{ app.user.getUserEmail }}"{% endif %}>

                        </div>

                        <!--email-->
                        <div class="md-form mb-5">
                            <label for="email" class="active">Pick up {{ 'ADDRESS'|trans }}</label>
                            <input type="text" id="addres" class="form-control" required="" name="addres" placeholder="{{ 'ADDRESS'|trans }}">

                        </div>

                        <!--Grid row-->
                        <div class="row">

                            <!--Grid column-->
                            <div class="col-lg-4 col-md-12 mb-4">

                                <label for="country">{{ 'OFFERS_SERVICE_TRANSFER'|trans }}</label>
                                <select class="custom-select d-block w-100" id="country" name="transfer" required="">
                                    <option value="">...</option>
                                    {%for trans in transfer %}
                                        <option value="{{ trans.id }}">{{ trans.from }} - {{ trans.to }} </option>
                                    {% endfor %}

                                </select>


                            </div>
                            <!--Grid column-->

                            <!--Grid column-->
                            <div class="col-lg-4 col-md-6 mb-4">
                                <label for="address-2" class="active">Pax:</label>
                                <input min="1" name="pax" type="number" id="address-2" class="form-control" required="" placeholder="People Amount">



                            </div>

                            <!--Grid column-->
                            <div class="col-lg-4 col-md-6 mb-4">
                                <label for="address-2" class="active">{{ 'backend.package.bookings.date'|trans }}:</label>
                                <input min="1" name="date" type="date" id="date" class="form-control" required="" placeholder="People Amount">



                            </div>



                        </div>
                        <!--Grid row-->
                        <!--Grid row-->
                        <div class="row">
                            <div class="d-none col-lg-4 col-md-6 mb-4" id="aaa">
                                <label for="horas" class="active">Airline:</label>
                                <input  name="aereolinea" type="text" id="airline" class="form-control" required="">



                            </div>
                            <!--Grid column-->
                            <div class="d-none col-lg-4 col-md-6 mb-4" id="fff">
                                <label for="horas" class="active">Fly #:</label>
                                <input  name="vuelo" type="text" id="fly" class="form-control" >



                            </div>
                            <!--Grid column-->
                            <div class="col-lg-4 col-md-6 mb-4">
                                <label for="horas" class="active">Time:</label>
                                <input  name="hora" type="time" id="horas" class="form-control" >



                            </div>





                        </div>


                        <hr>

                        <div class="d-block my-3">
                            <div class="custom-control custom-radio">
                                <input id="private" name="transferMethod" value="1" type="radio" class="custom-control-input" checked="" required="">
                                <label class="custom-control-label" for="private">{{ 'TRANSFER_TAXI_TYPE_PRIVATE'|trans }}</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input id="van" name="transferMethod" type="radio" value="2" class="custom-control-input" required="">
                                <label class="custom-control-label" for="van">{{ 'TRANSFER_TAXI_TYPE_COLECTIVE'|trans }}</label>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col form-group">
                                <label for="date">Please give us all the details?</label>
                                <textarea required="" style="height: 180px;" name="comment" class="form-control" rows="6" style="border-radius: 0"></textarea>
                            </div>
                        </div>

                        <hr class="mb-4">
                        <button id="submitbtn" class="btn btn-primary btn-lg btn-block waves-effect waves-light" type="submit">{{'SEND' | trans}}</button>

                    </form>

                </div>
                <!--/.Card-->

            </div>
            <!--Grid column-->

            <!--Grid column-->
            <div class="card col-md-4 mb-4">

                <!-- Heading -->
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Our Services</span>
                    <span class="badge badge-secondary badge-pill">{{ transfer|length }}</span>
                </h4>

                <!-- Cart -->
                <ul class="list-group mb-3 z-depth-1">
                    {%for trans in transfer %}
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">{{  trans.from }} - {{  trans.to}}- (Private)</h6>

                            </div>
                            <span class="text-muted">{{  trans.price|price}}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">{{  trans.from }} - {{  trans.to}}- (Colective) </h6>

                            </div>
                            {% if trans.priceVan > 0 %}

                                <span class="text-muted">{{trans.priceVan|price}}</span>
                            {% else %}
                                <span class="text-muted  text-warning">{{ 'NOT_AVAILABLE'|trans }}</span>


                            {% endif %}

                        </li>
                    {% endfor %}

                </ul>
                <!-- Cart -->

                <!-- Promo code -->
                <ul class="card p-2">
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>

                            <img alt="Classic" title="Classic Car" src="{{ asset('bundles/frontend/img/classic.JPG') }}" class="img-fluid my-0"></img>

                        </div>

                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <img alt="Modern" title="Modern Car" src="{{ asset('bundles/frontend/img/modern.JPG') }}" class="img-fluid my-0"></img>


                        </div>

                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <img alt="Minivan" title="Minivan Car" src="{{ asset('bundles/frontend/img/minivan.JPG') }}" class="img-fluid my-0"></img>


                        </div>

                    </li>
                </ul>
                <!-- Promo code -->

            </div>
            <!--Grid column-->

        </div>
        <!--Grid row-->

    </div>

{%endblock%}
{% block includejs %}
    <script type="text/javascript">

            var form = $("#transfer_form");
            form.on("submit", function (e) {
                //Solo se envia por ajax
                //1-si el usuario no esta logueado solo se envia para el wishlist.
                //2-Cuando el usser esta login se manda por ajax la wishlist y la consulta de disponibilidad.
                e.stopPropagation();
                e.preventDefault();
                var formData = new FormData(form[0]);
                console.log(formData);
                $.ajax({
                    url: form.attr('action'),
                    type: "post",
                    dataType: "html",
                    data: formData,
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function(response){
                        if(response==1) {
                            swal("{{ 'REQUEST_IN_PROCESS_24_HOURS'| trans }}", "", "success");
                            window.location.href="{{ path('frontend-welcome') }}";
                        }
                        else{
                            swal("{{ 'ERROR_TITLE_PAGE'| trans }}", "", "error");
                        }

                    }


                });

            });
            $('#country').on('change', function () {

                if(this.value==1){

                    $('#fff').removeClass('d-none');
                    $('#aaa').removeClass('d-none');
                }
                else{

                    $('#fff').addClass('d-none');
                    $('#aaa').addClass('d-none');
                }


            });

    </script>
{% endblock includejs %}
