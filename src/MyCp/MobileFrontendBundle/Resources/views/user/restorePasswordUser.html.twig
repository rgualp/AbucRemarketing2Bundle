{% extends '@MyCpMobileFrontend/base.html.twig' %}
{% block title %}{{"FORGOT_PASSWORD_PAGE_TITLE" | trans}}{% endblock %}
{% block body %}
    <div class="space space-30"></div>
<div class="container">
    <h2 class="caecilia-roman big-price-green text-center no-margin" style="font-weight: normal; margin-top: 35px">{{"FORGOT_PASSWORD_SUBTITLE" | trans }}</h2>
    <div><img src="{{ asset('bundles/frontend/img/line-gradient-green.png') }}" style="width: 100%; height: 1px; margin: 16px 0" alt="{{"Green" | trans}}"></div>
    <div class="row">
        <div class="col-xs-12"></div>
        <div class="col-xs-12">
            {% if errors['no_email'] is defined%}
                <div class="alert alert-danger text-center">{{errors['no_email']}}</div>
            {% endif %}
            {% if form_errors(form.user_email) %}
                <div class="alert alert-danger text-center">{{ form_errors(form.user_email)}}</div>
            {% endif %}
        </div>
        <div class="col-xs-12"></div>
    </div>
    <div class="row">
        <div class="col-xs-12"></div>
        <div class="col-xs-12">
            <form novalidate class="form-horizontal" action="{{ path("frontend_restore_password_user") }}" method="post">
                <div class="row">
                    <div class="col-xs-12 text-xs-center">
                        {{ form_label(form.user_email) }}:
                    </div>
                    <div class="col-xs-12 text-xs-center">
                        {{ form_widget(form.user_email) }}
                        <button class="btn btn-primary btn-block" type="submit" style="margin: 20px 0">{{"FORGOT_PASSWORD_BUTTON" | trans}}</button>
                        <a style="text-decoration: underline" href="{{ path('frontend_register_confirmation_user') }}">{{"USER_INSTRUCTIONS_QUESTIONS" | trans}}</a>
                    </div>
                </div>
                {{ form_rest(form)}}
            </form>

        </div>
        <div class="col-xs-12"></div>
    </div>
</div>
{%endblock%}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('.form-horizontal label').css('fontWeight','normal');
        ul=$('.alert-danger ul');
        ul.css('listStyle','none');
        ul.css('padding','0');
    </script>
{% endblock javascripts %}
