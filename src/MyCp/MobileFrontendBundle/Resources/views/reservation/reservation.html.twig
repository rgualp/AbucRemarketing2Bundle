{% extends 'MyCpMobileFrontendBundle:mycasatrip:layout_blank.html.twig' %}
{% block body_inner %}
    {%if total_errors > 0%}
        <div class="alert alert-danger" style="margin-top: 40px">
            {{"FILL_FORM_CORRECTLY" | trans}}</div>
    {%endif%}
    <h1 class="h-blue caecilia-roman h-size-1" style="font-weight: normal;">{{"RESERVATION_DETAILS" | trans}}</h1>
    {#<div class="h-blue t-size-12" style="font-weight: normal"><b >{{"ARRIVAL_RESERVATION" | trans}}:</b> {{ dates_string_day[0] }}{{dates_string[0]}} <b style="margin-left: 20px">{{"DEPARTURE_RESERVATION" | trans}}:</b> {{dates_string_day[dates_string_day|length -1]}}{{dates_string[dates_string|length -1]}}</div>#}
    <div class="items-cart">
        {% for reservation in reservations %}
            {% set accommodation = reservation.ownResGenResId.genResOwnId %}
            <div class="item">
                <table cellpadding="15" class="full-width">
                    <tbody><tr>
                        <td class="date"><span>{{ loop.index }}</span></td>
                        <td>
                            <b>{{ accommodation.ownName }}</b><br/>
                            {{ accommodation.ownAddressMunicipality.munName }}, {{ accommodation.ownAddressProvince.provName }} <br/>
                            <small>
                                {{reservation.ownResRoomType|trans}}, {{"ADULTS" | trans}}: {{reservation.ownResCountAdults}}, {{"KIDS" | trans}}: {{reservation.ownResCountChildrens}}<br/>
                                {{"ARRIVAL_WATERMARK" | trans}}: {{reservation.ownResReservationFromDate |date('d/m/Y')}}, {{"DEPARTURE_WATERMARK" | trans}}: {{reservation.ownResReservationToDate|date('d/m/Y')}}, {{ "NIGHTS" | trans }}: {{ nights[loop.index0] }}
                            </small>
                        </td>
                        <td class="text-right cost">
                            {% if reservations | length > 1 %}<a href="{{ path("frontend_reservation_removing_payment_page", {"idReservation": reservation.ownResId }) }}"><i class="fa fa-times"></i></a> <br/>{% endif %}
                            <h3 class="no-margin">
                                {{reservation.ownResTotalInSite | price}}
                            </h3>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        {% endfor %}
    </div>
    {#{% set nights = (dates_string | length) - 1 %}#}
    {#% set touristTax = total_price * touristTax(reservations | length, nights , (total_price / nights)) %#}
    {% set prepayment =  ceil_round((total_percent_price + currentServiceFee.fixedFee + touristTax)) | price%}
    <div class="row">
        <div style="font-size: 10px;" class="col-xs-12 text-right text-uppercase" rel="tooltip" title="{{ "ACCOMMODATION_TOTAL_COST_PLURAL_TOOLTIP" | trans }}">{{"ACCOMMODATION_TOTAL_COST" | trans}} <span style="font-size: 16px;"><b>{{total_price | price}}</b></span></div>
        <div style="font-size: 10px;" class="col-xs-12 text-right text-uppercase" rel="tooltip" title="{{ "SERVICE_TOURIST_TAX_TITLE" | trans }}">{{"SERVICE_TOURIST_TAX" | trans}}: <span style="font-size: 16px;"><b>{{touristTax | price}}</b></span></div>
        <div style="font-size: 10px;" class="col-xs-12 text-right text-uppercase" rel="tooltip" title="{{ "SERVICE_FIXED_TAX_TITLE" | trans }}">{{"SERVICE_FIXED_TAX" | trans}}: <span style="font-size: 16px;"><b>{{currentServiceFee.fixedFee | price}}</b></span></div>
        <div class="col-xs-12 text-right text-uppercase" style="font-size: larger; color: #218CDC" rel="tooltip" title="{{ "ACCOMMODATION_TOTAL_COST_PLURAL_TOOLTIP" | trans }}">
            {{ 'RESERVATION_TOTAL_PRICE' | trans }} <span><b>{{(total_price + touristTax + currentServiceFee.fixedFee) | price}}</b></span>
        </div>
    </div>
    <div class="row" style="color: #218CDC">
        <div style="font-size: 12px;"  class="col-xs-12 text-right text-uppercase" rel="tooltip" title="{{ "PREPAYMENT_TOOLTIP" | trans }}">
            {{"PREPAYMENT" | trans}}: <span style="font-size: 14px;"><b>{{(total_percent_price +touristTax + currentServiceFee.fixedFee) | price}}</b></span>
        </div>
        <div class="col-xs-12 text-right text-uppercase" rel="tooltip" title="{{ "TOTAL_PAY_AT_SERVICE_TOOLTIP" | trans }}">
            {{"TOTAL_PAY_AT_SERVICE" | trans}}: <span><b>{{(total_price - total_percent_price) | price}}</b></span> <br/>
            {% set currSymbol = app.session.get('curr_symbol') != null ? app.session.get('curr_symbol'): default_currency().currsymbol %}
            {% if currSymbol != "CUC" %}
                <span style="font-size: small"><b>CUC {{ (total_price - total_percent_price) | number_format(2) }}</b></span>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <div class="pull-right">
            <img src="{{ asset('bundles/frontend/img/icons/pixel.gif') }}"
                 class="icon-services question" rel="tooltip" title="{{ "RESERVATION_TRIPLE_CHARGE" | trans}} {{configuration_triple_room_charge | price}}" alt="{{"Question" | trans}}"/>
        </div>
    </div>
    <hr/>
    <form  method="POST" action="{{ path('frontend_reservation_reservation') }}" novalidate target="_blank">

        <h1 class="h-blue caecilia-roman h-size-1" style="font-weight: normal; margin-top: 20px">{{"YOUR_PAYMENT" | trans}}</h1>
        <div class="row">
            <div class="col-xs-6 text-center checkbox_skrill "style="margin-bottom: 1em;">
                <img width="100%" class="full-width" src="{{ asset('bundles/frontend/img/skrill.gif') }}" alt="{{"Skrill" | trans}}">
            </div>
            <div class="col-xs-6 text-center">
                <img width="100%" class="full-width" src="{{ asset('bundles/frontend/img/Todospostfinance.png') }}" alt="{{"Postfinance" | trans}}">
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 text-center checkbox_skrill "style="margin-bottom: 1em;">
                <input type="radio" class="i-checks" name="payment_method" value="skrill" checked> {{"SKRILL_PAYMENT" | trans}} </label>
            </div>
            <div class="col-xs-6 text-center">
                <input type="radio" class="i-checks" name="payment_method" value="postfinance"> {{"POSTFINANCE_PAYMENT" | trans}} </label>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="col-xs-12 ">
                <h1 class="h-blue caecilia-roman h-size-1" style="font-weight: normal; margin-top: 20px">{{"FINAL_STEP" | trans}}</h1>
            </div>
            <div class="col-xs-12 ">
                <label class="checkbox" style="font-weight: normal; margin-top: 20px"><input {% if post['terms_conditions'] is defined %} checked="checked" {% endif %} id="terms_conditions" name="terms_conditions" type="checkbox"> {{"ACCEPT_TERMS_CONDITIONS" | trans}}</label>
                <label class="checkbox" style="font-weight: normal"><input name="user_tourist_send_newsletter" type="checkbox" {% if post["user_tourist_send_newsletter"] is defined or user.UserNewsletters %}checked{%endif%}> {{"SEND_ME_OFFERS" | trans}}</label>
            </div>
            <div class="col-xs-12 text-center">
                <h4 class="h-grey">{{"AMOUNT_TO_PAY_NOW" | trans}}</h4>
                <h3 class="h-blue" style="font-size: 24px">{{ prepayment }}</h3>
            </div>
            <div class="col-xs-12 text-center">
                <button id="btn_payment" style="margin-top: 35px"  type="submit" class="btn btn-action btn-warning" disabled="disabled"><b>{{"PAYMENT_CONFIRM" | trans}}</b></button>
            </div>
            <div class="col-xs-12 text-center">
                <a href="{{ path("frontend_mycasatrip_available") }}" style="margin-top: 35px; margin-left: 15px"><b>{{"GO_MYCASATRIP" | trans}}</b></a>
            </div>
            <div class="col-xs-12 text-center">
                <p  style="margin-top: 0; font-size: 12px; color: #6C726B">{{"PAYMENT_CONFIRMATION_TEXT" | trans}}: {{prepayment}}</p>
            </div>
        </div>
    </form>

{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        $('#mct_change_order').change(function(){
            $('#order_by_form').submit();
        })

        if($('#terms_conditions').is(":checked"))
            $('#btn_payment').removeAttr('disabled');
        else
            $('#btn_payment').attr('disabled','disabled');

        $('#terms_conditions').change(function(){
            if($('#terms_conditions').is(":checked"))
                $('#btn_payment').removeAttr('disabled');
            else
                $('#btn_payment').attr('disabled','disabled');
        });

    </script>
{% endblock javascripts %}
