<div class=" ml-auto mr-auto description text-center">
    <div class="ml-auto mr-auto title-green green text-center caecilia-roman f-s-24" style="font-weight: bold;font-size:x-large; line-height:1.1">
        {{"POPULAR_DESTINATIONS_HOME_TABS" | trans}}
    </div>
</div>
<div class="row">
<div class="container">
    <div class="row">
        <div class="col-md-10 mr-auto ml-auto">
            <!-- Carousel Card -->
            <div class="card card-raised card-carousel">
                <div id="carouselExampleIndicators1" class="carousel slide" data-ride="carousel">

                    <div class="carousel-inner">

                        {% for location in popular_places %}
                            {% if loop.index<=1 %}
                        <div class="carousel-item active">
                            {% else %}
                            <div class="carousel-item ">
                        {% endif %}

                            <img class="d-block w-100" src="{{ asset("uploads/destinationImages/" ~ location.photo) }}" alt="slide">

                               <div class="carousel-caption  d-md-block">
                                <h4 class='h-blue'>
                                    <a class="material-icons" href="{{ path('frontend_details_destination',{'destination_name':location.des_name|lower|replace(' ','-')}) }}">location_on</a> <a href="{{ path('frontend_details_destination',{'destination_name':location.des_name|lower|replace(' ','-')}) }}">{{ location.des_name }}</a>
                                </h4>
                            </div>
                        </div>
                        {% endfor %}

                    </div>
                    <a class="carousel-control-prev" onclick='HoldOn.open();' href="#carouselExampleIndicators1" role="button" data-slide="prev">
                        <i class="material-icons">keyboard_arrow_left</i>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" onclick='HoldOn.open();' href="#carouselExampleIndicators1" role="button" data-slide="next">
                        <i class="material-icons">keyboard_arrow_right</i>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <!-- End Carousel Card -->
        </div>
    </div>
</div>
</div>