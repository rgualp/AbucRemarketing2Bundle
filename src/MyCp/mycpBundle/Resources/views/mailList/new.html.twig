{% extends 'mycpBundle:layout:backend.html.twig' %}
{% block title %}Administración{% endblock %}
{% block top_body %}
<ul class="breadcrumb">
    <li><a href="{{path('mycp_backend_front')}}">Administración</a> <span class="divider">/</span></li>
    <li><a href="{{ path('mycp_list_mail_list') }}">Listas de correo</a> <span class="divider">/</span></li>
    <li class="active">{% if edit is defined %}Editar {% else %}Adicionar {% endif %}lista</li>
    <li class="pull-right"><a href="{{ path('mycp_list_mail_list') }}"><i class="icon-hand-left"></i> Volver atrás</a></li>
</ul>
{% endblock %}
{% block form_actions %}
<ul class="breadcrumb">
    <li><a href="{{path('mycp_backend_front')}}">Administración</a> <span class="divider">/</span></li>
    <li><a href="{{ path('mycp_list_mail_list') }}">Listas de correo</a> <span class="divider">/</span></li>
    <li class="active">{% if edit is defined %}Editar {% else %}Adicionar {% endif %}lista</li>
    <li class="pull-right"><a href="{{ path('mycp_list_mail_list') }}"><i class="icon-hand-left"></i> Volver atrás</a></li>
</ul>
<div class="form-actions">
    <button class="btn btn-primary" type="submit">Guardar</button>
    <a class="btn" href="{{ path('mycp_list_mail_list') }}">Cancelar</a>
</div>
</form>
{% endblock %}
{% block content %}
<h2>{% if edit is defined %}Editar {% else %}Adicionar {% endif %}lista de correo</h2>
<hr/>
<form class="sfgen" enctype="multipart/form-data" method="POST" action="{% if edit is defined %}{{path('mycp_edit_mail_list',{'listId': listId})}}{% else %}{{path('mycp_add_mail_list')}}{% endif %}" novalidate="true">
<div class="row-fluid">
    <div class="span4">
        {{form_row(form.mail_list_name)}}
        {{form_row(form.mail_list_function)}}
        {{form_rest(form)}}
    </div>
</div>
<script src="{{ asset('bundles/mycp/js/bootstrap-fileinput.js') }}" type="text/javascript"></script>
{% endblock %}
