<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Fecha del pago</th>
        <th>Tipo de Cancelaci√≥n</th>
        <th>Alojamiento</th>
        <th>Monto del Pagar</th>
        <th>Estado del pago</th>
        <th>Usuario</th>
        <th>Fecha</th>

    </tr>
    </thead>
    <tbody>
    {% for pay in pays %}
        <tr>
        <td>{{ pay.getPayDate | date("d/m/Y") }}</td>
        <td>{{ pay.getCancelPayment.getType.translations[0].nomLangDescription }}</td>.
        <td style="font-size: smaller"><b>Alojamiento:</b> {{ pay.accommodation.getOwnMcpCode }} - {{ pay.accommodation.getOwnName }}<br/>
            <b>Propietario:</b> {{ pay.accommodation.getOwnHomeowner1 }}<br/>
            <b>Correo:</b> {{ pay.accommodation.getOwnEmail1 }}</td>
        <td>{{ pay.getAmount }} CUC </td>
        <td>{{ pay.getType.translations[0].nomLangDescription }}</td>
        <td>{% if pay.getUser != null %}{{ pay.getUser.getUserCompleteName }}{% else %} - {% endif %}</td>
        <td>{{pay.registerDate | date ("d/m/Y")}}</td>
        </tr>
    {% endfor %}
    {% for pay in paysAgency %}
        <tr>
        <td>{{ pay.getPayDate | date("d/m/Y") }}</td>
        <td>{{ pay.getCancelPayment.getType.translations[0].nomLangDescription }}</td>.
        <td style="font-size: smaller">
            <b>Nombre:</b>{{ pay.agency.name }}<br/>
            <b>Correo:</b>{{ pay.agency.email }}
        </td>
        <td>{{ pay.getAmount }} {{ pay.getCancelPayment.getBooking.getBookingCurrency.getCurrSymbol }} </td>
        <td>{{ pay.getType.translations[0].nomLangDescription }}</td>
        <td>{% if pay.getUser != null %}{{ pay.getUser.getUserCompleteName }}{% else %} - {% endif %}</td>
        <td>{{pay.registerDate | date ("d/m/Y")}}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
