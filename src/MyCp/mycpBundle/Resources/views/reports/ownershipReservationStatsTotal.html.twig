
{% set nom_parent='' %}
<div class="bulb">
{% for stat in content %}
    {% if stat[0].statNomenclator.nomParent!=nom_parent  %}
        </div>
    <div class="bulb">
    {% set nom_parent=stat[0].statNomenclator.nomParent%}
        <br/>
   <strong>Por {{ stat[0].statNomenclator.nomParent }}</strong>
    {% endif %}
    <div class="row-fluid rowValue">
        <div class="span6 nomValue">{{ stat[0].statNomenclator }}</div>
        <div class="span6 statValue" style="text-align: right">
            <a target="_blank" {% if stat['stat_value'] > 0 %}href="#"{% endif %}>
                {% if stat[0].statNomenclator.nomParent.nomName == "Ingresos" %}
                    $ {{ stat['stat_value'] | number_format(2, ',', '.') }}
                {% else %}
                    {{ stat['stat_value'] }}
                {% endif %}
            </a></div>
        </div>
{% endfor %}
        </div>

<link href="{{ asset('bundles/mycp/css/report.css') }}" rel="stylesheet" type="text/css" />