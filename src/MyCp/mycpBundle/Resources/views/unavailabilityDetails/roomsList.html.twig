{% extends 'mycpBundle:layout:backend.html.twig' %}
{% block title %}Administración{% endblock %}
{% block top_body %}
<ul class="breadcrumb">
    <li><a href="{{path('mycp_backend_front')}}">Administración</a> <span class="divider">/</span></li>
    <li><a href="{{ path('mycp_list_unavailabilityDetails') }}">Disponibilidad</a> <span class="divider">/</span></li>
    <li class="active">{{ ownership.ownMcpCode }} </li>
    <li class="pull-right"><a href="{{ path('mycp_list_unavailabilityDetails') }}"><i class="icon-hand-left"></i> Volver atrás</a></li>
</ul>
{% endblock %}
{% block form_actions %}
<ul class="breadcrumb">
    <li><a href="{{path('mycp_backend_front')}}">Administración</a> <span class="divider">/</span></li>
    <li><a href="{{ path('mycp_list_unavailabilityDetails') }}">Disponibilidad</a> <span class="divider">/</span></li>
    <li class="active">Habitaciones </li>
    <li class="pull-right"><a href="{{ path('mycp_list_unavailabilityDetails') }}"><i class="icon-hand-left"></i> Volver atrás</a></li>
</ul>
{% endblock %}
{% block content %}
<h2>Habitaciones: {% include 'mycpBundle:utils:ownership_header.html.twig' with {'ownership':ownership}%}</h2>
<hr/>
{% if rooms %}
<div class="alert">
    <div class="row-fluid">
        <div class="pull-left">
            Mostrando del {{items_per_page * current_page - items_per_page}} al {% if items_per_page * current_page >  total_items%}{{total_items }}{% else %}{{ items_per_page * current_page }}{% endif %} de {{total_items}} registros
        </div>
        <div class="pull-right">
            Mostrar:
            <a class="{% if items_per_page == 10 %}selected{% endif %}" href="{{ path('mycp_list_rooms_unavailabilityDetails',{'items_per_page':10, 'id_ownership':id_ownership})}}">10</a>
            <a class="{% if items_per_page == 50 %}selected{% endif %}" href="{{ path('mycp_list_rooms_unavailabilityDetails',{'items_per_page':50, 'id_ownership':id_ownership})}}">50</a>
            <a class="{% if items_per_page == 100 %}selected{% endif %}" href="{{ path('mycp_list_rooms_unavailabilityDetails',{'items_per_page':100, 'id_ownership':id_ownership})}}">100</a>
        </div>
    </div>
</div>
<div class="paginator-cont span11">
{{ simple_paginator_render('mycp_list_rooms_unavailabilityDetails',null,{
'container_class': 'paginator',
'previousPageText': '«',
'nextPageText': '»',
'currentClass': 'current',
'firstPageText': 'Primera',
'lastPageText': 'Última',
'route_params': {'id_ownership':id_ownership,'items_per_page':items_per_page}
}) }}
</div>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Habitación</th>
        <th style="width:100%">Tipo</th>
        <th>Calendario</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
        {% for room in rooms %}
    <tr>
        <td>Hab. #{{ loop.index }}</td>
        <td>{{room.roomType}}</td>
        <td style="text-align: center;"><a class="btn btn-mini btn-info" href="{{room.getICalUrlFromRequest(app.request)}}" title="Descargar calendario (.ics)"><i class="icon-calendar"></i></a></td>
        <td><a href="{{ path('mycp_list_room_details_unavailabilityDetails',{'id_room':room.getRoomId, 'num_room': loop.index}) }}">Disponibilidad</a></td>
    </tr>
    {% endfor %}
    </tbody>
</table>
<div class="paginator-cont span11">
    {{ simple_paginator_render('mycp_list_rooms_unavailabilityDetails',null,{
'container_class': 'paginator',
'previousPageText': '«',
'nextPageText': '»',
'currentClass': 'current',
'firstPageText': 'Primera',
'lastPageText': 'Última',
'route_params': {'id_ownership':id_ownership,'items_per_page':items_per_page}
}) }}
</div>
{% else %}
<p> <div class="alert alert-block">No hay habitaciones disponibles.</div></p>
{% endif %}
{% endblock %}
{% block javascripts %}
    {% javascripts
    '@mycpBundle/Resources/public/js/jquery.ui/jquery.ui.core.js'
    '@mycpBundle/Resources/public/js/jquery.ui/jquery.ui.widget.js'
    '@mycpBundle/Resources/public/js/jquery.ui/jquery.ui.mouse.js'
    '@mycpBundle/Resources/public/js/jquery.ui/jquery.ui.sortable.js'
    filter='?uglifyjs2'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
