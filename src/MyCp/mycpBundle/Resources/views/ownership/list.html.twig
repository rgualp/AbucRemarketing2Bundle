{% extends 'mycpBundle:layout:backend.html.twig' %}
{% block title %}Administración{% endblock %}
{% block top_body %}
<ul class="breadcrumb">
    <li><a href="{{path('mycp_backend_front')}}">Administración</a> <span class="divider">/</span></li>
    <li class="active">Propiedades</li>
</ul>
{% endblock %}
{% block content %}
<h2>Propiedades</h2>
<hr/>
    <a class="btn" href="{{ path('mycp_new_ownership') }}"><i class="icon-plus"></i> Adicionar propiedad</a>&nbsp;
<br/><br/>
{% for message in app.session.flashbag.get('message_error_local') %}
<div class="alert alert-error">{{ message }}</div>
{% endfor %}
<form onkeypress="javascript:submit_filters(event);" id="filter" method="post" action="{{path('mycp_list_ownerships')}}">
    <div class="well well-small">
        <div class="row-fluid">
            <div class="span4">
                <label>Propiedad:</label><input id="filter_code" value="{{filter_code}}" class="input-block-level" name="filter_code" type="text"/>
            </div>
            <div class="span4">
                <label>Nombre:</label>
                <input name="filter_name" value="{{filter_name}}" id="filter_name" autocomplete="off" type="text" class="input-block-level" style="margin: 0 auto;" data-provide="typeahead" data-items="5" data-source='{{ render(controller('mycpBundle:BackendOwnership:get_ownerships_names')) }}'>
            </div>
            <div class="span4">
                <label>Estado:</label>
                <select id="filter_active" class="input-block-level" name="filter_active">
                    {{ render(controller('mycpBundle:BackendOwnership:get_status', {'post': filter_active})) }}
                </select>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span3">
                <label>Provincia:</label>
                <select class="input-block-level" name="filter_province" id="filter_province"/>
                {{ render(controller('mycpBundle:Public:get_provinces', {'post': {'ownership_address_province':filter_province}})) }}
                </select>
            </div>
            <div class="span3">
                <label>Municipio:</label>
                <select class="input-block-level" name="filter_municipality" id="filter_municipality"/>
                {{ render(controller('mycpBundle:Public:get_mun', {'post': {'ownership_address_municipality':filter_municipality}})) }}
                </select>
            </div>
            <div class="span2">
                <label>Tipo:</label>
                <select class="input-block-level" name="filter_type" id="filter_type"/>
                {{ render(controller('mycpBundle:BackendOwnership:get_ownership_types', {'post': {'ownership_type':filter_type}})) }}
                </select>
            </div>
            <div class="span2">
                <label>Categoría:</label>
                <select name="filter_category" class="input-block-level" id="filter_category">
                    {{ render(controller('mycpBundle:BackendOwnership:get_ownership_categories', {'post': {'ownership_category':filter_category}})) }}
                </select>
            </div>

            <div class="span2">
                <label>&nbsp;</label>
                <div class="row-fluid">
                    <div class="span6">
                        <a rel="tooltip" title="Filtrar listado" href="javascript:action_submit();" class="tooltip_msg btn btn-block btn-success"><i class="icon-filter icon-white"></i></a>
                    </div>
                    <div class="span6">
                        <a rel="tooltip" title="Resetear filtrado" href="{{ path('mycp_list_ownerships') }}" class="tooltip_msg btn btn-block btn-danger"><i class="icon-remove icon-white"></i></a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
    {% if ownerships %}
<div class="alert">
    <div class="row-fluid">
        <div class="pull-left">
            Mostrando del {{items_per_page * current_page - items_per_page}} al {% if items_per_page * current_page >  total_items%}{{total_items }}{% else %}{{ items_per_page * current_page }}{% endif %} de {{total_items}} registros
        </div>
        <div class="pull-right">
            Mostrar:
            <a class="{% if items_per_page == 20 %}selected{% endif %}" href="{{ path('mycp_list_ownerships',{'items_per_page':20})}}">20</a>
            <a class="{% if items_per_page == 50 %}selected{% endif %}" href="{{ path('mycp_list_ownerships',{'items_per_page':50})}}">50</a>
            <a class="{% if items_per_page == 100 %}selected{% endif %}" href="{{ path('mycp_list_ownerships',{'items_per_page':100})}}">100</a>
            <a class="{% if items_per_page == 300 %}selected{% endif %}" href="{{ path('mycp_list_ownerships',{'items_per_page':300})}}">300</a>
            <a class="{% if items_per_page == 500 %}selected{% endif %}" href="{{ path('mycp_list_ownerships',{'items_per_page':500})}}">500</a>
            <input class="hidden" name="items_per_page" value="100">
        </div>
    </div>
</div>
<div class="paginator-cont span11">
    {% if filter_code ==''%}{% set filter_code='null'%}{%endif%}
    {{ simple_paginator_render('mycp_list_ownerships',null,{
'container_class': 'paginator',
'previousPageText': '«',
'nextPageText': '»',
'currentClass': 'current',
'firstPageText': 'Primera',
'lastPageText': 'Última',
'route_params': {'items_per_page':items_per_page,'filter_code':filter_code,'filter_active':filter_active,'filter_category':filter_category,'filter_province':filter_province,'filter_municipality':filter_municipality,'filter_type':filter_type,'filter_name':filter_name}
}) }}
</div>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Propiedad</th>
        <th>Nombre</th>
        <th>Municipio</th>
        <th>Provincia</th>
        <th>Estado</th>
        <th>Fotografías</th>
        <th style="text-align: right">Acciones</th>
    </tr>
    </thead>
    <tbody>
    {% for ownership in ownerships %}
    <tr {% if ownership.getOwnStatus.getStatusId!=1 %} class="red_row" {% endif %}>
        <td>{{ownership.getOwnMcpCode}}</td>
        <td>{{ownership.getOwnName}}</td>
        <td>{{ownership.getOwnAddressMunicipality.getMunName}}</td>
        <td>{{ownership.getOwnAddressProvince.getProvName}}</td>
        <td>{% if ownership.getOwnComment %}<a class="tooltip_msg no_link" rel="tooltip" title="{{ownership.getOwnComment}}">{% endif %}{% if ownership.getOwnStatus.getStatusId==1%}<span class="label label-success">Activo</span>{% else %} <span class="label label-important">{{ ownership.getOwnStatus.getStatusName }}</span>{% endif %}{% if ownership.getOwnComment %}</a>{% endif %}</td>
        <td><a href="{{ path('mycp_list_photos_ownership',{'id_ownership':ownership.getOwnId}) }}">({{ photo_count[ownership.getOwnId~'_photo_count'] }}) Fotografías</a></td>
        <td style="text-align: right"><a class="btn btn-mini" href="{{ path('mycp_edit_ownership',{'id_ownership':ownership.getOwnId}) }}">Editar</a>
           <!-- <button data='{{ path('mycp_delete_ownership',{'id_ownership':ownership.getOwnId}) }}' class="btn btn-mini btn-danger delete">Eliminar</button>-->
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
<div class="paginator-cont span11">
{% if filter_code ==''%}{% set filter_code='null'%}{%endif%}
{{ simple_paginator_render('mycp_list_ownerships',null,{
'container_class': 'paginator',
'previousPageText': '«',
'nextPageText': '»',
'currentClass': 'current',
'firstPageText': 'Primera',
'lastPageText': 'Última',
'route_params': {'items_per_page':items_per_page,'filter_code':filter_code,'filter_active':filter_active,'filter_category':filter_category,'filter_province':filter_province,'filter_municipality':filter_municipality,'filter_type':filter_type,'filter_name':filter_name}
}) }}
</div>
    {% else %}
    <p> <div class="alert alert-block">No hay Propiedades disponibles.</div></p>
    {% endif %}
<script type="text/javascript">
        url = "{{ path('mycp_get_mun_by_prov', { 'country_code': '-1' }) }}";
        url=url.replace('/-1','');
            $('#filter_province').change(function(){
                code = $('#filter_province').val();
                if(code!='')
                {
                $('#filter_municipality').html('<option value="">Cargando...</option>');


                $.ajax({
                    type:"POST",
                    url:url + '/' + code,
                    success:function (msg) {

                        $('#filter_municipality').html(msg);
                    }
                });
                }
            });

    function submit_filters(ev)
    {
        if(ev.keyCode==13)
        {
            action_submit();
        }
    }
    filter_code=$('#filter_code').val();
    function action_submit()
    {

        items_per_page={{items_per_page}};
        filter_code=$('#filter_code').val();
        if(filter_code=='')filter_code='null';
        filter_province=$('#filter_province').val();
        if(filter_province=='')filter_province='null';
        filter_municipality=$('#filter_municipality').val();
        if(filter_municipality=='')filter_municipality='null';
        filter_type=$('#filter_type').val();
        if(filter_type=='')filter_type='null';
        filter_category=$('#filter_category').val();
        if(filter_category=='')filter_category='null';
        filter_active=$('#filter_active').val();
        filter_name=$('#filter_name').val();
        if(filter_name=='')filter_name='null';
        if(filter_active=='')filter_active='null';
        url_submit=$('#filter').attr('action');
        url_submit=url_submit+'/'+items_per_page+'/'+filter_code+'/'+filter_active+'/'+filter_category+'/'+filter_province+'/'+filter_municipality+'/'+filter_type+'/'+filter_name;
        $('#filter').attr('action',url_submit);
        $('#filter').submit();
    }
</script>
<script src="{{ asset('bundles/mycp/js/bootstrap-typeahead.js') }}" type="text/javascript"></script>
{% include 'mycpBundle:utils:confirmation_window.html.twig' with {'message':'¿Confirma que desea eliminar el elemento?','confirmation_action_label':'Eliminar'}%}
{% endblock %}
