{% extends 'mycpBundle:layout:backend.html.twig' %}
{% block title %}Administración{% endblock %}
{% block top_body %}
<ul class="breadcrumb">
    <li><a href="{{path('mycp_backend_front')}}">Administración</a> <span class="divider">/</span></li>
    <li><a href="{{ path('mycp_list_ownerships') }}">Propiedades</a> <span class="divider">/</span></li>
    <li><a href="{{ path('mycp_edit_ownership',{'id_ownership':id_ownership}) }}">{{ ownership.ownMcpCode }}</a> <span class="divider">/</span></li>
    <li><a href="{{ path('mycp_list_photos_ownership',{'id_ownership':id_ownership })}}">Fotografías</a> <span class="divider">/</span></li>
    <li class="active">Adicionar fotografía</li>
    <li class="pull-right"><a href="{{ path('mycp_list_photos_ownership',{'id_ownership':id_ownership }) }}"><i class="icon-hand-left"></i> Volver atrás</a></li>
</ul>
{% endblock %}
{% block form_actions %}
<ul class="breadcrumb">
    <li><a href="{{path('mycp_backend_front')}}">Administración</a> <span class="divider">/</span></li>
    <li><a href="{{ path('mycp_list_ownerships') }}">Propiedades</a> <span class="divider">/</span></li>
    <li><a href="{{ path('mycp_edit_ownership',{'id_ownership':id_ownership}) }}">{{ ownership.ownMcpCode }}</a> <span class="divider">/</span></li>
    <li><a href="{{ path('mycp_list_photos_ownership',{'id_ownership':id_ownership })}}">Fotografías</a> <span class="divider">/</span></li>
    <li class="active">Adicionar fotografía</li>
    <li class="pull-right"><a href="{{ path('mycp_list_photos_ownership',{'id_ownership':id_ownership }) }}"><i class="icon-hand-left"></i> Volver atrás</a></li>
</ul>
<div class="form-actions">
    <div class="btn-toolbar" role="toolbar">
        <div class="btn-group dropup">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
                <span class="sr-only"></span>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                {% if ownership.ownStatus.statusId!= constant('\\MyCp\\mycpBundle\\Entity\\ownershipStatus::STATUS_ACTIVE')%}
                <li><a style="cursor: hand" onclick="javascript:submit_button({{constant('\\MyCp\\mycpBundle\\Helpers\\Operations::SAVE_AND_PUBLISH_ACCOMMODATION')}})">Guardar y publicar propiedad</a></li>
                {%endif%}
                <li><a style="cursor: hand" onclick="javascript:submit_button({{constant('\\MyCp\\mycpBundle\\Helpers\\Operations::SAVE_AND_NEW')}})">Guardar y agregar nuevas</a></li>
            </ul>
        </div>
        <div class="btn-group dropup">
            <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown">
                Alojamiento <span class="caret"></span>
                <span class="sr-only"></span>
            </button>
            <ul class="dropdown-menu pull-right" role="menu">
                <li><a href="{{ path('mycp_edit_ownership',{'id_ownership':id_ownership}) }}"><i class="icon-pencil"></i> Editar</a></li>
            </ul>
        </div>
        <a class="btn" href="{{ path('mycp_list_photos_ownership',{'id_ownership':id_ownership }) }}">Cancelar</a>
    </div>
</div>
</form>
{% endblock %}
{% block content %}
<h2>Fotografía de {% include 'mycpBundle:utils:ownership_header.html.twig' with {'ownership':ownership}%}</h2>
<hr/>
{% if errors is defined and errors or data['error'] is defined %}<label class="alert alert-error">Debe llenar el formulario correctamente.</label>{%endif%}
<form id="form" action="{{ path('mycp_new_photos_ownership',{'id_ownership':id_ownership}) }}" method="POST" enctype="multipart/form-data">
    <input id="save_operation" name="save_operation" value="{{constant('\\MyCp\\mycpBundle\\Helpers\\Operations::SAVE_AND_EXIT')}}" class="hidden">
    {% if data['error'] is defined %}<label class="error">{{ data['error'] }}</label>{% endif %}
    <input title="Seleccionar fichero..." type="file" name="images[files][]" multiple='multiple' accept="image/*"/>
    <br/><br/>
    <h3 class="title">Descripción breve</h3>
    {% for language in data['languages'] %}
    <label>{{language.lang_name |title}} (*):</label>
    {%if errors["description_"~language.lang_id] is defined %}<label class="error">{{errors["description_"~language.lang_id]|trim(':')}}</label>{%endif%}
    <input type="text" class="span12 textarea" name="description_{{language.lang_id}}" value="{%if post["description_"~language.lang_id] is defined %}{{post["description_"~language.lang_id]}}{%endif%}"/><br/>
    {% endfor %}
    {% javascripts
    '@mycpBundle/Resources/public/js/bootstrap-fileinput.js'
    filter='?uglifyjs2'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        function submit_button(operation)
        {
            $("#save_operation").val(operation);
            $("#form").submit();
        }
    </script>
{% endblock %}
