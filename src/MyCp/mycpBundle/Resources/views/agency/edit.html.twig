        function activarAgencia(enabled, callback) {
            var url = '{{ path('mycp_enable_agency', {'id': agency[0].id, 'activar': true}) }}';
            if (!enabled){
                url = '{{ path('mycp_enable_agency', {'id': agency[0].id, 'activar': false}) }}';
            }

            $.get(url, function(data){
                if(data['result']){
                    callback();
                }else{
                    return false;
                }
            })
