    <form onkeypress="javascript:submit_filters(event);" id="filter" method="post" action="{{path('mycp_list_payments_agency_pending_ownership')}}">
        <div class="well well-small">
            <div class="row-fluid">
                <div class="span3">
                    <label>Reserva (CAS):</label><input id="filter_number" value="{{(filter_number != "null")?filter_number:''}}" class="input-block-level" name="filter_number" type="text"/></div>
                <div class="span3"><label>Código Alojamiento:</label>
                    <input id="filter_code" value="{{(filter_code != "null")?filter_code:''}}" class="input-block-level" name="filter_code" type="text"/>
                </div>
                <div class="span3"><label>Agencia:</label>
                    <input id="filter_agency" value="{{(filter_agency != "null")?filter_agency:''}}" class="input-block-level" name="filter_agency" type="text"/>
                </div>
                <div class="span3"><label>Booking:</label>
                    <input id="filter_booking" value="{{(filter_booking != "null")?filter_booking:''}}" class="input-block-level" name="filter_booking" type="text"/>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span4">
                    <label>Destino:</label>
                    <select id="filter_destination" class="input-block-level" name="filter_destination">
                        {{ render(controller('mycpBundle:Public:getDestinations', {'post': {'ownership_destination':filter_destination}})) }}
                    </select>
                </div>
                <div class="span4">
                    <label>Estado:</label>
                    <select id="filter_method" class="input-block-level" name="filter_method">
                        {{ render(controller('mycpBundle:Public:getNomenclatorList', {'selectedValue': filter_method, 'category': 'paymentPendingStatus'})) }}
                    </select>
                </div>
                <div class="span4">
                    <label>Tipo:</label>
                    <select id="filter_type" class="input-block-level" name="filter_type">
                        {{ render(controller('mycpBundle:Public:getNomenclatorList', {'selectedValue': filter_type, 'category': 'paymentPendingType'})) }}
                    </select>
                </div>

            </div>
            <div class="row-fluid">
                <div class="span3">
                    <label>Fecha Pago <br/><small>Desde</small></label>
                    <input name="filter_payment_date_from" value="{%if filter_payment_date_from is defined and filter_payment_date_from != null and filter_payment_date_from != "" and filter_payment_date_from != "null"%}{{filter_payment_date_from | date('d/m/Y')}}{%endif%}" id="filter_payment_date_from" class="input-block-level datepicker">
                </div>
                <div class="span3">
                    <label><br/><small>Hasta</small></label>
                    <input name="filter_payment_date_to" value="{%if filter_payment_date_to is defined and filter_payment_date_to != null and filter_payment_date_to != "" and filter_payment_date_to != "null"%}{{filter_payment_date_to | date('d/m/Y')}}{%endif%}" id="filter_payment_date_to" class="input-block-level datepicker">
                </div>
                <div class="span3">
                    <label>Fecha Llegada <br/><small>Desde</small></label>
                    <input name="filter_reservation_date_from" value="{%if filter_reservation_date_from is defined and filter_reservation_date_from != null and filter_reservation_date_from != "" and filter_reservation_date_from != "null"%}{{filter_reservation_date_from | date('d/m/Y')}}{%endif%}" id="filter_reservation_date_from" class="input-block-level datepicker">
                </div>
                <div class="span3">
                    <label><br/><small>Hasta</small></label>
                    <input name="filter_reservation_date_to" value="{%if filter_reservation_date_to is defined and filter_reservation_date_to != null and filter_reservation_date_to != "" and filter_reservation_date_to != "null"%}{{filter_reservation_date_to | date('d/m/Y')}}{%endif%}" id="filter_reservation_date_to" class="input-block-level datepicker">
                </div>
                </div>
            <div class="row-fluid">
                <div class="span10"></div>
                <div class="span2">
                    <label>&nbsp;</label>
                    <div class="row-fluid">
                        <div class="span4">
                            <a rel="tooltip" title="Filtrar listado" href="javascript:action_submit();" class="tooltip_msg btn btn-block btn-success"><i class="icon-filter icon-white"></i></a>
                        </div>
                        <div class="span4">
                            <a rel="tooltip" title="Resetear filtrado " href="{{ path('mycp_list_payments_agency_pending_ownership') }}" class="tooltip_msg btn btn-block btn-danger"><i class="icon-remove icon-white"></i></a>
                        </div>
                        <div class="span4">
                            <a {% if list | length == 0 %}disabled="disabled"{% endif %} rel="tooltip" title="Descargar listado" href="{{ path('mycp_export_payments_agency_pending_ownership',{'filter_number':filter_number, 'filter_code': filter_code,'filter_method': filter_method, 'filter_payment_date_from': filter_payment_date_from, 'filter_payment_date_to': filter_payment_date_to, 'filter_agency': filter_agency, 'filter_booking': filter_booking, 'filter_destination': filter_destination, 'filter_type': filter_type, 'filter_reservation_date_from': filter_reservation_date_from, 'filter_reservation_date_to': filter_reservation_date_to})}}" class="tooltip_msg btn btn-block btn-info"><i class="icon-download-alt icon-white"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    {% if list %}
<div class="alert">
    <div class="row-fluid">
        <div class="pull-left">
            Mostrando del {{items_per_page * current_page - items_per_page}} al {% if items_per_page * current_page >  total_items%}{{total_items }}{% else %}{{ items_per_page * current_page }}{% endif %} de {{total_items}} registros
