{% block javascripts %}
    {% javascripts
    '@mycpBundle/Resources/public/js/common_list.js'
    '@mycpBundle/Resources/public/js/bootstrap-datepicker.js'
    '@mycpBundle/Resources/public/js/bootstrap-datepicker.es.js'
    '@LayoutBundle/Resources/public/js/plugins/holdon/HoldOn.min.js'
    '@LayoutBundle/Resources/public/js/plugins/toastr/toastr.min.js'
    filter='?uglifyjs2'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        $(".all_select").change(function(){
            class_name=this.className;
            array_class_name=class_name.split(' ');
            if(this.checked)
                $("input:checkbox."+array_class_name[1]).attr('checked','checked');
            else
                $("input:checkbox."+array_class_name[1]).removeAttr('checked');
        });
        /**
         * Onclick btn add payment
         */
        $('#btn-addpay').on('click',function(){
            var arr_checkbox="";
            if($("input:checkbox[name='check_reservations']").is(":checked")){ // Al menos un checkbox en true
                arr_checkbox = $('input[name=check_reservations]:checked').map(function() {
                    return $(this).attr('id');
                }).get();
            }
            if(arr_checkbox.length>0)
               submitPayment();
            else
                toastr.error('Debe de seleccionar algún pago en el listado de pagos)');
        });
        $('.datepicker').datepicker({
            format: 'yyyy-mm-dd',
            todayBtn: 'linked',
            autoclose: true,
            language: 'es'
        });
        /**
         * Function submit payment
         */
        function submitPayment(){
            var arr_checkbox_cheked;

            if($("input:checkbox[name='check_reservations']").is(":checked")){ // Al menos un checkbox en true
                arr_checkbox_cheked = $('input[name=check_reservations]:checked').map(function() {
                    return $(this).attr('id');
                }).get();
            }
            HoldOn.open();
            var data_params = {};
            data_params['cheked'] = arr_checkbox_cheked;
            var xpath ='{{ path('mycp_save_payment_agency_pending_ownership') }}';
            $.ajax({
                url: xpath,
                type: "post",
                data: data_params,
                success: function(data, textStatus, jqXHR){
                    window.location.href = "{{ url('mycp_list_payments_agency_pending_ownership') }}";
                },
                error: function(jqXHR, textStatus, errorThrown){

                }
            });
        }
        function submit_filters(ev)
        {
            if(ev.keyCode==13)
            {
                action_submit();
            }
        }

        function action_submit()
        {
            var items_per_page={{items_per_page}};
            var filter_number=$('#filter_number').val();
            if(filter_number=='')filter_number='null';

            var filter_code=$('#filter_code').val();
            if(filter_code=='')filter_code='null';

            var filter_agency=$('#filter_agency').val();
            if(filter_agency=='')filter_agency='null';

            var filter_method=$('#filter_method').val();
            if(filter_method=='')filter_method='null';

            var filter_payment_date_from = $("#filter_payment_date_from").val();
            if(filter_payment_date_from=='')filter_payment_date_from='null';

            var filter_payment_date_to = $("#filter_payment_date_to").val();
            if(filter_payment_date_to=='')filter_payment_date_to='null';

            var filter_booking = $("#filter_booking").val();
            if(filter_booking=='')filter_booking='null';

            var filter_destination = $("#filter_destination").val();
            if(filter_destination=='')filter_destination='null';

            var filter_type = $("#filter_type").val();
            if(filter_type=='')filter_type='null';

            var filter_reservation_date_from = $("#filter_reservation_date_from").val();
            if(filter_reservation_date_from=='')filter_reservation_date_from='null';

            var filter_reservation_date_to = $("#filter_reservation_date_to").val();
            if(filter_reservation_date_to=='')filter_reservation_date_to='null';

            url_submit=$('#filter').attr('action');
            url_submit=url_submit+'/'+items_per_page+'/'+filter_number+'/'+filter_code+'/'+filter_method+'/'+filter_payment_date_from+'/'+filter_payment_date_to+'/'+filter_agency+'/'+filter_booking+'/'+filter_destination+'/'+filter_type+'/'+filter_reservation_date_from+'/'+filter_reservation_date_to;
            $('#filter').attr('action',url_submit);
            $('#filter').submit();
        }
    </script>
{% endblock %}