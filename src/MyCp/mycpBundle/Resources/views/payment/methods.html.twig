{% extends 'mycpBundle:layout:backend.html.twig' %}
{% block title %}Administración{% endblock %}
{% block another_in_head %}
    {% stylesheets
    '@mycpBundle/Resources/public/css/datepicker.css'
    filter='?uglifycss'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block top_body %}
<ul class="breadcrumb">
    <li><a href="{{path('mycp_backend_front')}}">Administración</a> <span class="divider">/</span></li>
    <li><a href="{{path('mycp_list_ownerships')}}">Alojamientos</a> <span class="divider">/</span></li>
    <li class="active">Métodos de pago</li>
</ul>
{% endblock %}
{% block content %}
<h2>Métodos de Pago</h2>
<hr/>
    <ul class="nav nav-tabs" id="myTab">
        <li class="active"><a data-toggle="tab" href="#payments">Métodos de Pago</a></li>
        <li class=""><a href="{{ path("mycp_accommodations_no_payment") }}">Alojamientos</a></li>
    </ul>
<div class="tab-content" id="myTabContent">
    <div id="payments" class="tab-pane fade active in">
    {#<a class="btn" href="{{ path("mycp_new_payment") }}"><i class="icon-plus"></i> Adicionar Pago</a>&nbsp;#}
<br/><br/>
{% for message in app.session.flashbag.get('message_error_local') %}
<div class="alert alert-error">{{ message }}</div>
{% endfor %}
    <form onkeypress="javascript:submit_filters(event);" id="filter" method="post" action="{{path('mycp_methods_payment')}}">
        <div class="well well-small">
            <div class="row-fluid">
                <div class="span3"><label>Código Alojamiento:</label>
                    <input id="filter_code" value="{{(filter_code != "null")?filter_code:''}}" class="input-block-level" name="filter_code" type="text"/>
                </div>
                <div class="span3">
                    <label>Nombre:</label>
                    <input id="filter_name" value="{{(filter_name != "null")?filter_name:''}}" class="input-block-level" name="filter_name" type="text"/>
                </div>
                <div class="span3">
                    <label>Destino:</label>
                    <select class="input-block-level" name="filter_destination" id="filter_destination">
                        {{ render(controller('mycpBundle:Public:getDestinations', {'post': {'ownership_destination':filter_destination}})) }}
                    </select>
                </div>
            <div class="span3">
                <label>Provincia:</label>
                <select class="input-block-level" name="filter_province" id="filter_province">
                    {{ render(controller('mycpBundle:Public:get_provinces', {'post': {'ownership_address_province':filter_province}})) }}
                </select>
            </div>
        </div>
            <div class="row-fluid">
                <div class="span10"></div>
                <div class="span2">
                    <label>&nbsp;</label>
                    <div class="row-fluid">
                        <div class="span6">
                            <a rel="tooltip" title="Filtrar listado" href="javascript:action_submit();" class="tooltip_msg btn btn-block btn-success"><i class="icon-filter icon-white"></i></a>
                        </div>
                        <div class="span6">
                            <a rel="tooltip" title="Resetear filtrado " href="{{ path('mycp_list_payments') }}" class="tooltip_msg btn btn-block btn-danger"><i class="icon-remove icon-white"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    {% if list %}
<div class="alert">
    <div class="row-fluid">
        <div class="pull-left">
            Mostrando del {{items_per_page * current_page - items_per_page}} al {% if items_per_page * current_page >  total_items%}{{total_items }}{% else %}{{ items_per_page * current_page }}{% endif %} de {{total_items}} registros
        </div>
        <div class="pull-right">
            Mostrar:
            <a class="{% if items_per_page == 100 %}selected{% endif %}" href="{{ path('mycp_methods_payment',{'items_per_page':100})}}">100</a>
            <a class="{% if items_per_page == 300 %}selected{% endif %}" href="{{ path('mycp_methods_payment',{'items_per_page':300})}}">300</a>
            <a class="{% if items_per_page == 500 %}selected{% endif %}" href="{{ path('mycp_methods_payment',{'items_per_page':500})}}">500</a>
            <input class="hidden" name="items_per_page" value="100">
        </div>
    </div>
</div>
<div class="paginator-cont span11">
    {# % if filter_name ==''%}{% set filter_name='null'%}{%endif% #}
    {{ simple_paginator_render('mycp_methods_payment',null,{
'container_class': 'paginator',
'previousPageText': '«',
'nextPageText': '»',
'currentClass': 'current',
'firstPageText': 'Primera',
'lastPageText': 'Última',
'route_params': {'items_per_page':items_per_page}
}) }}
</div>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Alojamiento</th>
            <th>Destino</th>
            <th>Transferencia</th>
            <th>Efectivo</th>
        </tr>
        </thead>
        <tbody>
        {% for accommodation in list %}
        <tr>
            <td>{{accommodation.ownMcpCode}} - {{accommodation.ownName}}</td>
            <td>{{(accommodation.ownDestination != null) ? accommodation.ownDestination.desName : " - "}}</td>
            <td>
                {% if accommodation.transferMethodsPayment | length > 0 %}
                    <small>Número Cuenta: <b>{{ accommodation.transferMethodsPayment[0].accountNumber }}</b></small><br/>
                    <small>Titular: <b>{{ accommodation.transferMethodsPayment[0].titular }}</b></small><br/>
                    <small>Tipo Cuenta: <b>{{ accommodation.transferMethodsPayment[0].accountType.translations[0].nomLangDescription }}</b></small><br/>
                    <a class="btn btn-success btn-mini" title="Editar" href="{{ path("mycp_edit_transfer_method_payment", {"id": accommodation.transferMethodsPayment[0].id}) }}"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-mini delete" title="Eliminar" href="{{ path("mycp_delete_transfer_method_payment", {"id": accommodation.transferMethodsPayment[0].id}) }}"><i class="fa fa-times"></i></a>
                {% else %}
                    <a class="btn btn-info btn-mini" href="{{ path("mycp_insert_transfer_method_payment", {"idAccommodation": accommodation.ownId}) }}">Adicionar</a>
                {% endif %}

            </td>
            <td>
                {% if accommodation.effectiveMethodsPayment | length > 0 %}
                    <small>Contacto: <b>{{ accommodation.effectiveMethodsPayment[0].contactName }}</b></small><br/>
                    <small>Número de identidad: <b>{{ accommodation.effectiveMethodsPayment[0].identityNumber }}</b></small><br/>
                    <a class="btn btn-success btn-mini" title="Editar" href="{{ path("mycp_edit_effective_method_payment", {"id": accommodation.effectiveMethodsPayment[0].id}) }}"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-mini delete" title="Eliminar" href="{{ path("mycp_delete_effective_method_payment", {"id": accommodation.effectiveMethodsPayment[0].id}) }}"><i class="fa fa-times"></i></a>
                {% else %}
                    <a class="btn btn-info btn-mini" href="{{ path("mycp_insert_effective_method_payment", {"idAccommodation": accommodation.ownId}) }}">Adicionar</a>
                {% endif %}
            </td>

        </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="paginator-cont span11">
{# % if filter_name ==''%}{% set filter_name='null'%}{%endif% #}
{{ simple_paginator_render('mycp_methods_payment',null,{
'container_class': 'paginator',
'previousPageText': '«',
'nextPageText': '»',
'currentClass': 'current',
'firstPageText': 'Primera',
'lastPageText': 'Última',
'route_params': {'items_per_page':items_per_page}
}) }}
</div>
    {% else %}
    <p> <div class="alert alert-block">No hay alojamientos disponibles.</div></p>
    {% endif %}
   </div>
    </div>
{% include 'mycpBundle:utils:confirmation_window.html.twig' with {'message':'¿Confirma que desea eliminar el elemento?','confirmation_action_label':'Eliminar'}%}
{% endblock %}
{% block javascripts %}
    {% javascripts
    '@mycpBundle/Resources/public/js/common_list.js'
    '@mycpBundle/Resources/public/js/bootstrap-datepicker.js'
    '@mycpBundle/Resources/public/js/bootstrap-datepicker.es.js'
    filter='?uglifyjs2'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        $('.datepicker').datepicker({
            format: 'yyyy-mm-dd',
            todayBtn: 'linked',
            autoclose: true,
            language: 'es'
        });

        function submit_filters(ev)
        {
            if(ev.keyCode==13)
            {
                action_submit();
            }
        }

        function action_submit()
        {
            var items_per_page={{items_per_page}};
            var filter_name=$('#filter_name').val();
            if(filter_name=='')filter_name='null';

            var filter_code=$('#filter_code').val();
            if(filter_code=='')filter_code='null';

            var filter_destination=$('#filter_destination').val();
            if(filter_destination=='')filter_destination='null';

            var filter_province=$('#filter_province').val();
            if(filter_province=='')filter_province='null';

            url_submit=$('#filter').attr('action');
            url_submit=url_submit+'/'+items_per_page+'/'+filter_name+'/'+filter_code+'/'+filter_destination+'/'+filter_province;
            $('#filter').attr('action',url_submit);
            $('#filter').submit();
        }
    </script>
{% endblock %}