{% block content %}
<h2>Pagos</h2>
<hr/>
    <ul class="nav nav-tabs" id="myTab">
        <li><a data-toggle="tab" href="{{ path("mycp_list_payments") }}">Pagos</a></li>
        <li class="active"><a href="#payments">Alojamientos</a></li>
    </ul>
<div class="tab-content" id="myTabContent">
