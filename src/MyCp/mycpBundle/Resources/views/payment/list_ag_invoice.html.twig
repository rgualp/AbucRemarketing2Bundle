                filter_date_from = filter_date_from.replace('/', "_");
                filter_date_from2 = filter_date_from2.replace('/', "_");
                filter_date_from = filter_date_from.replace('/', "_");
                var url = "{{ path('mycp_invoice_selection')|escape('js') }}";
