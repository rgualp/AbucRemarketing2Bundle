{% extends 'mycpBundle:layout:backend.html.twig' %}
{% block title %}Administración{% endblock %}
{% block top_body %}
<ul class="breadcrumb">
    <li><a href="{{path('mycp_backend_front')}}">Administración</a> <span class="divider">/</span></li>
    <li class="active">Comentarios</li>
</ul>
{% endblock %}
{% block content %}
<h2>Comentarios</h2>
<hr/>
<ul class="nav nav-tabs" id="myTab">
    <li class="{%if not last_added is defined%}active{%endif%}">
        {%if not last_added is defined%}
        <a data-toggle="tab" href="#comments">Comentarios</a>
        {%else%}
        <a href="{{ path('mycp_list_comments') }}">Comentarios</a>
        {%endif%}
    </li>
    <li class="{%if last_added is defined%}active{%endif%}">
        {%if last_added is defined%}
        <a data-toggle="tab" href="#comments">Nuevos Comentarios</a>
        {%else%}
        <a href="{{ path('mycp_last_comment') }}">Nuevos Comentarios</a>
        {%endif%}
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div id="comments" class="tab-pane fade active in">
        {%if not last_added is defined%}
        <a class="btn" href="{{ path('mycp_new_comment') }}"><i class="icon-plus"></i> Adicionar comentario</a>
        {%endif%}
        <br/><br/>
{% for message in app.session.flashbag.get('message_error_local') %}
        <div class="alert alert-error">{{ message }}</div>
{% endfor %}
        <form onkeypress="javascript:submit_filters(event);" id="filter" method="post" action="{{path(return_url)}}">
            <div class="well well-small">
                <div class="row-fluid">
                    <div class="span3">
                        <label>Propiedad:</label>
                        <input id="filter_ownership" value="{{filter_ownership}}" class="input-block-level" name="filter_ownership" type="text"/>
                    </div>
                    <div class="span2">
                        <label>Usuario:</label>
                        <select id="filter_user" value="{{filter_user}}" class="input-block-level" name="filter_user">
            {{ render(controller('mycpBundle:BackendUser:get_all_users', {'post': {'selected':filter_user}})) }}
                            </select>
                        </div>
                        <div class="span3">
                            <label>Palabra clave:</label>
                            <input id="filter_keyword" value="{{filter_keyword}}" class="input-block-level" name="filter_keyword" type="text"/>
                        </div>
                        <div class="span2">
                            <label>Valoración:</label>
                            <select id="filter_rate" value="{{filter_rate}}" class="input-block-level" name="filter_rate">
            {{ render(controller('mycpBundle:BackendComment:get_all_rate', {'post': {'selected':filter_rate}})) }}
                                </select>
                            </div>
                            <div class="span2">
                                <label>&nbsp;</label>
                                <div class="row-fluid">
                                    <div class="span6">
                                        <a rel="tooltip" title="Filtrar listado" href="javascript:action_submit();" class="tooltip_msg btn btn-block btn-success"><i class="icon-filter icon-white"></i></a>
                                    </div>
                                    <div class="span6">
                                        <a rel="tooltip" title="Resetear filtrado " href="{{ path(return_url) }}" class="tooltip_msg btn btn-block btn-danger"><i class="icon-remove icon-white"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
{% if comments %}
                <div class="alert">
    {% if filter_ownership ==''%}{% set filter_ownership='null'%}{%endif%}
    {% if filter_user ==''%}{% set filter_user='null'%}{%endif%}
    {% if filter_keyword ==''%}{% set filter_keyword='null'%}{%endif%}
    {% if filter_rate ==''%}{% set filter_rate='null'%}{%endif%}
    {% if sort_by ==''%}{% set sort_by='null'%}{%endif%}
                        <div class="row-fluid">
                            <div class="pull-left">
                                Mostrando del {{items_per_page * current_page - items_per_page}} al {% if items_per_page * current_page >  total_items%}{{total_items }}{% else %}{{ items_per_page * current_page }}{% endif %} de {{total_items}} registros
                            </div>
                            <div class="pull-right">
                                Mostrar:
                                <a class="{% if items_per_page == 100 %}selected{% endif %}" href="{{ path(return_url,{'items_per_page':100,'filter_ownership':filter_ownership,'filter_user':filter_user,'filter_keyword':filter_keyword,'filter_rate':filter_rate,'sort_by':sort_by})}}">100</a>
                                <a class="{% if items_per_page == 300 %}selected{% endif %}" href="{{ path(return_url,{'items_per_page':300,'filter_ownership':filter_ownership,'filter_user':filter_user,'filter_keyword':filter_keyword,'filter_rate':filter_rate,'sort_by':sort_by})}}">300</a>
                                <a class="{% if items_per_page == 500 %}selected{% endif %}" href="{{ path(return_url,{'items_per_page':500,'filter_ownership':filter_ownership,'filter_user':filter_user,'filter_keyword':filter_keyword,'filter_rate':filter_rate,'sort_by':sort_by})}}">500</a>
                                <input class="hidden" name="items_per_page" value="100">
                            </div>
                        </div>
                    </div>
        <div class="row-fluid">
                    <div class="span4"  style="margin-top: 10px">
                                        <input type="button" class="btn btn-mini btn-info btn-action-public"  onclick="actionSelected(true);" value="Publicar seleccionadas" data-url="{{path("mycp_public_selected_callback_comment")}}"/>
                                        <input type="button" class="btn btn-mini btn-warning btn-action-delete"  onclick="actionSelected(false);" value="Eliminar seleccionadas" data-url="{{path("mycp_delete_selected_callback_comment")}}"/>
                                    </div>
                                    <div class="span5">
    {% if filter_keyword ==''%}{% set filter_keyword='null'%}{%endif%}
    {{ simple_paginator_render(return_url,null,{
'container_class': 'paginator',
'previousPageText': '«',
'nextPageText': '»',
'currentClass': 'current',
'firstPageText': 'Primera',
'lastPageText': 'Última',
'route_params': {'items_per_page':items_per_page,'filter_ownership':filter_ownership,'filter_user':filter_user,'filter_keyword':filter_keyword,'filter_rate':filter_rate,'sort_by':sort_by}
}) }}
                        </div>
                <div class="span3" style="margin-top: 10px" >
                    <div class="row-fluid">
                        <div class="span4" style="margin-top: 4px; font-size: 12px">
                            Organizar:
                        </div>
                        <div class="span8">
                            <select name="sort_by" id="sort_by" onchange="javascript:action_submit()" class="input-block-level pull-right">
                                {{ render(controller('mycpBundle:BackendUtils:orderBy', {'sortBy': sort_by, 'elementToOrder': constant('\\MyCp\\mycpBundle\\Helpers\\ElementToOrder::COMMENT')})) }}
                            </select>
                        </div>
                    </div>

                </div>
            </div>

                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th colspann="2">Comentario</th>
                                </tr>
                            </thead>
                            <tbody>
    {% for comment in comments %}
                                    <tr>
                                        <td>
            {% if comment.getComPublic==0 %}
                                                <input type="checkbox" name="check_comment" class="check_comment" data-id="{{comment.comid}}"/>
            {%endif%}
                                            </td>
                                            <td nowrap="nowrap">
                                                <label class="name">{{ comment.getComUser.getUserName }}</label>
                                                <div class="rating_star" style="text-wrap: avoid">
            {% for i in 1 .. 5 %}{% if i <= comment.getComRate %}<img src="{{ asset('bundles/frontend/img/star_on.png')}}"/>{% else %}<img src="{{ asset('bundles/frontend/img/star_off.png')}}"/>{% endif %} {% endfor %}
                                                    </div>
        {% if comment.getComPublic==0%}<span class="label label-important">No publicado</span>{% else %} <span class="label label-success">Publicado</span>{% endif %}
                                                    <br/><em>{{comment.comdate |date("d/m/Y")}}</em>
                                                </td>
                                                <td>
                                                    <h5 style="margin:0">{{ comment.getComOwnership.getOwnMcpCode }}: {{comment.comownership.ownname}}</h5>
        {{ comment.getComComments }}
                                                    <div class="row-fluid text-right" style="text-align: right">
                                                        <a class="btn btn-mini" href="{{ path('mycp_edit_comment',{'id_comment':comment.getComId, 'return_url':return_url}) }}">Editar</a>
            {%if not comment.compublic%}
                                                        <a class="btn btn-mini btn-success" href="{{ path('mycp_public_comment',{'id_comment':comment.getComId, 'return_url':return_url}) }}">Publicar</a>
            {%endif%}
                                                        <button data='{{ path('mycp_delete_comment',{'id_comment':comment.getComId, 'return_url':return_url}) }}' class="btn btn-mini btn-danger delete">Eliminar</button>

                                                    </div>
                                                </td>
                                            </tr>
    {% endfor %}
                                        </tbody>
                                    </table>

                                    <div class="span5"  style="margin-top: 10px">
                                        <input type="button" class="btn btn-info btn-action-public"  onclick="actionSelected(true);" value="Publicar seleccionadas" data-url="{{path("mycp_public_selected_callback_comment")}}"/>
                                        <input type="button" class="btn btn-warning btn-action-delete"  onclick="actionSelected(false);" value="Eliminar seleccionadas" data-url="{{path("mycp_delete_selected_callback_comment")}}"/>
                                    </div>
                                    <div class="span4">
    {% if filter_keyword ==''%}{% set filter_keyword='null'%}{%endif%}
    {{ simple_paginator_render(return_url,null,{
'container_class': 'paginator',
'previousPageText': '«',
'nextPageText': '»',
'currentClass': 'current',
'firstPageText': 'Primera',
'lastPageText': 'Última',
'route_params': {'items_per_page':items_per_page,'filter_ownership':filter_ownership,'filter_user':filter_user,'filter_keyword':filter_keyword,'filter_rate':filter_rate,'sort_by':sort_by}
}) }}
                                        </div>
{% else %}
                                        <p> <div class="alert alert-block">No hay Comentarios disponibles.</div></p>
{% endif %}
                                    </div>
                                </div>
{% include 'mycpBundle:utils:confirmation_window.html.twig' with {'message':'¿Desea realizar esta acción?','confirmation_action_label':'Eliminar'}%}
{% endblock %}
{% block javascripts %}
    {% javascripts
    '@mycpBundle/Resources/public/js/common_list.js'
    filter='?uglifyjs2'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        function actionSelected(isForPublic)
        {
            var checkValues = $('input[name=check_comment]:checked').map(function() {
                return $(this).attr('data-id');
            }).get();
            if(checkValues.length == 0)
            {
                alert("Seleccione alguno de los elementos");
                return;
            }
            var url = (isForPublic) ? $(".btn-action-public").attr("data-url"):$(".btn-action-delete").attr("data-url");
            $.post(url, {
                'comments_ids': checkValues,
                'return_url': '{{return_url}}'
            }, function(data) {
                if(data !== "ERROR")
                    window.location = data;
                else
                    alert(data);
            });
        }

        function submit_filters(e)
        {
            if (e.keyCode == 13)
            {
                action_submit();
            }
        }

        function action_submit()
        {

            items_per_page ={{items_per_page}};
            filter_ownership = $('#filter_ownership').val();
            if (filter_ownership == '')
                filter_ownership = 'null';

            filter_user = $('#filter_user').val();
            if (filter_user == '')
                filter_user = 'null';

            filter_keyword = $('#filter_keyword').val();
            if (filter_keyword == '')
                filter_keyword = 'null';

            filter_rate = $('#filter_rate').val();
            if (filter_rate == '')
                filter_rate = 'null';

            sort_by = $('#sort_by').val();
            if (sort_by == '')
                sort_by = 'null';

            url_submit = $('#filter').attr('action');
            url_submit = url_submit + '/' + items_per_page + '/' + filter_ownership + '/' + filter_user + '/' + filter_keyword + '/' + filter_rate+'/'+sort_by;
            $('#filter').attr('action', url_submit);
            $('#filter').submit();
        }
    </script>
{% endblock %}
