<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>MyCasaParticular | {% block title %}{% endblock %}</title>
    <link href="{{ asset('bundles/mycp/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/mycp/css/bootstrap-responsive.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/mycp/css/custom.css') }}" rel="stylesheet" type="text/css" />
    <script src= "{{ asset('bundles/mycp/js/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/mycp/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/mycp/js/custom.js') }}" type="text/javascript"></script>
    {% block another_in_head %}{% endblock %}
</head>
<body>
<div class="container">

<div class="body">
<header>
    <img src="{{ asset('bundles/mycp/images/logo.jpg')}}"/>
    <div class="pull-right span10">
        <div class="row-fluid">
        <div class="span10">
        {% block lodging_accommodation_name %}{% endblock %}
        </div>
        <ul class="span2 nav nav-pills">
        {% if app.user.getUserUserName is defined %}
        <li class="dropdown pull-right">
            <a data-toggle="dropdown" class="dropdown-toggle" role="button" id="drop2" href="#">{{app.user.getUserUserName}} {{app.user.getUserLastName}} <b class="caret"></b></a>
            <ul aria-labelledby="drop2" role="menu" class="dropdown-menu user_menu">
                {% block user_context_menu %}
                {% set user_auth = app.user %}
                <li role="presentation"><a href="{% if user_auth.getUserRole =='ROLE_CLIENT_STAFF'%}{{ path('mycp_edit_user_staff',{'id_user':user_auth.getUserId})}}{% endif %}{% if user_auth.getUserRole =='ROLE_CLIENT_CASA'%}{{ path('mycp_edit_user_casa',{'id_user':user_auth.getUserId})}}{% endif %}{% if user_auth.getUserRole =='ROLE_CLIENT_TOURIST'%}{{ path('mycp_edit_user_tourist',{'id_user':user_auth.getUserId})}}{% endif %}{% if user_auth.getUserRole =='ROLE_CLIENT_PARTNER'%}{{ path('mycp_edit_user_partner',{'id_user':user_auth.getUserId})}}{% endif %}"><i class="icon-user"></i> Perfil de usuario</a></li>
                <li role="presentation"><a href="{{ path('backend_logout') }}"><i class="icon-off"></i> Cerrar sesi√≥n</a></li>
                {% endblock %}
            </ul>
        </li>
        {% endif %}
    </ul>
        </div>
    </div>

</header>


{% block top_body %}
{% endblock %}
{% block body %}
{% endblock %}
{% block form_actions %}
{% endblock %}
</div>
<footer>
    <a href="">MyCasaParticular.com</a> Todos los derechos reservados.
</footer>
</div>
{% block javascripts %}
{% endblock %}
</body>