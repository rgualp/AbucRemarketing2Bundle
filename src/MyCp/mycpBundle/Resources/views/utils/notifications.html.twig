{% if notifications %}
<table class="table table-hover table-striped" style="font-size: 12px">
    <thead>
    <tr>
        <th>Fecha</th>
        <th>Tipo</th>
        <th>Estado</th>
        <th>Mensaje</th>
    </tr>
    </thead>
    <tbody>
{% for notification in notifications %}
    <tr>

        <td>{{ notification.created|date("d/m/Y H:s") }}</td>
        <td>{{ notification.notificationType.translations[0].nomLangDescription }} - {{ notification.subType }}</td>
        <td>{{ notification.status.translations[0].nomLangDescription }}</td>
        <td>{{ notification.message }}</td>
    </tr>
{% endfor %}
</tbody>
</table>
{% else %}
    <p> <div class="alert alert-block">No hay notificaciones asociadas a esta reservaci√≥n.</div></p>
{% endif %}