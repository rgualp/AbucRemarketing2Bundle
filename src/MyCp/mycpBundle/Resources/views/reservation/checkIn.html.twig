{% extends 'mycpBundle:layout:backend.html.twig' %}
{% block title %}Administración{% endblock %}
{% block top_body %}
<ul class="breadcrumb">
    <li><a href="{{path('mycp_backend_front')}}">Administración</a> <span class="divider">/</span></li>
    <li class="active">Reservas</li>
</ul>
{% endblock %}
{% block content %}
<h2>Check-in</h2>
<hr/>
<ul class="nav nav-tabs" id="myTab">
    <li class=""><a href="{{ path('mycp_list_reservations')}}">Reservas</a></li>
    <li class=""><a href="{{ path('mycp_list_reservations_user') }}">Clientes</a></li>
    <li class=""><a href="{{ path('mycp_list_reservations_booking') }}">Booking</a></li>
    <li class="active"><a data-toggle="tab" href="#checkin">Check-in</a></li>
</ul>
    <div class="tab-content" id="myTabContent">
        <div id="reservas" class="tab-pane fade active in">

            {% for message in app.session.flashbag.get('message_error_local') %}
            <div class="alert alert-error">{{ message }}</div>
            {% endfor %}
            <form onkeypress="javascript:submit_filters(event);" id="filter" method="post" action="{{path('mycp_list_reservations_checkin')}}">
                <div class="well well-small">
                    <div class="row-fluid">
                        <div class="span3"><label>Fecha Check-in:</label>
                            <input id="filter_date_from" name="filter_date_from" type="text" class="datepicker input-block-level" value="{{ filter_date_from }}"/>
                        </div>

                        <div class="span2">
                            <label>&nbsp;</label>
                            <div class="row-fluid">
                                <div class="span6">
                                    <a rel="tooltip" title="Filtrar listado" href="javascript:action_submit();" class="tooltip_msg btn btn-block btn-success"><i class="icon-filter icon-white"></i></a>
                                </div>
                                <div class="span6">
                                    <a rel="tooltip" title="Resetear filtrado " href="{{ path('mycp_list_reservations_checkin') }}" class="tooltip_msg btn btn-block btn-danger"><i class="icon-remove icon-white"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            {% if list %}
            </form>
            <table class="table table-hover table-striped" style="font-size: 12px">
                <thead>
                <tr>
                    <th><h4>Día {{ filter_date_from }}</h4></th>
                </tr>
                </thead>
                <tbody>
                {% set flag=0 %}
                {% for check in list %}
                <tr>
                    <td>
                        <table style="width:100%" class="stylessTable">
                            <tr>
                                <td style="background: #fff"><b>Reserva:</b> CAS.{{check[0].gen_res_id}}</td>
                                <td style="background: #fff"><b>Fecha:</b> {{check[0].gen_res_date |date("d/m/Y")}}</td>
                                <td style="background: #fff"><b>Habitaciones:</b> {{check[1]}}</td>
                                <td style="background: #fff"><b>Huéspedes:</b> {{check[3]+check[5]}}</td>
                                <td style="background: #fff"><b>Pagado:</b> {{check[7]|date("d/m/Y")}}</td>
                                <td style="background: #fff"><b>Noches:</b> 89</td>
                                <td style="background: #fff"><b>Pago en casa:</b> {{ check[0].gen_res_total_in_site - check[0].gen_res_total_in_site * check[0].gen_res_own_id.own_commission_percent /100}} CUC</td>
                            </tr>
                            <tr>
                                <td style="background: #fff"> <b>Propiedad:</b> {{check[0].gen_res_own_id.own_mcp_code}}</td>
                                <td style="background: #fff" colspan="3"> <b>Propietario(s):</b> {{check[0].gen_res_own_id.own_homeowner_1}} {%if check[0].gen_res_own_id.own_homeowner_2%} / {{check[0].gen_res_own_id.own_homeowner_2}}{%endif%}</td>
                                <td style="background: #fff" colspan="3"> <b>Teléfonos(s):</b> {%if check[0].gen_res_own_id.own_phone_number%} (+53) {{check[0].gen_res_own_id.own_address_province.prov_phone_code}} {{check[0].gen_res_own_id.own_phone_number}} {%endif%}
                                {%if check[0].gen_res_own_id.own_phone_number and check[0].gen_res_own_id.own_mobile_number%} / {%endif%}
                                {{check[0].gen_res_own_id.own_mobile_number}}
                                </td>
                            </tr>
                            <tr>
                                <td style="background: #fff" colspan="2"> <b>Cliente:</b> {{check[0].gen_res_user_id.user_user_name}} {{check[0].gen_res_user_id.user_last_name}}</td>
                                <td style="background: #fff" colspan="4"> <b>País:</b> {{check[0].gen_res_user_id.user_country.co_name}}</td>
                                <td style="background: #fff; text-align: right"><a class="btn btn-mini" href="{{ path('mycp_details_reservation',{'id_reservation':check[0].gen_res_id}) }}">Detalles</a></td>
                            </tr>
                        </table>
                    </td>


                </tr>
                {% set flag = flag + 1%}
                {% endfor %}
                </tbody>
            </table>
            {% else %}
            <p> <div class="alert alert-block">No hay check-ins disponibles.</div></p>
            {% endif %}
        </div>

    </div>
<link href="{{ asset('bundles/mycp/css/datepicker.css') }}" rel="stylesheet" type="text/css" />
<script src="{{ asset('bundles/mycp/js/bootstrap-datepicker.js') }}" type="text/javascript"></script>
<script type="text/javascript" src="{{ asset('bundles/mycp/js/bootstrap-datepicker.es.js') }}" charset="UTF-8"></script>

{% endblock %}
{% block javascripts %}
<script type="text/javascript" src="{{ asset('bundles/mycp/js/common_list.js') }}"></script>
<script type="text/javascript">
    $('.datepicker').datepicker({
        format: 'dd/mm/yyyy',
        todayBtn: 'linked',
        language: 'es'
    });

    function submit_filters(ev)
    {
        if(ev.keyCode==13)
        {
            action_submit();
        }
    }

    function action_submit()
    {
        filter_date_from=$('#filter_date_from').val();
        filter_date_from=filter_date_from.replace('/',"_");
        filter_date_from=filter_date_from.replace('/',"_");
        if(filter_date_from=='')filter_date_from='null';

        url_submit=$('#filter').attr('action');
        url_submit=url_submit+'/'+filter_date_from;
        $('#filter').attr('action',url_submit);
        $('#filter').submit();
    }

</script>
{% endblock %}
