                $(window).trigger("scroll");
            })

            old_class='';
            $('.home_cat .col-md-4 div').mouseover(function(){
                elem=$('.'+$(this).attr('data'));
                old_class= elem.attr('class');
                elem.addClass('hover');
            })
            $('.home_cat .col-md-4 div').mouseout(function(){
                elem=$('.'+$(this).attr('data'));
                elem.attr('class',old_class);
            });
        }
    </script>
