<div id="carousel-example-2z" class="carousel slide carousel-fade" style="    width: 100%;" >




    <!--Slides-->
    <div class="carousel-inner" role="listbox" >


        {% set flag_item = 0 %}
        {% for i in 1..4 %}

            <div class="carousel-item {% if i == 1 %}active{% endif %}">
                <div class="view" style="display: flex;">
                    {% for e in 1..3%}
                        {% if popular_places[flag_item] is defined %}
                            {{ include('FrontEndBundle:destination:homeItemDestination.html.twig',{'destination_id': popular_places[flag_item]['destination']['des_id'],
                                'destination_name':popular_places[flag_item]['destination']['des_name'],
                                'url':popular_places[flag_item]['url'],
                                'is_in_favorite': popular_places[flag_item]['destination']['is_in_favorites'],
                                'photo': popular_places[flag_item]['destination']['photo'],
                                'localization': popular_places[flag_item]['destination']['municipality_name'] ~ ' / ' ~ popular_places[flag_item]['destination']['province_name'],
                                'statistics': {'total': popular_places[flag_item]['destination']['count_ownership'], 'minimum_prize': popular_places[flag_item]['destination']['min_price']},
                                'list_preffix': 'popular_places'}) }}
                            {% set flag_item = flag_item + 1 %}
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="row text-right" style="float: right;    margin-right: 10%;font-size: x-large;">
                    <a href="{{path("frontend_list_destinations")}}">
                        <small>{{'RESERVATION_CONFIRM_DESTINATION_MORE' | trans | lower}} <i class="fa fa-plus-circle"></i></small>
                    </a>
                </div>
            </div>
        {% else %}
            <div class="item active">
                <div class="alert alert-info" style="margin: 0;">{{"EMPTY_LIST" | trans}}</div>
            </div>
        {% endfor %}
        <!--/Third slide-->

    </div>
    <!--/.Slides-->

    <!--Controls-->
    <a class="carousel-control-prev" href="#carousel-example-2z" style="    width: 0%;" role="button" data-slide="prev">
        <span class="fa fa-arrow-circle-left" aria-hidden="true" style="    font-size: 40px;
    color: black;"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel-example-2z" style=" width: 0%;" role="button" data-slide="next">
        <span class="fa fa-arrow-circle-right" aria-hidden="true" style="    font-size: 40px;
    color: black;"></span>
        <span class="sr-only">Next</span>
    </a>
    <!--/.Controls-->

</div>



