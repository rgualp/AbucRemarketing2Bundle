                    {% if reservation.ownResGenResId.completeReservationMode %}
                        {{ "Propiedad completa" | trans }}, {{ reservation.ownResGenResId.genResOwnId.ownRoomsTotal }} {{ "ROOMS" | trans }}
                    {% else %}
                        {{reservation.ownResRoomType|trans}}
