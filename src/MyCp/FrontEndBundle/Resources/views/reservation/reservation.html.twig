{% for reservation in reservations %}
    {% set accommodation = reservation.ownResGenResId.genResOwnId %}
<div class="item">

    <table cellpadding="15" class="full-width">
        <tbody><tr>
            <td class="date"><span>{{ loop.index }}</span></td>
            <td>
