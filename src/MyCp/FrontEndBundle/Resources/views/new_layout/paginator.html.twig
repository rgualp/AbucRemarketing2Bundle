<!--Pagination-->
<nav class="d-flex justify-content-center wow fadeIn">
<ul class="{{ container_class }}">


    <!-- PREVIOUS -->
    {% if currentPage > 1 %}

        {% set rParams =  {'page': previousPage, 'paginatorId': id} | merge(routeParams) %}
        <li class="page-item">
            <a class="page-link" href="{{ path(route, rParams) }}" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>

    {% else %}
        <li class="page-item disabled">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>

    {% endif %}
    <!-- NUMBERS -->
    {% for page in minPage..maxPage %}
        {% if page == currentPage %}
            <li class="{{ currentClass }}">
                <a class="page-link" href="#">{{ page }}
                    <span class="sr-only">(current)</span>
                </a>

            </li>
        {% else %}
            {% set rParams =  {'page': page, 'paginatorId': id} | merge(routeParams) %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, rParams) }}">{{ page }}</a>

            </li>
        {% endif %}
    {% endfor %}

    <!-- NEXT -->
    {% if currentPage < lastPage %}
        {% set rParams =  {'page': nextPage, 'paginatorId': id} | merge(routeParams) %}
        <li class="page-item">
            <a class="page-link" href="{{ path(route, rParams) }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>

    {% else %}
        <li class="page-item disabled">
            <a class="page-link" href="{{ path(route, rParams) }}" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>

    {% endif %}


</ul>


</nav>
