{%if list | length%}
<a name="top"></a>
{%if in_searcher is defined and destination_name is defined and destination_name != ""%}
    <div id="big_map" style="width:100%;height: 500px;" class="google-maps"
     data-resized-url="{{path("frontend_map_resized_ownership_callback", {'in_searcher': 'false', 'destination_name': destination_name})}}"
     data-total-translate="{{"TOTAL" | trans}}"
     data-icon="{{ app.request.getSchemeAndHttpHost() ~ asset('bundles/frontend/img/map_marker.png') }}"></div>
{%else%}
<div id="big_map" style="width:100%;height: 500px;" class="google-maps"
     data-resized-url="{{path("frontend_map_resized_ownership_callback", {'in_searcher': 'true', 'destination_name': 'null'})}}"
     data-total-translate="{{"TOTAL" | trans}}"
     data-icon="{{ app.request.getSchemeAndHttpHost() ~ asset('bundles/frontend/img/map_marker.png') }}"></div>
{%endif%}

<div id="map_resized_results">
    {%if in_searcher is defined and destination_name is defined%}
        {{ include('FrontEndBundle:ownership:searchListOwnership.html.twig',
                        {'list': list,
                         'type': 'map',
                         'in_searcher': in_searcher,
                         'destination_name' : destination_name,
                         'show_paginator': show_paginator}) }}
    {%else%}
{{ include('FrontEndBundle:ownership:searchListOwnership.html.twig',
                        {'list': list,
                         'type': 'map'}) }}
        {%endif%}
</div>
{%else%}
        <div class="alert a alert-info">{{"EMPTY_LIST" | trans}}</div>
{%endif%}

