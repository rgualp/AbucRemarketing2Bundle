{% block metas %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots">
    <meta name="description"
          content="{{ ownership.owntype  | trans }} {{ "IN" | trans }} {{ ownership.ownAddressProvince }}: {{ ownership.ownname }}.
                {% if rooms is defined and rooms | length %}
                    {{ rooms | length }} {% if rooms | length == 1 %} {{ "ROOM_SINGULAR" | trans }}{% else %} {{ "ROOM_PLURAL" | trans }}{% endif %}.
                {% endif %}
                {% if ownership['OwnInmediateBooking2'] %}
                 {{ 'IMMEDIATE_BOOKING'|trans }}
                {% elseif ownership['OwnInmediateBooking'] %}
                 {{ 'quick_bookinhg'|trans }}
                {% endif %}">

    {#<meta name="keywords" content="{{ ownership.owntype | trans }} {{ ownership.ownaddressmunicipality }} {{ ownership.ownAddressProvince }} Cuba {{ ownership.ownname }}">#}

    {% set page = app.request.query.get('page') %}
    <link rel="canonical"
          href="{{ url("frontend_details_ownership", {'own_name':ownership.ownname| urlNormalize, "page": page, "locale": locale}) }}"/>

    {% for lang in allLanguages %}

            <link rel="alternate" hreflang="{{ langCountry[lang.langCode|lower] }}"
                  href="{{ url("frontend_details_ownership", {'own_name':ownership.ownname| urlNormalize, "page": page, "locale": lang.langCode | lower}) }}"/>
      
    {% endfor %}

    {% set page = (page == "" or page == 0)? 1: page %}
    {% set next = page + 1 %}
    {% set prev = page - 1 %}
    {% if page == "" or page == 1 %}
        <link rel="next"
              href="{{ url("frontend_details_ownership", {'own_name':ownership.ownname| urlNormalize, "page": next}) }}"/>
    {% elseif page > 1 and page < lastPage %}
        <link rel="next"
              href="{{ url("frontend_details_ownership", {'own_name':ownership.ownname| urlNormalize, "page": next}) }}"/>
        <link rel="prev"
              href="{{ url("frontend_details_ownership", {'own_name':ownership.ownname|urlNormalize, "page": prev}) }}"/>
    {% elseif page == lastPage %}
        <link rel="prev"
              href="{{ url("frontend_details_ownership", {'own_name':ownership.ownname| urlNormalize, "page": prev}) }}"/>
    {% endif %}
