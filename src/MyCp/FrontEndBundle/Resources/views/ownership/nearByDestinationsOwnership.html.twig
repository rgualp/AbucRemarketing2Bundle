{%if destinations | length%}
<div class="carousel slide carousel-mini" id="destinationCarousel">
                <h4 class="carousel-title">{{"VISIT_ANOTHER_DESTINATIONS" | trans}}</h4>
                <div class="carousel-inner" role="listbox">
                    {%set counter = 0%}
                    {%for dest in destinations%}
                    <div class="carousel-item {%if counter == 0%}active{%endif%}">
                        <div class="row">
                            <div class="col">
                                <a href="{{ path('frontend_details_destination',{'destination_name':dest.des_name|lower|replace(' ','-')}) }}">
                                <img src="{{ asset("uploads/destinationImages/thumbnails/" ~ dest.photo)}}" class="thumbnail full-width" title="{{dest.des_name}}" alt="{{dest.des_name}}">
                                </a>
                            </div>
                            <div class="col"><b>
                            <a href="{{ path('frontend_details_destination',{'destination_name':dest.des_name|lower|replace(' ','-')}) }}">
                            {{dest.des_name}}
                            </a></b><br/>
                            {{"FROM_PRICES" | trans | lower}} {{dest.min_price | price }} {{"BYNIGHT" | trans}}<br/>
                            {{(dest.desc_brief != null or dest.desc_brief != "") ? (dest.desc_brief | slice(0,50) | striptags) : ""}}            
                            {%if (dest.desc_brief != null and dest.desc_brief | length > 50)%}...{%endif%}   
                           </div>
                        </div>
                    </div>
                        {%set counter = counter + 1%}
                    {%endfor%}
                </div>

                <a role="button" data-slide="prev" href="#destinationCarousel" class="left carousel-control carousel-control-prev">‹</a>
                <a role="button" data-slide="next" href="#destinationCarousel" class="right carousel-control carousel-control-prev" style="right: 5px;">›</a>
            </div>
{%endif%}
