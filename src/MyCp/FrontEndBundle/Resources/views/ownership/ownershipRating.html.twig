<h3 class="caecilia-roman text-center">{{"RATINGS_TEXT_1" | trans}} <br/>{{"RATINGS_TEXT_2" | trans}}</h3>
            <div class="text-center" id="_aggregateRating5" itemprop="aggregateRating" itemscope itemtype="http://schema.org/AggregateRating" itemref="_ratingCount7">
                <meta itemprop="ratingValue" content="{{ ownership.rating }}">
                <meta itemprop="bestRating" content="5">
                <meta itemprop="worstRating" content="0">
                {%if ownership.rating > 0%}
    {%for i in 1..ownership.rating%}
      <img src="{{asset('bundles/frontend/img/icons/pixel.gif')}}" class="icon-medium star-orange-icon-2" alt="{{"Pixel" | trans}}"/>
    {%endfor%}
  {%endif%}

  {%if ownership.rating < 5%}
    {%for i in 1..(5-ownership.rating)%}
       <img src="{{asset('bundles/frontend/img/icons/pixel.gif')}}" class="icon-medium star-orange-off-icon-2" alt="{{"Pixel" | trans}}"/>
    {%endfor%}
  {%endif%}
            </div>
