
<div class="col-sm-4">
<div class="thumbnail">
        <a title="{{ "DESTINATIONS"|trans }} {{ destination_name }}" href="{{ path('frontend_details_destination',{'destination_name':destination_name|lower|replace(' ','-')}) }}">
            {% set url_image = asset("uploads/destinationImages/" ~ photo) %}
            <img alt="{{ "DESTINATIONS"|trans }} {{ destination_name }}" class="lazyload thumbnail full-width" data-src="{{ url_image | apply_filter('my_thumb_destination') }}" src="{{ asset('bundles/frontend/img/nophoto-transp.png') }}" />

            {#<img alt="{{ "DESTINATIONS"|trans }} {{ destination_name }}" src="{{ asset('uploads/destinationImages/thumbnails/' ~ photo)}}"/>#}
            {#<noscript><img class="nolazy" src="{{ asset('uploads/destinationImages/thumbnails/' ~ photo)}}" alt="{{"Thumbnails" | trans}}"></noscript>#}
        </a>
    </div>
    <a href="{{ path('frontend_details_destination',{'destination_name':destination_name|lower|replace(' ','-')}) }}">
    <h2 class="h-blue">
        {{destination_name | title | slice(0, 27)}}
        {%if destination_name | length > 27%}...{%endif%}
    </h2>
    </a>
    <div class="no-margin">
        <table>
            <tr>
                <td>
                    <small>{{localization}}</small>
                </td>
                <td>
                    <div class="favorite">
                       {{ include('FrontEndBundle:favorite:itemFavorite.html.twig',
                        {'is_in_favorite': is_in_favorite,
                         'favorite_type': 'destination',
                         'element_id':destination_id,
                         'list_preffix' : list_preffix,
                       'include_text': false
                         }) }}
                    </div>
                </td>
            </tr>
        </table>
        <div class="h-blue h-blue-2" style="line-height:1.1">{{"FROM_PRICES" | trans | lower}} {{ statistics['minimum_prize'] | price}}</div>
    </div>
</div>





