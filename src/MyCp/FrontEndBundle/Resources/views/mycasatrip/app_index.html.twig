{% extends 'FrontEndBundle:layout:base.html.twig' %}
{% block title %}
    {{"MyCasa Trip APP" | trans}}
{% endblock %}

{% block content_nav_top_body %}
   {# {{(("MyCasa Trip" | upper) ~ "_CONTENT") | trans}}#}
{% endblock %}

{% block breadcrumbs %}
{% endblock %}

{% block include_javascripts_and_css %}
    <style>
        .paraf {
            font-family: "Myriad Pro";
            font-size: 18px;
        }

        .paraf_text {
            font-size: 18px;
            color: #1d1d1b;
        }

        h1,h2,h3,h4,h5 {
            font-family: "CaeciliaRoman";
            font-weight: 100;
        }

        .btn-green, .btn-green:hover, .btn-green:focus {
            background-color: #a1cb37;
            color: white;
            font-size: 16px;
            padding: 15px 20px;
            box-shadow: none;
            border-radius: 10px;
        }

        p>a, p>a:hover {
            color:#095075;
        }

        @media (max-width: 991px) {
            .text_center{
                text-align: center;
            }
        }
    </style>
{% endblock %}

{% block big_banner %}
    <div style="width: 100%">
        {#<h2 style="color: #095075;text-align: center;position: absolute;left:35%">{{ 'Descarga App My Casa Trip'|trans }}</h2>#}
        <img src="{{ asset('bundles/frontend/img/mycasatrip/b2_' ~ app.request.locale ~ '.png') }}" style="width: 100%" alt="{{"MyCp" | trans}}">
    </div>
{% endblock %}

