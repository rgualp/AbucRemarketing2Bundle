            $("#FacebookLoginType_email").val(email);
            $("#FacebookLoginType_lastName").val(lastName);
            $("#FacebookLoginType_gender").val(gender);

            $("#continueAfterLogin").removeClass("hide").fadeIn();

            $("#status")
                    .html("Thanks for logging in, " + response.name + "!")
                    .removeClass('hide')
                    .fadeIn();
        });
    }
</script>
