<script>
    function statusChangeCallback(response) {

        if (response.status === 'connected') {
            loginSuccessful();
        } else if (response.status === 'not_authorized') {
            document.getElementById('status').innerHTML = 'Please log into this app.';
        } else {
            document.getElementById('status').innerHTML = 'Please log into Facebook.';
        }
    }

    function checkLoginState() {
        FB.getLoginStatus(function (response) {
            statusChangeCallback(response);
        });
    }

    window.fbAsyncInit = function() {
        FB.init({
            appId      : '{{ fb_app_id }}',
            xfbml      : true,
            version    : 'v2.2'
        });
    };

    (function(d, s, id){
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {return;}
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));


    function loginSuccessful() {

        //hide all non-facebook related forms
        /*$(".hidden-fb-auth").hide();
        $(".btn-fb-login").hide();*/
        $(".hidden-fb-auth *").attr("disabled", "disabled").off('click');
        $(".btn-fb-login").attr("disabled", "disabled").off('click');
        $(".fb-login-form").css("padding-top", 0);

        FB.api('/me', function (response) {
            var name = response.name;
            var email = response.email;
            var lastName = response.last_name;
            var gender = response.gender;
            var locale = response.locale;
            var language=locale.split('_')[0];
            //ver si es asi como viene
            $("#FacebookLoginType_name").val(name);
            $("#FacebookLoginType_email").val(email);
            $("#FacebookLoginType_lastName").val(lastName);
            $("#FacebookLoginType_gender").val(gender);
            $("#FacebookLoginType_language").val(language);
            console.log(response);
          //  $("#FacebookLoginType_country").val(city);
            data={
                email: email
            };
            $.ajax({
                type: "POST",
                url: "{{ path('check_email') }}",
                data: data,
                success: function(data){
                    $("#continueAfterLogin").removeClass("hide").fadeIn();
                    $("#facebookTitle").removeClass("hide").fadeIn();
                 if (data['exists']==false){
                     $("#status")
                             .html('{{ "FACEBOOK_SECOND_STEP" | trans }}')
                             .removeClass('hide')
                             .fadeIn();
                  //alert(true);
                     $("#FacebookLoginType_country").removeClass('hide').fadeIn();
                     $("#FacebookLoginType_country").prev().removeClass('hide').fadeIn();
                     $("#FacebookLoginType_name").removeClass('hide').fadeIn();
                     $("#FacebookLoginType_name").prev().removeClass('hide').fadeIn();
                     $("#FacebookLoginType_lastName").removeClass('hide').fadeIn();
                     $("#FacebookLoginType_lastName").prev().removeClass('hide').fadeIn();
                     $("#FacebookLoginType_email").removeClass('hide').fadeIn();
                     $("#FacebookLoginType_email").prev().removeClass('hide').fadeIn();

                     $("#emailRow").removeClass('hide').fadeIn();
                     $("#countryRow").removeClass('hide').fadeIn();
                 }
                    else{
                     $("#emailRow").addClass('hide');
                     $("#countryRow").addClass('hide');
                 }
                 //
                }
            });


        });
    }
</script>
