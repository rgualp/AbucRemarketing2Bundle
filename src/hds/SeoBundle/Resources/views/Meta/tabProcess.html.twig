{% extends 'mycpBundle:layout:backend.html.twig' %}

{% block title %}{{ "Meta" | trans }}{% endblock title %}

{% block content %}
    <h2>{{ obj.id? 'Editando meta':'Nueva meta' }}</h2>
    <hr/>

    <form id="form_process_id" class="form-horizontal" action="{{ obj.id?path('hdsseo_tab_edit'):path('hdsseo_tab_new') }}" method="post">

        {{ form_widget(form._token) }}

        <input id="id_id" name="id" type="hidden" class="form-control" value="{{ obj.id }}">

        <div class="row-fluid">
            <label class="span1 control-label">{{ 'Nombre' | trans }}</label>
            <div class="span11">
                {{ form_widget(form.name, { 'attr': {'style':'width:60%', 'maxlength':'150', 'placeholder':'Nombre'} }) }}
            </div>
        </div>

        <div class="row-fluid">
            <label class="span1 control-label">{{ 'Descripción' | trans }}</label>
            <div class="span11">
                {{ form_widget(form.decription, { 'attr': {'style':'width:60%', 'maxlength':'150', 'placeholder':'Descripción'} }) }}
            </div>
        </div>


        <div>
            <div class="btn-group pull-right m-t-n-xs"><button type="submit" class="btn btn-success"><i class="fa fa-save"></i> {{ 'Guardar' | trans }}</button></div>
            <div class="btn-group pull-right m-t-n-xs" style="margin-right: 1%;"><a class="btn" href="{{path('hdsseo_tab_list')}}"><i class=""></i> Cancelar</a>&nbsp;</div>
        </div>

    </form>

{% endblock content %}