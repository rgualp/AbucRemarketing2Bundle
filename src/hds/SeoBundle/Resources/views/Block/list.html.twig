{% extends 'mycpBundle:layout:backend.html.twig' %}

{% block title %}{{ "Blocks Seo" | trans }}{% endblock title %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    '@SeoBundle/Resources/public/js/custom.js'
    filter='?uglifyjs2'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        $('.btn_edit_block').on('click', function(){

            var btn= $(this);
            var id= btn.data('id');
            var locale= $('#locale_id'+id).val();
            var url = '{{ path('hdsseo_block_edit') }}';
            var data={
                id: id,
                locale: locale
            };
            gotoUrl(url, data);
        });
    </script>

{% endblock javascripts %}

{% block content %}
<h2>Bloques Seo</h2>
<hr/>
<a class="btn" href="{{path('hdsseo_block_new')}}"><i class="icon-plus"></i> Adicionar bloque seo</a>&nbsp;
<br/><br/>
{% for message in app.session.flashbag.get('message_error_local') %}
    <div class="alert alert-error">{{ message }}</div>
{% endfor %}
{% for message in app.session.flashbag.get('message_success') %}
    <div class="alert alert-success">{{ message }}</div>
{% endfor %}
{% for message in app.session.flashbag.get('message_warning') %}
    <div class="alert alert-warning">{{ message }}</div>
{% endfor %}
{% if blocks %}
<div class="alert">
    <div class="row-fluid">
        <div class="pull-left">
            Mostrando del {{items_per_page * current_page - items_per_page}} al {% if items_per_page * current_page >  total_items%}{{total_items }}{% else %}{{ items_per_page * current_page }}{% endif %} de {{total_items}} registros
        </div>
        <div class="pull-right">
            Mostrar:
            <a class="{% if items_per_page == 10 %}selected{% endif %}" href="{{ path('hdsseo_block_list',{'items_per_page':10})}}">10</a>
            <a class="{% if items_per_page == 20 %}selected{% endif %}" href="{{ path('hdsseo_block_list',{'items_per_page':20})}}">20</a>
            <a class="{% if items_per_page == 50 %}selected{% endif %}" href="{{ path('hdsseo_block_list',{'items_per_page':50})}}">50</a>
            <a class="{% if items_per_page == 100 %}selected{% endif %}" href="{{ path('hdsseo_block_list',{'items_per_page':100})}}">100</a>
        </div>


    </div>
</div>

<div class="paginator-cont span11">
    {{ simple_paginator_render('hdsseo_block_list',null,{
    'container_class': 'paginator',
    'previousPageText': '«',
    'nextPageText': '»',
    'currentClass': 'current',
    'firstPageText': 'Primera',
    'lastPageText': 'Última',
    'route_params': {'items_per_page':items_per_page}
}) }}
</div>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Activo</th>
        <th>Nombre</th>
        <th>Localización</th>
        <th>Idioma</th>
        <th style="text-align: right">Acciones</th>
    </tr>
    </thead>
    <tbody>
    {% for block in blocks %}
    <tr>
        <td>{{ block.isActive? '<span class="label label-success">Activo</span>': '<span class="label label-important">No activo</span>' }}</td>
        <td>{{ block.name }}</td>
        <td>{{ block.location }}</td>
        <td>
            <select id="locale_id{{ block.id }}" name="locale_name{{ block.id }}">
            {% for language in languages %}
            <option value="{{ language.langCode }}">{{ language.langName }}</option>
            {% endfor %}
            </select>
        </td>
        <td style="text-align: right">
            <a class="btn btn-mini btn_edit_block" data-id="{{ block.id }}">Editar</a>
            <a class="btn btn-mini btn-danger delete" onclick="gotoUrl('{{ path('hdsseo_block_delete') }}', {id:{{ block.id }}})">Eliminar</a>

        </td>
    </tr>
{% endfor %}
    </tbody>
</table>
<div class="paginator-cont span11">
    {{ simple_paginator_render('hdsseo_block_list',null,{
    'container_class': 'paginator',
    'previousPageText': '«',
    'nextPageText': '»',
    'currentClass': 'current',
    'firstPageText': 'Primera',
    'lastPageText': 'Última',
    'route_params': {'items_per_page':items_per_page}
}) }}
</div>
    {% else %}
    <p> <div class="alert alert-block">No hay bloques disponibles.</div></p>
    {% endif %}

{% endblock content %}